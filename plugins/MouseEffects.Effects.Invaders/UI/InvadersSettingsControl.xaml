<UserControl x:Class="MouseEffects.Effects.Invaders.UI.InvadersSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="350">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="SectionStyle">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,12,0,8"/>
            <Setter Property="Foreground" Value="#FF00AAFF"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <TextBlock Text="Defend against waves of neon space invaders with rockets from your cursor"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,8"/>

        <!-- Score Display -->
        <Border Background="#22FFFFFF" CornerRadius="4" Padding="8" Margin="0,8,0,0">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="SCORE: " FontWeight="Bold" Foreground="#FF00FF00"/>
                            <TextBlock x:Name="ScoreDisplay" Text="0" FontWeight="Bold" Foreground="#FFFFFF00" FontSize="16"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="PPM: " FontWeight="Bold" Foreground="#FFFFCC00" FontSize="12"/>
                            <TextBlock x:Name="PpmDisplay" Text="0" FontWeight="Bold" Foreground="#FFFFCC00" FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="TIME: " FontWeight="Bold" Foreground="#FF00CCFF" FontSize="12"/>
                            <TextBlock x:Name="TimerDisplay" Text="00:00" FontWeight="Bold" Foreground="#FF00CCFF" FontSize="12"/>
                            <TextBlock Text=" / " Foreground="#FF00CCFF" FontSize="12"/>
                            <TextBlock x:Name="TimerDurationDisplay" Text="01:30" Foreground="#FF00CCFF" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                    <Button x:Name="ResetButton" Grid.Column="1" Content="RESET"
                            VerticalAlignment="Center" Padding="12,6"
                            Background="#FF2266" Foreground="White" FontWeight="Bold"
                            Click="ResetButton_Click" ToolTip="Reset score and start timer"/>
                </Grid>
                <CheckBox x:Name="EnableResetHotkeyCheckBox" Content="Reset Hotkey (Alt+Shift+R)"
                          Margin="0,8,0,0" FontSize="11"
                          IsChecked="False" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"
                          ToolTip="Enable Alt+Shift+R to reset and restart the game"/>
            </StackPanel>
        </Border>

        <!-- Settings Panel -->
        <StackPanel Margin="0,8,0,0">

            <!-- ========== ROCKET SETTINGS ========== -->
            <TextBlock Text="ROCKET SETTINGS" Style="{StaticResource SectionStyle}"/>

            <CheckBox x:Name="LeftClickCheckBox" Content="Spawn on Left Click" Margin="0,4,0,4"
                      IsChecked="True" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"/>
            <CheckBox x:Name="RightClickCheckBox" Content="Spawn on Right Click" Margin="0,0,0,4"
                      IsChecked="False" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"/>
            <CheckBox x:Name="SpawnOnMoveCheckBox" Content="Spawn on Move" Margin="0,0,0,4"
                      IsChecked="False" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"/>

            <TextBlock Text="Move Spawn Distance (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MoveSpawnDistanceSlider" Minimum="20" Maximum="300" Value="80"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="MoveSpawnDistanceValue" Text="80" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Rocket Speed (px/sec)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RocketSpeedSlider" Minimum="200" Maximum="1500" Value="600"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="RocketSpeedValue" Text="600" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Rocket Size (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RocketSizeSlider" Minimum="4" Maximum="20" Value="8"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="RocketSizeValue" Text="8" Opacity="0.7" FontSize="11"/>

            <CheckBox x:Name="RocketRainbowCheckBox" Content="Rocket Rainbow Mode" Margin="0,8,0,4"
                      IsChecked="True" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"/>

            <TextBlock Text="Rocket Color" Style="{StaticResource LabelStyle}"/>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <Border x:Name="RocketColorPreview" Width="24" Height="24" BorderThickness="1"
                        BorderBrush="Gray" Background="#00FF80" Margin="0,0,8,0"/>
                <Button x:Name="RocketColorButton" Content="Pick Color..." Click="RocketColorButton_Click"/>
            </StackPanel>

            <!-- ========== INVADER SETTINGS ========== -->
            <TextBlock Text="INVADER SETTINGS" Style="{StaticResource SectionStyle}"/>

            <TextBlock Text="Spawn Rate (sec)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SpawnRateSlider" Minimum="0.2" Maximum="5" Value="1.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="SpawnRateValue" Text="1.5" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Min Speed (px/sec)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="InvaderMinSpeedSlider" Minimum="10" Maximum="300" Value="50"
                    Style="{StaticResource SliderStyle}" ValueChanged="InvaderMinSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="InvaderMinSpeedValue" Text="50" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Max Speed (px/sec)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="InvaderMaxSpeedSlider" Minimum="50" Maximum="500" Value="150"
                    Style="{StaticResource SliderStyle}" ValueChanged="InvaderMaxSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="InvaderMaxSpeedValue" Text="150" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Big Invader Size (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="BigSizeSlider" Minimum="20" Maximum="100" Value="48"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="BigSizeValue" Text="48" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Medium Size (% of Big)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MediumSizeSlider" Minimum="0.3" Maximum="0.8" Value="0.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="MediumSizeValue" Text="50%" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Small Size (% of Big)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SmallSizeSlider" Minimum="0.1" Maximum="0.5" Value="0.25"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="SmallSizeValue" Text="25%" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Max Active Invaders" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxInvadersSlider" Minimum="5" Maximum="100" Value="20"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"
                    IsSnapToTickEnabled="True" TickFrequency="5"/>
            <TextBlock x:Name="MaxInvadersValue" Text="20" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Descent Speed (px/sec)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="DescentSpeedSlider" Minimum="5" Maximum="100" Value="30"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="DescentSpeedValue" Text="30" Opacity="0.7" FontSize="11"/>

            <!-- Invader Colors -->
            <TextBlock Text="Invader Colors" Style="{StaticResource LabelStyle}"/>
            <Grid Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,4,0">
                    <TextBlock Text="Small" FontSize="10" Opacity="0.7" HorizontalAlignment="Center"/>
                    <Border x:Name="SmallColorPreview" Width="32" Height="24" BorderThickness="1"
                            BorderBrush="Gray" Background="#FF33CC" HorizontalAlignment="Center" Cursor="Hand"
                            MouseLeftButtonUp="SmallColorPreview_Click"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="2,0,2,0">
                    <TextBlock Text="Medium" FontSize="10" Opacity="0.7" HorizontalAlignment="Center"/>
                    <Border x:Name="MediumColorPreview" Width="32" Height="24" BorderThickness="1"
                            BorderBrush="Gray" Background="#33CCFF" HorizontalAlignment="Center" Cursor="Hand"
                            MouseLeftButtonUp="MediumColorPreview_Click"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Margin="4,0,0,0">
                    <TextBlock Text="Big" FontSize="10" Opacity="0.7" HorizontalAlignment="Center"/>
                    <Border x:Name="BigColorPreview" Width="32" Height="24" BorderThickness="1"
                            BorderBrush="Gray" Background="#33FF66" HorizontalAlignment="Center" Cursor="Hand"
                            MouseLeftButtonUp="BigColorPreview_Click"/>
                </StackPanel>
            </Grid>

            <!-- ========== EXPLOSION SETTINGS ========== -->
            <TextBlock Text="EXPLOSION SETTINGS" Style="{StaticResource SectionStyle}"/>

            <TextBlock Text="Explosion Particles" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ExplosionParticlesSlider" Minimum="10" Maximum="100" Value="30"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"
                    IsSnapToTickEnabled="True" TickFrequency="5"/>
            <TextBlock x:Name="ExplosionParticlesValue" Text="30" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Explosion Force" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ExplosionForceSlider" Minimum="50" Maximum="500" Value="200"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="ExplosionForceValue" Text="200" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Explosion Lifespan (sec)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ExplosionLifespanSlider" Minimum="0.3" Maximum="3" Value="1"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="ExplosionLifespanValue" Text="1.0" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Explosion Particle Size (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ExplosionSizeSlider" Minimum="2" Maximum="20" Value="6"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="ExplosionSizeValue" Text="6" Opacity="0.7" FontSize="11"/>

            <!-- ========== VISUAL SETTINGS ========== -->
            <TextBlock Text="VISUAL SETTINGS" Style="{StaticResource SectionStyle}"/>

            <TextBlock Text="Glow Intensity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="GlowSlider" Minimum="0" Maximum="3" Value="1.2"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="GlowValue" Text="1.2" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Neon Intensity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="NeonSlider" Minimum="0" Maximum="2" Value="1"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="NeonValue" Text="1.0" Opacity="0.7" FontSize="11"/>

            <CheckBox x:Name="EnableTrailsCheckBox" Content="Enable Rocket Trails" Margin="0,8,0,4"
                      IsChecked="True" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"/>

            <TextBlock Text="Animation Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="AnimSpeedSlider" Minimum="0.5" Maximum="5" Value="2"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="AnimSpeedValue" Text="2.0" Opacity="0.7" FontSize="11"/>

            <!-- ========== SCORING ========== -->
            <TextBlock Text="SCORING" Style="{StaticResource SectionStyle}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,4,0">
                    <TextBlock Text="Small" FontSize="10" Opacity="0.7"/>
                    <TextBox x:Name="ScoreSmallTextBox" Text="200" Width="50" TextChanged="ScoreTextBox_Changed"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="2,0,2,0">
                    <TextBlock Text="Medium" FontSize="10" Opacity="0.7"/>
                    <TextBox x:Name="ScoreMediumTextBox" Text="100" Width="50" TextChanged="ScoreTextBox_Changed"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Margin="4,0,0,0">
                    <TextBlock Text="Big" FontSize="10" Opacity="0.7"/>
                    <TextBox x:Name="ScoreBigTextBox" Text="50" Width="50" TextChanged="ScoreTextBox_Changed"/>
                </StackPanel>
            </Grid>

            <!-- ========== SCORE OVERLAY ========== -->
            <TextBlock Text="SCORE OVERLAY" Style="{StaticResource SectionStyle}"/>

            <CheckBox x:Name="ShowScoreOverlayCheckBox" Content="Show Score on Screen" Margin="0,4,0,4"
                      IsChecked="True" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"/>

            <TextBlock Text="Score Size (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ScoreOverlaySizeSlider" Minimum="16" Maximum="100" Value="32"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="ScoreOverlaySizeValue" Text="32" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Digit Spacing" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ScoreOverlaySpacingSlider" Minimum="1.3" Maximum="2.5" Value="1.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="ScoreOverlaySpacingValue" Text="1.50" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Label Margin (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ScoreOverlayMarginSlider" Minimum="5" Maximum="100" Value="20"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"
                    IsSnapToTickEnabled="True" TickFrequency="5"/>
            <TextBlock x:Name="ScoreOverlayMarginValue" Text="20" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Background Opacity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ScoreOverlayBgOpacitySlider" Minimum="0" Maximum="1" Value="0.7"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="ScoreOverlayBgOpacityValue" Text="0.70" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Score Color" Style="{StaticResource LabelStyle}"/>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <Border x:Name="ScoreOverlayColorPreview" Width="24" Height="24" BorderThickness="1"
                        BorderBrush="Gray" Background="#00FF00" Margin="0,0,8,0" Cursor="Hand"
                        MouseLeftButtonUp="ScoreOverlayColorPreview_Click"/>
                <TextBlock Text="Click to change" Opacity="0.5" VerticalAlignment="Center" FontSize="10"/>
            </StackPanel>

            <TextBlock Text="Score Position X (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ScoreOverlayXSlider" Minimum="0" Maximum="500" Value="70"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="ScoreOverlayXValue" Text="70" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Score Position Y (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ScoreOverlayYSlider" Minimum="0" Maximum="500" Value="50"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="ScoreOverlayYValue" Text="50" Opacity="0.7" FontSize="11"/>

            <!-- ========== TIMER SETTINGS ========== -->
            <TextBlock Text="TIMER SETTINGS" Style="{StaticResource SectionStyle}"/>

            <TextBlock Text="Game Duration (seconds)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="TimerDurationSlider" Minimum="30" Maximum="300" Value="90"
                    Style="{StaticResource SliderStyle}" ValueChanged="TimerDurationSlider_ValueChanged"
                    IsSnapToTickEnabled="True" TickFrequency="15"/>
            <TextBlock x:Name="TimerDurationValue" Text="1:30" Opacity="0.7" FontSize="11"/>

        </StackPanel>
    </StackPanel>
</UserControl>
