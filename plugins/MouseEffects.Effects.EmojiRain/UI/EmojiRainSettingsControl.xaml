<UserControl x:Class="MouseEffects.Effects.EmojiRain.UI.EmojiRainSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="CheckBox" x:Key="CheckBoxStyle">
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Description -->
        <TextBlock Text="Falling emoji faces with rotation and tumble effects"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,8"/>

        <StackPanel Margin="0,8,0,0">

            <!-- Emoji Settings Section -->
            <TextBlock Text="Emoji Settings" FontWeight="Bold" FontSize="13" Margin="0,8,0,4"/>

            <TextBlock Text="Emoji Count (per second)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="EmojiCountSlider" Minimum="5" Maximum="50" Value="15"
                    Style="{StaticResource SliderStyle}" ValueChanged="EmojiCountSlider_ValueChanged"/>
            <TextBlock x:Name="EmojiCountValue" Text="15" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Fall Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="FallSpeedSlider" Minimum="30" Maximum="200" Value="100"
                    Style="{StaticResource SliderStyle}" ValueChanged="FallSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="FallSpeedValue" Text="100" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Min Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MinSizeSlider" Minimum="10" Maximum="40" Value="20"
                    Style="{StaticResource SliderStyle}" ValueChanged="MinSizeSlider_ValueChanged"/>
            <TextBlock x:Name="MinSizeValue" Text="20" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Max Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxSizeSlider" Minimum="20" Maximum="80" Value="40"
                    Style="{StaticResource SliderStyle}" ValueChanged="MaxSizeSlider_ValueChanged"/>
            <TextBlock x:Name="MaxSizeValue" Text="40" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Rotation Amount" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RotationAmountSlider" Minimum="0" Maximum="5" Value="2.0"
                    Style="{StaticResource SliderStyle}" ValueChanged="RotationAmountSlider_ValueChanged"/>
            <TextBlock x:Name="RotationAmountValue" Text="2.0" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Lifetime (seconds)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="LifetimeSlider" Minimum="3" Maximum="12" Value="6"
                    Style="{StaticResource SliderStyle}" ValueChanged="LifetimeSlider_ValueChanged"/>
            <TextBlock x:Name="LifetimeValue" Text="6" Opacity="0.7" FontSize="11"/>

            <!-- Emoji Types Section -->
            <TextBlock Text="Emoji Types" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <CheckBox x:Name="EnableHappyCheckBox" Content="ðŸ˜Š Happy Face"
                      Style="{StaticResource CheckBoxStyle}" IsChecked="True"
                      Checked="EmojiTypeCheckBox_Changed" Unchecked="EmojiTypeCheckBox_Changed"/>

            <CheckBox x:Name="EnableSadCheckBox" Content="ðŸ˜¢ Sad Face"
                      Style="{StaticResource CheckBoxStyle}" IsChecked="True"
                      Checked="EmojiTypeCheckBox_Changed" Unchecked="EmojiTypeCheckBox_Changed"/>

            <CheckBox x:Name="EnableWinkCheckBox" Content="ðŸ˜‰ Wink Face"
                      Style="{StaticResource CheckBoxStyle}" IsChecked="True"
                      Checked="EmojiTypeCheckBox_Changed" Unchecked="EmojiTypeCheckBox_Changed"/>

            <CheckBox x:Name="EnableHeartEyesCheckBox" Content="ðŸ˜ Heart Eyes"
                      Style="{StaticResource CheckBoxStyle}" IsChecked="True"
                      Checked="EmojiTypeCheckBox_Changed" Unchecked="EmojiTypeCheckBox_Changed"/>

            <CheckBox x:Name="EnableStarEyesCheckBox" Content="ðŸ¤© Star Eyes"
                      Style="{StaticResource CheckBoxStyle}" IsChecked="True"
                      Checked="EmojiTypeCheckBox_Changed" Unchecked="EmojiTypeCheckBox_Changed"/>

            <CheckBox x:Name="EnableSurprisedCheckBox" Content="ðŸ˜® Surprised Face"
                      Style="{StaticResource CheckBoxStyle}" IsChecked="True"
                      Checked="EmojiTypeCheckBox_Changed" Unchecked="EmojiTypeCheckBox_Changed"/>

        </StackPanel>
    </StackPanel>
</UserControl>
