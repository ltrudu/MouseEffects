<UserControl x:Class="MouseEffects.Effects.Glitch.UI.GlitchSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
            <!-- General Parameters -->
            <TextBlock Text="General Settings" FontWeight="Bold" Margin="0,0,0,8"/>

            <TextBlock Text="Effect Radius (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RadiusSlider" Minimum="100" Maximum="500" Value="300"
                    SmallChange="10" LargeChange="50" TickFrequency="10"
                    Style="{StaticResource SliderStyle}" ValueChanged="RadiusSlider_ValueChanged"/>
            <TextBlock x:Name="RadiusValue" Text="300" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Glitch Intensity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="IntensitySlider" Minimum="0.1" Maximum="2.0" Value="1.0"
                    SmallChange="0.1" LargeChange="0.5" TickFrequency="0.1"
                    Style="{StaticResource SliderStyle}" ValueChanged="IntensitySlider_ValueChanged"/>
            <TextBlock x:Name="IntensityValue" Text="1.0" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Glitch Frequency (Hz)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="GlitchFrequencySlider" Minimum="1" Maximum="20" Value="5"
                    SmallChange="0.5" LargeChange="2" TickFrequency="1"
                    Style="{StaticResource SliderStyle}" ValueChanged="GlitchFrequencySlider_ValueChanged"/>
            <TextBlock x:Name="GlitchFrequencyValue" Text="5.0" Opacity="0.7" FontSize="11"/>

            <!-- Glitch Effects -->
            <Separator Margin="0,12,0,8"/>
            <TextBlock Text="Glitch Effects" FontWeight="Bold" Margin="0,0,0,8"/>

            <TextBlock Text="RGB Split Amount" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RgbSplitSlider" Minimum="0.0" Maximum="0.05" Value="0.015"
                    SmallChange="0.001" LargeChange="0.005" TickFrequency="0.001"
                    Style="{StaticResource SliderStyle}" ValueChanged="RgbSplitSlider_ValueChanged"/>
            <TextBlock x:Name="RgbSplitValue" Text="0.015" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Scan Line Frequency" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ScanLineSlider" Minimum="1" Maximum="20" Value="8"
                    SmallChange="1" LargeChange="5" TickFrequency="1"
                    Style="{StaticResource SliderStyle}" ValueChanged="ScanLineSlider_ValueChanged"/>
            <TextBlock x:Name="ScanLineValue" Text="8" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Block Size (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="BlockSizeSlider" Minimum="5" Maximum="50" Value="20"
                    SmallChange="1" LargeChange="5" TickFrequency="1"
                    Style="{StaticResource SliderStyle}" ValueChanged="BlockSizeSlider_ValueChanged"/>
            <TextBlock x:Name="BlockSizeValue" Text="20" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Noise Amount" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="NoiseSlider" Minimum="0.0" Maximum="1.0" Value="0.3"
                    SmallChange="0.05" LargeChange="0.1" TickFrequency="0.05"
                    Style="{StaticResource SliderStyle}" ValueChanged="NoiseSlider_ValueChanged"/>
            <TextBlock x:Name="NoiseValue" Text="0.30" Opacity="0.7" FontSize="11"/>
    </StackPanel>
</UserControl>
