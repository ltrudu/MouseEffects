<UserControl x:Class="MouseEffects.Effects.MagneticField.UI.MagneticFieldSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="300"
             Foreground="White"
             Loaded="OnLoaded">
    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,8,0,4" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style x:Key="SectionStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,12,0,8" />
            <Setter Property="Foreground" Value="#89B4FA" />
            <Setter Property="FontSize" Value="13" />
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <!-- Header -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <CheckBox x:Name="EnabledCheckBox" Content="Enabled" Grid.Column="0"
                      VerticalAlignment="Center"
                      IsChecked="True" Checked="EnabledCheckBox_Changed" Unchecked="EnabledCheckBox_Changed" />
            <TextBlock Text="Magnetic Field" Grid.Column="1"
                       FontWeight="Bold" FontSize="14"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0" />
            <Button x:Name="FoldButton" Grid.Column="2"
                    Content="&#x25BC;" Width="24" Height="24"
                    Background="Transparent" BorderThickness="0"
                    Click="FoldButton_Click" ToolTip="Expand/Collapse settings" />
        </Grid>

        <TextBlock Text="Visualization of magnetic field lines emanating from the mouse cursor"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0" />

        <!-- Collapsible Content -->
        <StackPanel x:Name="ContentPanel" Visibility="Collapsed" Margin="0,8,0,0">

            <!-- Field Parameters -->
            <TextBlock Text="Field Parameters" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Field Line Count" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="LineCountSlider" Grid.Column="0"
                        Minimum="8" Maximum="32" Value="16"
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        ValueChanged="LineCountSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=LineCountSlider, StringFormat={}{0:F0}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Field Strength" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="FieldStrengthSlider" Grid.Column="0"
                        Minimum="0.1" Maximum="3" Value="1"
                        ValueChanged="FieldStrengthSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=FieldStrengthSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Field Curvature" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="FieldCurvatureSlider" Grid.Column="0"
                        Minimum="0.5" Maximum="3" Value="1.5"
                        ValueChanged="FieldCurvatureSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=FieldCurvatureSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Effect Radius" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="EffectRadiusSlider" Grid.Column="0"
                        Minimum="100" Maximum="500" Value="300"
                        ValueChanged="EffectRadiusSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=EffectRadiusSlider, StringFormat={}{0:F0} px}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Animation -->
            <TextBlock Text="Animation" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Animation Speed" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="AnimationSpeedSlider" Grid.Column="0"
                        Minimum="0" Maximum="3" Value="1"
                        ValueChanged="AnimationSpeedSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=AnimationSpeedSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Flow Pattern Scale" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="FlowScaleSlider" Grid.Column="0"
                        Minimum="0.01" Maximum="0.2" Value="0.05"
                        ValueChanged="FlowScaleSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=FlowScaleSlider, StringFormat={}{0:F2}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Flow Speed" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="FlowSpeedSlider" Grid.Column="0"
                        Minimum="0" Maximum="3" Value="1"
                        ValueChanged="FlowSpeedSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=FlowSpeedSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Visual Effects -->
            <TextBlock Text="Visual Effects" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Line Thickness" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="LineThicknessSlider" Grid.Column="0"
                        Minimum="0.5" Maximum="5" Value="2"
                        ValueChanged="LineThicknessSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=LineThicknessSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Glow Intensity" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="GlowIntensitySlider" Grid.Column="0"
                        Minimum="0" Maximum="3" Value="1.5"
                        ValueChanged="GlowIntensitySlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=GlowIntensitySlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Dual Pole Mode -->
            <TextBlock Text="Dual Pole Mode" Style="{StaticResource SectionStyle}" />

            <CheckBox x:Name="DualPoleModeCheckBox" Content="Enable Dual Pole (N-S Dipole)"
                      IsChecked="False"
                      Checked="DualPoleModeCheckBox_Changed" Unchecked="DualPoleModeCheckBox_Changed"
                      Margin="0,4,0,4" />

            <TextBlock Text="Pole Separation" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="PoleSeparationSlider" Grid.Column="0"
                        Minimum="50" Maximum="400" Value="200"
                        ValueChanged="PoleSeparationSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=PoleSeparationSlider, StringFormat={}{0:F0} px}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Colors -->
            <TextBlock Text="Colors" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Color Mode" Style="{StaticResource LabelStyle}" />
            <ComboBox x:Name="ColorModeCombo" SelectionChanged="ColorModeCombo_Changed" Margin="0,0,0,8">
                <ComboBoxItem Content="North/South Colors" IsSelected="True" />
                <ComboBoxItem Content="Unified Color" />
                <ComboBoxItem Content="Custom Colors" />
            </ComboBox>

            <TextBlock Text="Note: North Pole = Blue, South Pole = Red by default"
                       Opacity="0.6" FontSize="11" TextWrapping="Wrap" Margin="0,0,0,8" />

        </StackPanel>
    </StackPanel>
</UserControl>
