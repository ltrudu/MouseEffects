<UserControl x:Class="MouseEffects.Effects.Rain.UI.RainSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="CheckBox" x:Key="CheckBoxStyle">
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Description -->
        <TextBlock Text="Realistic raindrops with splash effects"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0"/>

        <StackPanel Margin="0,8,0,0">

            <!-- Rain Settings Section -->
            <TextBlock Text="Rain Settings" FontWeight="Bold" FontSize="13" Margin="0,8,0,4"/>

            <TextBlock Text="Rain Intensity (drops/sec)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RainIntensitySlider" Minimum="10" Maximum="200" Value="50"
                    Style="{StaticResource SliderStyle}" ValueChanged="RainIntensitySlider_ValueChanged"/>
            <TextBlock x:Name="RainIntensityValue" Text="50" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Fall Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="FallSpeedSlider" Minimum="200" Maximum="1500" Value="800"
                    Style="{StaticResource SliderStyle}" ValueChanged="FallSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="FallSpeedValue" Text="800" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Wind Angle (degrees)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="WindAngleSlider" Minimum="-45" Maximum="45" Value="15"
                    Style="{StaticResource SliderStyle}" ValueChanged="WindAngleSlider_ValueChanged"/>
            <TextBlock x:Name="WindAngleValue" Text="15" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Raindrop Lifetime (seconds)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="LifetimeSlider" Minimum="1" Maximum="10" Value="3"
                    Style="{StaticResource SliderStyle}" ValueChanged="LifetimeSlider_ValueChanged"/>
            <TextBlock x:Name="LifetimeValue" Text="3.0" Opacity="0.7" FontSize="11"/>

            <!-- Appearance Settings Section -->
            <TextBlock Text="Appearance Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Min Streak Length" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MinLengthSlider" Minimum="5" Maximum="50" Value="15"
                    Style="{StaticResource SliderStyle}" ValueChanged="MinLengthSlider_ValueChanged"/>
            <TextBlock x:Name="MinLengthValue" Text="15" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Max Streak Length" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxLengthSlider" Minimum="10" Maximum="80" Value="30"
                    Style="{StaticResource SliderStyle}" ValueChanged="MaxLengthSlider_ValueChanged"/>
            <TextBlock x:Name="MaxLengthValue" Text="30" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Min Drop Width" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MinSizeSlider" Minimum="0.5" Maximum="5" Value="1.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="MinSizeSlider_ValueChanged"/>
            <TextBlock x:Name="MinSizeValue" Text="1.5" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Max Drop Width" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxSizeSlider" Minimum="1" Maximum="8" Value="3"
                    Style="{StaticResource SliderStyle}" ValueChanged="MaxSizeSlider_ValueChanged"/>
            <TextBlock x:Name="MaxSizeValue" Text="3.0" Opacity="0.7" FontSize="11"/>

            <!-- Splash Settings Section -->
            <TextBlock Text="Splash Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <CheckBox x:Name="SplashEnabledCheckBox" Content="Enable Splash Effects"
                      Style="{StaticResource CheckBoxStyle}"
                      IsChecked="True" Checked="SplashEnabledCheckBox_Changed" Unchecked="SplashEnabledCheckBox_Changed"/>

            <TextBlock Text="Splash Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SplashSizeSlider" Minimum="5" Maximum="50" Value="20"
                    Style="{StaticResource SliderStyle}" ValueChanged="SplashSizeSlider_ValueChanged"/>
            <TextBlock x:Name="SplashSizeValue" Text="20" Opacity="0.7" FontSize="11"/>

            <!-- Area Settings Section -->
            <TextBlock Text="Area Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <CheckBox x:Name="FullScreenCheckBox" Content="Full Screen Mode"
                      Style="{StaticResource CheckBoxStyle}"
                      IsChecked="False" Checked="FullScreenCheckBox_Changed" Unchecked="FullScreenCheckBox_Changed"/>

            <TextBlock Text="Spawn Radius (cursor mode)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SpawnRadiusSlider" Minimum="100" Maximum="500" Value="200"
                    Style="{StaticResource SliderStyle}" ValueChanged="SpawnRadiusSlider_ValueChanged"/>
            <TextBlock x:Name="SpawnRadiusValue" Text="200" Opacity="0.7" FontSize="11"/>

        </StackPanel>
    </StackPanel>
</UserControl>
