<UserControl x:Class="MouseEffects.Effects.CherryBlossoms.UI.CherryBlossomsSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="CheckBox" x:Key="CheckBoxStyle">
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Description -->
        <TextBlock Text="Beautiful sakura petals floating gently around the cursor"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0"/>

        <StackPanel Margin="0,8,0,0">

            <!-- Max Petals Section -->
            <TextBlock Text="Max Petals" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxPetalsSlider" Minimum="1" Maximum="2500" Value="500"
                    Style="{StaticResource SliderStyle}" ValueChanged="MaxPetalsSlider_ValueChanged"/>
            <TextBlock x:Name="MaxPetalsValue" Text="500" Opacity="0.7" FontSize="11"/>

            <!-- Cursor Interaction Section -->
            <TextBlock Text="Cursor Interaction" FontWeight="Bold" FontSize="13" Margin="0,8,0,4"/>

            <TextBlock Text="Interaction Mode" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="CursorInteractionCombo" Margin="0,0,0,8" SelectionChanged="CursorInteractionCombo_SelectionChanged">
                <ComboBoxItem Content="None"/>
                <ComboBoxItem Content="Attract" IsSelected="True"/>
                <ComboBoxItem Content="Repel"/>
            </ComboBox>

            <StackPanel x:Name="CursorInteractionPanel" Visibility="Collapsed">
                <TextBlock Text="Force Strength" Style="{StaticResource LabelStyle}"/>
                <Slider x:Name="CursorForceSlider" Minimum="10" Maximum="5000" Value="2500"
                        Style="{StaticResource SliderStyle}" ValueChanged="CursorForceSlider_ValueChanged"/>
                <TextBlock x:Name="CursorForceValue" Text="2500" Opacity="0.7" FontSize="11"/>

                <TextBlock Text="Field Radius" Style="{StaticResource LabelStyle}"/>
                <Slider x:Name="CursorRadiusSlider" Minimum="50" Maximum="500" Value="140"
                        Style="{StaticResource SliderStyle}" ValueChanged="CursorRadiusSlider_ValueChanged"/>
                <TextBlock x:Name="CursorRadiusValue" Text="140" Opacity="0.7" FontSize="11"/>
            </StackPanel>

            <!-- Spawn Settings Section -->
            <TextBlock Text="Spawn Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Petal Count (per second)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="PetalCountSlider" Minimum="10" Maximum="100" Value="30"
                    Style="{StaticResource SliderStyle}" ValueChanged="PetalCountSlider_ValueChanged"/>
            <TextBlock x:Name="PetalCountValue" Text="30" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Spawn Spread" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SpawnRadiusSlider" Minimum="50" Maximum="400" Value="180"
                    Style="{StaticResource SliderStyle}" ValueChanged="SpawnRadiusSlider_ValueChanged"/>
            <TextBlock x:Name="SpawnRadiusValue" Text="180" Opacity="0.7" FontSize="11"/>

            <!-- Motion Settings Section -->
            <TextBlock Text="Motion Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Fall Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="FallSpeedSlider" Minimum="5" Maximum="250" Value="60"
                    Style="{StaticResource SliderStyle}" ValueChanged="FallSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="FallSpeedValue" Text="60" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Sway Amount" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SwayAmountSlider" Minimum="0" Maximum="100" Value="40"
                    Style="{StaticResource SliderStyle}" ValueChanged="SwayAmountSlider_ValueChanged"/>
            <TextBlock x:Name="SwayAmountValue" Text="40" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Sway Frequency" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SwayFrequencySlider" Minimum="0.1" Maximum="3" Value="0.8"
                    Style="{StaticResource SliderStyle}" ValueChanged="SwayFrequencySlider_ValueChanged"/>
            <TextBlock x:Name="SwayFrequencyValue" Text="0.8" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Spin Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SpinSpeedSlider" Minimum="0" Maximum="5" Value="1.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="SpinSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="SpinSpeedValue" Text="1.5" Opacity="0.7" FontSize="11"/>

            <!-- Appearance Settings Section -->
            <TextBlock Text="Appearance Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Color Palette" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="ColorPaletteCombo" Margin="0,0,0,8" SelectionChanged="ColorPaletteCombo_SelectionChanged">
                <ComboBoxItem Content="Cherry Blossom" IsSelected="True"/>
                <ComboBoxItem Content="Autumn Leaves"/>
                <ComboBoxItem Content="Winter Snow"/>
                <ComboBoxItem Content="Spring Bloom"/>
                <ComboBoxItem Content="Summer Sun"/>
                <ComboBoxItem Content="Aquatic Blue"/>
                <ComboBoxItem Content="Green Pastel"/>
                <ComboBoxItem Content="Fire"/>
                <ComboBoxItem Content="Rainbow"/>
            </ComboBox>

            <TextBlock Text="Min Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MinSizeSlider" Minimum="5" Maximum="25" Value="10"
                    Style="{StaticResource SliderStyle}" ValueChanged="MinSizeSlider_ValueChanged"/>
            <TextBlock x:Name="MinSizeValue" Text="10" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Max Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxSizeSlider" Minimum="8" Maximum="40" Value="18"
                    Style="{StaticResource SliderStyle}" ValueChanged="MaxSizeSlider_ValueChanged"/>
            <TextBlock x:Name="MaxSizeValue" Text="18" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Glow Intensity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="GlowIntensitySlider" Minimum="0.1" Maximum="2" Value="0.8"
                    Style="{StaticResource SliderStyle}" ValueChanged="GlowIntensitySlider_ValueChanged"/>
            <TextBlock x:Name="GlowIntensityValue" Text="0.8" Opacity="0.7" FontSize="11"/>

            <!-- Wind Settings Section -->
            <TextBlock Text="Wind Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <CheckBox x:Name="WindEnabledCheckBox" Content="Enable Wind" Style="{StaticResource CheckBoxStyle}"
                      Checked="WindEnabledCheckBox_Changed" Unchecked="WindEnabledCheckBox_Changed"/>

            <StackPanel x:Name="WindSettingsPanel" Visibility="Collapsed">
                <TextBlock Text="Wind Strength" Style="{StaticResource LabelStyle}"/>
                <Slider x:Name="WindStrengthSlider" Minimum="0" Maximum="200" Value="50"
                        Style="{StaticResource SliderStyle}" ValueChanged="WindStrengthSlider_ValueChanged"/>
                <TextBlock x:Name="WindStrengthValue" Text="50" Opacity="0.7" FontSize="11"/>

                <CheckBox x:Name="WindRandomCheckBox" Content="Random Direction" Style="{StaticResource CheckBoxStyle}"
                          Checked="WindRandomCheckBox_Changed" Unchecked="WindRandomCheckBox_Changed"/>

                <StackPanel x:Name="WindFixedPanel" Visibility="Collapsed">
                    <TextBlock Text="Wind Direction (degrees)" Style="{StaticResource LabelStyle}"/>
                    <Slider x:Name="WindDirectionSlider" Minimum="-180" Maximum="180" Value="0"
                            Style="{StaticResource SliderStyle}" ValueChanged="WindDirectionSlider_ValueChanged"/>
                    <TextBlock x:Name="WindDirectionValue" Text="0" Opacity="0.7" FontSize="11"/>
                </StackPanel>

                <StackPanel x:Name="WindRandomPanel">
                    <TextBlock Text="Min Direction (degrees)" Style="{StaticResource LabelStyle}"/>
                    <Slider x:Name="WindMinDirSlider" Minimum="-180" Maximum="180" Value="-154"
                            Style="{StaticResource SliderStyle}" ValueChanged="WindMinDirSlider_ValueChanged"/>
                    <TextBlock x:Name="WindMinDirValue" Text="-154" Opacity="0.7" FontSize="11"/>

                    <TextBlock Text="Max Direction (degrees)" Style="{StaticResource LabelStyle}"/>
                    <Slider x:Name="WindMaxDirSlider" Minimum="-180" Maximum="180" Value="120"
                            Style="{StaticResource SliderStyle}" ValueChanged="WindMaxDirSlider_ValueChanged"/>
                    <TextBlock x:Name="WindMaxDirValue" Text="120" Opacity="0.7" FontSize="11"/>
                </StackPanel>

                <TextBlock Text="Transition Mode" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="WindTransitionCombo" Margin="0,0,0,8" SelectionChanged="WindTransitionCombo_SelectionChanged">
                    <ComboBoxItem Content="Instant"/>
                    <ComboBoxItem Content="Linear"/>
                    <ComboBoxItem Content="Ease In"/>
                    <ComboBoxItem Content="Ease Out"/>
                    <ComboBoxItem Content="Smooth Step"/>
                    <ComboBoxItem Content="Ease In/Out"/>
                    <ComboBoxItem Content="Exponential"/>
                    <ComboBoxItem Content="Logarithmic" IsSelected="True"/>
                </ComboBox>

                <TextBlock Text="Transition Duration (seconds)" Style="{StaticResource LabelStyle}"/>
                <Slider x:Name="WindTransDurationSlider" Minimum="0.1" Maximum="10" Value="2"
                        Style="{StaticResource SliderStyle}" ValueChanged="WindTransDurationSlider_ValueChanged"/>
                <TextBlock x:Name="WindTransDurationValue" Text="2.0" Opacity="0.7" FontSize="11"/>

                <TextBlock Text="Direction Change Frequency (seconds)" Style="{StaticResource LabelStyle}"/>
                <Slider x:Name="WindChangeFreqSlider" Minimum="1" Maximum="30" Value="5"
                        Style="{StaticResource SliderStyle}" ValueChanged="WindChangeFreqSlider_ValueChanged"/>
                <TextBlock x:Name="WindChangeFreqValue" Text="5.0" Opacity="0.7" FontSize="11"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
