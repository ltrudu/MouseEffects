<UserControl x:Class="MouseEffects.Effects.Portal.UI.PortalSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="300"
             Foreground="White"
             Loaded="OnLoaded">
    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,8,0,4" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style x:Key="SectionStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,12,0,8" />
            <Setter Property="Foreground" Value="#89B4FA" />
            <Setter Property="FontSize" Value="13" />
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <!-- Header -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <CheckBox x:Name="EnabledCheckBox" Content="Enabled" Grid.Column="0"
                      VerticalAlignment="Center"
                      IsChecked="True" Checked="EnabledCheckBox_Changed" Unchecked="EnabledCheckBox_Changed" />
            <TextBlock Text="Portal" Grid.Column="1"
                       FontWeight="Bold" FontSize="14"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0" />
            <Button x:Name="FoldButton" Grid.Column="2"
                    Content="&#x25BC;" Width="24" Height="24"
                    Background="Transparent" BorderThickness="0"
                    Click="FoldButton_Click" ToolTip="Expand/Collapse settings" />
        </Grid>

        <TextBlock Text="Swirling dimensional vortex/portal effect at the mouse cursor"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0" />

        <!-- Collapsible Content -->
        <StackPanel x:Name="ContentPanel" Visibility="Collapsed" Margin="0,8,0,0">

            <!-- Portal Dimensions -->
            <TextBlock Text="Portal Dimensions" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Portal Radius" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="RadiusSlider" Grid.Column="0"
                        Minimum="50" Maximum="300" Value="150"
                        ValueChanged="RadiusSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=RadiusSlider, StringFormat={}{0:F0} px}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Spiral Pattern -->
            <TextBlock Text="Spiral Pattern" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Spiral Arms" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="SpiralArmsSlider" Grid.Column="0"
                        Minimum="2" Maximum="8" Value="4"
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        ValueChanged="SpiralArmsSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=SpiralArmsSlider, StringFormat={}{0:F0}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Spiral Tightness" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="SpiralTightnessSlider" Grid.Column="0"
                        Minimum="0.1" Maximum="3" Value="1"
                        ValueChanged="SpiralTightnessSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=SpiralTightnessSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Animation -->
            <TextBlock Text="Animation" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Rotation Speed" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="RotationSpeedSlider" Grid.Column="0"
                        Minimum="0" Maximum="3" Value="1"
                        ValueChanged="RotationSpeedSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=RotationSpeedSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Visual Effects -->
            <TextBlock Text="Visual Effects" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Glow Intensity" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="GlowIntensitySlider" Grid.Column="0"
                        Minimum="0" Maximum="3" Value="1.2"
                        ValueChanged="GlowIntensitySlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=GlowIntensitySlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Depth Effect" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="DepthStrengthSlider" Grid.Column="0"
                        Minimum="0" Maximum="1" Value="0.7"
                        ValueChanged="DepthStrengthSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=DepthStrengthSlider, StringFormat={}{0:F2}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Center Darkness" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="InnerDarknessSlider" Grid.Column="0"
                        Minimum="0" Maximum="1" Value="0.2"
                        ValueChanged="InnerDarknessSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=InnerDarknessSlider, StringFormat={}{0:F2}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Swirl Distortion" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="DistortionStrengthSlider" Grid.Column="0"
                        Minimum="0" Maximum="3" Value="1"
                        ValueChanged="DistortionStrengthSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=DistortionStrengthSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Rim Particles -->
            <TextBlock Text="Rim Particles" Style="{StaticResource SectionStyle}" />

            <CheckBox x:Name="RimParticlesCheckBox" Content="Enable Rim Particles"
                      IsChecked="True"
                      Checked="RimParticlesCheckBox_Changed" Unchecked="RimParticlesCheckBox_Changed"
                      Margin="0,4,0,4" />

            <TextBlock Text="Particle Speed" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="ParticleSpeedSlider" Grid.Column="0"
                        Minimum="0" Maximum="5" Value="1.5"
                        ValueChanged="ParticleSpeedSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=ParticleSpeedSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Color Theme -->
            <TextBlock Text="Colors" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Color Theme" Style="{StaticResource LabelStyle}" />
            <ComboBox x:Name="ColorThemeCombo" SelectionChanged="ColorThemeCombo_Changed" Margin="0,0,0,8">
                <ComboBoxItem Content="Blue Portal" IsSelected="True" />
                <ComboBoxItem Content="Purple Portal" />
                <ComboBoxItem Content="Orange Portal" />
                <ComboBoxItem Content="Rainbow Portal" />
            </ComboBox>

            <!-- HDR -->
            <TextBlock Text="HDR" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="HDR Brightness" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="HdrMultiplierSlider" Grid.Column="0"
                        Minimum="0" Maximum="2" Value="0.5"
                        ValueChanged="HdrMultiplierSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=HdrMultiplierSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

        </StackPanel>
    </StackPanel>
</UserControl>
