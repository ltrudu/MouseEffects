<UserControl x:Class="MouseEffects.Effects.LaserWork.UI.LaserWorkSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="350">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="SectionStyle">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,12,0,8"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Header Row: Enabled checkbox | Title | Fold/Unfold button -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox x:Name="EnabledCheckBox" Content="Enabled" Grid.Column="0"
                      VerticalAlignment="Center"
                      IsChecked="True" Checked="EnabledCheckBox_Changed" Unchecked="EnabledCheckBox_Changed"/>

            <TextBlock Text="Laser Work" Grid.Column="1"
                       FontWeight="Bold" FontSize="14"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0"/>

            <Button x:Name="FoldButton" Grid.Column="2"
                    Content="â–¼" Width="24" Height="24"
                    Background="Transparent" BorderThickness="0"
                    Click="FoldButton_Click" ToolTip="Expand/Collapse settings"/>
        </Grid>

        <!-- Description (always visible) -->
        <TextBlock Text="Shoots glowing lasers from the mouse pointer that bounce off screen edges"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0"/>

        <!-- Collapsible Content Panel -->
        <StackPanel x:Name="ContentPanel" Visibility="Collapsed" Margin="0,8,0,0">
            <!-- Emission Rate -->
            <TextBlock Text="Lasers Per Second" Style="{StaticResource LabelStyle}" Margin="0"/>
            <Slider x:Name="LasersPerSecondSlider" Minimum="1" Maximum="100" Value="20"
                    Style="{StaticResource SliderStyle}" ValueChanged="LasersPerSecondSlider_ValueChanged"/>
            <TextBlock x:Name="LasersPerSecondValue" Text="20" Opacity="0.7" FontSize="11"/>

            <!-- Direction Settings -->
            <TextBlock Text="Laser Directions" Style="{StaticResource SectionStyle}"/>
            <WrapPanel>
                <CheckBox x:Name="ShootForwardCheckBox" Content="Forward" Margin="0,0,10,4"
                          IsChecked="True" Checked="DirectionCheckBox_Changed" Unchecked="DirectionCheckBox_Changed"/>
                <CheckBox x:Name="ShootBackwardCheckBox" Content="Backward" Margin="0,0,10,4"
                          IsChecked="True" Checked="DirectionCheckBox_Changed" Unchecked="DirectionCheckBox_Changed"/>
                <CheckBox x:Name="ShootLeftCheckBox" Content="Left" Margin="0,0,10,4"
                          IsChecked="True" Checked="DirectionCheckBox_Changed" Unchecked="DirectionCheckBox_Changed"/>
                <CheckBox x:Name="ShootRightCheckBox" Content="Right" Margin="0,0,10,4"
                          IsChecked="True" Checked="DirectionCheckBox_Changed" Unchecked="DirectionCheckBox_Changed"/>
            </WrapPanel>

            <!-- Size Settings -->
            <TextBlock Text="Laser Size" Style="{StaticResource SectionStyle}"/>
            <CheckBox x:Name="AutoShrinkCheckBox" Content="Auto Shrink" Margin="0,0,0,8"
                      IsChecked="False" Checked="AutoShrinkCheckBox_Changed" Unchecked="AutoShrinkCheckBox_Changed"/>

            <TextBlock Text="Min Length (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MinLengthSlider" Minimum="10" Maximum="200" Value="30"
                    Style="{StaticResource SliderStyle}" ValueChanged="SizeSlider_ValueChanged"/>
            <TextBlock x:Name="MinLengthValue" Text="30" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Max Length (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxLengthSlider" Minimum="10" Maximum="200" Value="70"
                    Style="{StaticResource SliderStyle}" ValueChanged="SizeSlider_ValueChanged"/>
            <TextBlock x:Name="MaxLengthValue" Text="70" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Min Width (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MinWidthSlider" Minimum="1" Maximum="20" Value="2"
                    Style="{StaticResource SliderStyle}" ValueChanged="SizeSlider_ValueChanged"/>
            <TextBlock x:Name="MinWidthValue" Text="2" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Max Width (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxWidthSlider" Minimum="1" Maximum="20" Value="6"
                    Style="{StaticResource SliderStyle}" ValueChanged="SizeSlider_ValueChanged"/>
            <TextBlock x:Name="MaxWidthValue" Text="6" Opacity="0.7" FontSize="11"/>

            <!-- Physics Settings -->
            <TextBlock Text="Physics" Style="{StaticResource SectionStyle}"/>

            <TextBlock Text="Speed (px/sec)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SpeedSlider" Minimum="50" Maximum="1000" Value="400"
                    Style="{StaticResource SliderStyle}" ValueChanged="PhysicsSlider_ValueChanged"/>
            <TextBlock x:Name="SpeedValue" Text="400" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Lifespan (sec)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="LifespanSlider" Minimum="0.5" Maximum="10" Value="3"
                    Style="{StaticResource SliderStyle}" ValueChanged="PhysicsSlider_ValueChanged"/>
            <TextBlock x:Name="LifespanValue" Text="3.0" Opacity="0.7" FontSize="11"/>

            <!-- Alpha Settings -->
            <TextBlock Text="Transparency" Style="{StaticResource SectionStyle}"/>

            <TextBlock Text="Max Alpha (start)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxAlphaSlider" Minimum="0" Maximum="1" Value="1"
                    Style="{StaticResource SliderStyle}" ValueChanged="AlphaSlider_ValueChanged"/>
            <TextBlock x:Name="MaxAlphaValue" Text="1.0" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Min Alpha (end)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MinAlphaSlider" Minimum="0" Maximum="1" Value="0.1"
                    Style="{StaticResource SliderStyle}" ValueChanged="AlphaSlider_ValueChanged"/>
            <TextBlock x:Name="MinAlphaValue" Text="0.1" Opacity="0.7" FontSize="11"/>

            <!-- Visual Effects -->
            <TextBlock Text="Visual Effects" Style="{StaticResource SectionStyle}"/>

            <TextBlock Text="Glow Intensity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="GlowIntensitySlider" Minimum="0" Maximum="2" Value="0.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="GlowSlider_ValueChanged"/>
            <TextBlock x:Name="GlowIntensityValue" Text="0.5" Opacity="0.7" FontSize="11"/>

            <!-- Color Settings -->
            <TextBlock Text="Color" Style="{StaticResource SectionStyle}"/>

            <CheckBox x:Name="RainbowModeCheckBox" Content="Rainbow Mode" Margin="0,0,0,8"
                      IsChecked="False" Checked="RainbowModeCheckBox_Changed" Unchecked="RainbowModeCheckBox_Changed"/>

            <StackPanel x:Name="ColorSettingsPanel">
                <TextBlock Text="Laser Color" Style="{StaticResource LabelStyle}"/>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <Border x:Name="ColorPreview" Width="24" Height="24" BorderThickness="1"
                            BorderBrush="Gray" Background="#FF3333" Margin="0,0,8,0"/>
                    <Button x:Name="ColorPickerButton" Content="Pick Color..." Click="ColorPickerButton_Click"/>
                </StackPanel>
            </StackPanel>

            <StackPanel x:Name="RainbowSettingsPanel" Visibility="Collapsed">
                <TextBlock Text="Rainbow Speed" Style="{StaticResource LabelStyle}"/>
                <Slider x:Name="RainbowSpeedSlider" Minimum="0.1" Maximum="5" Value="1"
                        Style="{StaticResource SliderStyle}" ValueChanged="RainbowSpeedSlider_ValueChanged"/>
                <TextBlock x:Name="RainbowSpeedValue" Text="1.0" Opacity="0.7" FontSize="11"/>
            </StackPanel>

            <!-- Collision Explosion Settings -->
            <TextBlock Text="Collision Explosion" Style="{StaticResource SectionStyle}"/>

            <CheckBox x:Name="EnableCollisionExplosionCheckBox" Content="Enable Collision Explosion" Margin="0,0,0,8"
                      IsChecked="False" Checked="CollisionExplosionCheckBox_Changed" Unchecked="CollisionExplosionCheckBox_Changed"/>

            <StackPanel x:Name="ExplosionSettingsPanel" Visibility="Collapsed">
                <TextBlock Text="Explosion Laser Count" Style="{StaticResource LabelStyle}"/>
                <Slider x:Name="ExplosionCountSlider" Minimum="2" Maximum="24" Value="8"
                        Style="{StaticResource SliderStyle}" ValueChanged="ExplosionSlider_ValueChanged"
                        IsSnapToTickEnabled="True" TickFrequency="1"/>
                <TextBlock x:Name="ExplosionCountValue" Text="8" Opacity="0.7" FontSize="11"/>

                <TextBlock Text="Explosion Lifespan Multiplier" Style="{StaticResource LabelStyle}"/>
                <Slider x:Name="ExplosionLifespanSlider" Minimum="0.1" Maximum="1" Value="0.5"
                        Style="{StaticResource SliderStyle}" ValueChanged="ExplosionSlider_ValueChanged"/>
                <TextBlock x:Name="ExplosionLifespanValue" Text="0.5" Opacity="0.7" FontSize="11"/>

                <CheckBox x:Name="CollideAlwaysCheckBox" Content="Collide Always" Margin="0,8,0,4"
                          IsChecked="False" Checked="CollideAlwaysCheckBox_Changed" Unchecked="CollideAlwaysCheckBox_Changed"/>

                <StackPanel x:Name="MaxCollisionPanel" Visibility="Collapsed">
                    <TextBlock Text="Max Collisions" Style="{StaticResource LabelStyle}"/>
                    <Slider x:Name="MaxCollisionSlider" Minimum="1" Maximum="10" Value="3"
                            Style="{StaticResource SliderStyle}" ValueChanged="ExplosionSlider_ValueChanged"
                            IsSnapToTickEnabled="True" TickFrequency="1"/>
                    <TextBlock x:Name="MaxCollisionValue" Text="3" Opacity="0.7" FontSize="11"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
