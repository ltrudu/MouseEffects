<UserControl x:Class="MouseEffects.Effects.PixelExplosion.UI.PixelExplosionSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="CheckBox" x:Key="CheckBoxStyle">
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Description -->
        <TextBlock Text="Retro 8-bit style pixel explosions with gravity physics"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0"/>

        <StackPanel Margin="0,8,0,0">

            <!-- Trigger Mode Section -->
            <TextBlock Text="Trigger Mode" FontWeight="Bold" FontSize="13" Margin="0,8,0,4"/>

            <CheckBox x:Name="SpawnOnLeftClickCheckBox" Content="Spawn on Left Click"
                      Style="{StaticResource CheckBoxStyle}"
                      Checked="SpawnOnLeftClickCheckBox_Changed" Unchecked="SpawnOnLeftClickCheckBox_Changed"/>

            <CheckBox x:Name="SpawnOnRightClickCheckBox" Content="Spawn on Right Click"
                      Style="{StaticResource CheckBoxStyle}"
                      Checked="SpawnOnRightClickCheckBox_Changed" Unchecked="SpawnOnRightClickCheckBox_Changed"/>

            <!-- Explosion Settings Section -->
            <TextBlock Text="Explosion Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Min Pixels per Explosion" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="PixelCountMinSlider" Minimum="10" Maximum="200" Value="20"
                    Style="{StaticResource SliderStyle}" ValueChanged="PixelCountMinSlider_ValueChanged"/>
            <TextBlock x:Name="PixelCountMinValue" Text="20" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Max Pixels per Explosion" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="PixelCountMaxSlider" Minimum="10" Maximum="200" Value="60"
                    Style="{StaticResource SliderStyle}" ValueChanged="PixelCountMaxSlider_ValueChanged"/>
            <TextBlock x:Name="PixelCountMaxValue" Text="60" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Explosion Force" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ExplosionForceSlider" Minimum="100" Maximum="1000" Value="400"
                    Style="{StaticResource SliderStyle}" ValueChanged="ExplosionForceSlider_ValueChanged"/>
            <TextBlock x:Name="ExplosionForceValue" Text="400" Opacity="0.7" FontSize="11"/>

            <!-- Pixel Settings Section -->
            <TextBlock Text="Pixel Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Min Pixel Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="PixelSizeMinSlider" Minimum="2" Maximum="20" Value="3"
                    Style="{StaticResource SliderStyle}" ValueChanged="PixelSizeMinSlider_ValueChanged"/>
            <TextBlock x:Name="PixelSizeMinValue" Text="3" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Max Pixel Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="PixelSizeMaxSlider" Minimum="2" Maximum="20" Value="8"
                    Style="{StaticResource SliderStyle}" ValueChanged="PixelSizeMaxSlider_ValueChanged"/>
            <TextBlock x:Name="PixelSizeMaxValue" Text="8" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Lifetime (seconds)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="LifetimeSlider" Minimum="0.5" Maximum="10" Value="2.0"
                    Style="{StaticResource SliderStyle}" ValueChanged="LifetimeSlider_ValueChanged"/>
            <TextBlock x:Name="LifetimeValue" Text="2.0" Opacity="0.7" FontSize="11"/>

            <!-- Physics Settings Section -->
            <TextBlock Text="Physics Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Gravity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="GravitySlider" Minimum="0" Maximum="1000" Value="250"
                    Style="{StaticResource SliderStyle}" ValueChanged="GravitySlider_ValueChanged"/>
            <TextBlock x:Name="GravityValue" Text="250" Opacity="0.7" FontSize="11"/>

            <!-- Color Palette Section -->
            <TextBlock Text="Color Palette" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <ComboBox x:Name="ColorPaletteCombo" SelectionChanged="ColorPaletteCombo_Changed"
                      Margin="0,4,0,8">
                <ComboBoxItem Content="Fire (Red/Orange/Yellow)" IsSelected="True"/>
                <ComboBoxItem Content="Ice (Blue/Cyan/White)"/>
                <ComboBoxItem Content="Rainbow (All Colors)"/>
                <ComboBoxItem Content="Retro (8-bit Colors)"/>
                <ComboBoxItem Content="Neon (Bright Colors)"/>
            </ComboBox>

            <!-- Performance Section -->
            <TextBlock Text="Performance" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Max Pixels" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxPixelsSlider" Minimum="100" Maximum="10000" Value="5000"
                    Style="{StaticResource SliderStyle}" ValueChanged="MaxPixelsSlider_ValueChanged"/>
            <TextBlock x:Name="MaxPixelsValue" Text="5000" Opacity="0.7" FontSize="11"/>
        </StackPanel>
    </StackPanel>
</UserControl>
