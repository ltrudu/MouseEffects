<UserControl x:Class="MouseEffects.Effects.Retro.UI.Filters.ToonFilterSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,6,0,2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ValueStyle">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="SectionStyle">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <!-- Toon Settings -->
        <TextBlock Text="Toon Settings" Style="{StaticResource SectionStyle}"/>
        <TextBlock Text="Configure cel-shading and edge detection parameters."
                   Opacity="0.6" FontSize="11" TextWrapping="Wrap" Margin="0,0,0,8"/>

        <!-- Edge Threshold -->
        <TextBlock Text="Edge Threshold" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="EdgeThresholdSlider" Minimum="0.01" Maximum="1.0" Value="0.1"
                Style="{StaticResource SliderStyle}" ValueChanged="EdgeThresholdSlider_Changed"/>
        <TextBlock x:Name="EdgeThresholdValue" Text="0.10" Style="{StaticResource ValueStyle}"/>

        <!-- Edge Width -->
        <TextBlock Text="Edge Width" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="EdgeWidthSlider" Minimum="1" Maximum="5" Value="1.5"
                Style="{StaticResource SliderStyle}" ValueChanged="EdgeWidthSlider_Changed"/>
        <TextBlock x:Name="EdgeWidthValue" Text="1.5 px" Style="{StaticResource ValueStyle}"/>

        <!-- Color Levels -->
        <TextBlock Text="Color Levels" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="ColorLevelsSlider" Minimum="2" Maximum="16" Value="6"
                Style="{StaticResource SliderStyle}" ValueChanged="ColorLevelsSlider_Changed"/>
        <TextBlock x:Name="ColorLevelsValue" Text="6" Style="{StaticResource ValueStyle}"/>

        <!-- Saturation -->
        <TextBlock Text="Saturation" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="SaturationSlider" Minimum="0.5" Maximum="2.0" Value="1.2"
                Style="{StaticResource SliderStyle}" ValueChanged="SaturationSlider_Changed"/>
        <TextBlock x:Name="SaturationValue" Text="1.20x" Style="{StaticResource ValueStyle}"/>

        <Separator Margin="0,12,0,8"/>

        <!-- Layout Settings -->
        <TextBlock Text="Layout" Style="{StaticResource SectionStyle}"/>
        <TextBlock Text="Define where the effect is applied on screen."
                   Opacity="0.6" FontSize="11" TextWrapping="Wrap" Margin="0,0,0,8"/>

        <TextBlock Text="Layout Mode" Style="{StaticResource LabelStyle}"/>
        <ComboBox x:Name="LayoutModeCombo" SelectionChanged="LayoutModeCombo_SelectionChanged" Margin="0,0,0,8">
            <ComboBoxItem Content="Fullscreen" IsSelected="True"/>
            <ComboBoxItem Content="Circle (follows mouse)"/>
            <ComboBoxItem Content="Rectangle (follows mouse)"/>
        </ComboBox>

        <!-- Circle Settings -->
        <StackPanel x:Name="CircleSettingsPanel" Visibility="Collapsed">
            <TextBlock Text="Radius" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RadiusSlider" Minimum="50" Maximum="500" Value="200"
                    Style="{StaticResource SliderStyle}" ValueChanged="RadiusSlider_Changed"/>
            <TextBlock x:Name="RadiusValue" Text="200 px" Style="{StaticResource ValueStyle}"/>
        </StackPanel>

        <!-- Rectangle Settings -->
        <StackPanel x:Name="RectangleSettingsPanel" Visibility="Collapsed">
            <TextBlock Text="Width" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RectWidthSlider" Minimum="100" Maximum="800" Value="400"
                    Style="{StaticResource SliderStyle}" ValueChanged="RectWidthSlider_Changed"/>
            <TextBlock x:Name="RectWidthValue" Text="400 px" Style="{StaticResource ValueStyle}"/>

            <TextBlock Text="Height" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RectHeightSlider" Minimum="100" Maximum="600" Value="300"
                    Style="{StaticResource SliderStyle}" ValueChanged="RectHeightSlider_Changed"/>
            <TextBlock x:Name="RectHeightValue" Text="300 px" Style="{StaticResource ValueStyle}"/>
        </StackPanel>

        <!-- Edge Softness (for Circle/Rectangle modes) -->
        <StackPanel x:Name="EdgeSoftnessPanel" Visibility="Collapsed">
            <TextBlock Text="Edge Softness" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="EdgeSoftnessSlider" Minimum="0" Maximum="100" Value="20"
                    Style="{StaticResource SliderStyle}" ValueChanged="EdgeSoftnessSlider_Changed"/>
            <TextBlock x:Name="EdgeSoftnessValue" Text="20 px" Style="{StaticResource ValueStyle}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
