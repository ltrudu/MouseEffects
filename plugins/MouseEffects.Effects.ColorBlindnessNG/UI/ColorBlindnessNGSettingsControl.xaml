                                  Margin="0,0,0,4"
                                  Checked="Zone2SimGuided_Changed" Unchecked="Zone2SimGuided_Changed"/>
                        <StackPanel x:Name="Zone2SimGuidedPanel" Visibility="Collapsed" Margin="16,0,0,0">
                            <TextBlock Text="Detection Algorithm" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <RadioButton x:Name="Zone2SimGuidedMachadoRadio" Content="Machado" IsChecked="True"
                                             Checked="Zone2SimGuidedAlgorithm_Changed" Margin="0,0,16,0"/>
                                <RadioButton x:Name="Zone2SimGuidedStrictRadio" Content="Strict (LMS)"
                                             Checked="Zone2SimGuidedAlgorithm_Changed"/>
                            </StackPanel>
                            <TextBlock Text="CVD Type to Detect" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="Zone2SimGuidedFilterCombo" SelectionChanged="Zone2SimGuidedFilter_Changed" Margin="0,0,0,8">
                                <ComboBoxItem Content="Protanopia (Red-Green blind)"/>
                                <ComboBoxItem Content="Protanomaly (Red-Green weak)"/>
                                <ComboBoxItem Content="Deuteranopia (Green-Red blind)" IsSelected="True"/>
                                <ComboBoxItem Content="Deuteranomaly (Green-Red weak)"/>
                                <ComboBoxItem Content="Tritanopia (Blue-Yellow blind)"/>
                                <ComboBoxItem Content="Tritanomaly (Blue-Yellow weak)"/>
                                <ComboBoxItem Content="Achromatopsia (No color)"/>
                                <ComboBoxItem Content="Achromatomaly (Weak color)"/>
                            </ComboBox>
                            <TextBlock x:Name="Zone2SimGuidedSensitivityLabel" Text="Sensitivity (2.00)" Style="{StaticResource LabelStyle}"
                                       ToolTip="Lower = only strongly affected pixels, Higher = more pixels corrected"/>
                            <Slider x:Name="Zone2SimGuidedSensitivitySlider" Minimum="0.5" Maximum="25" Value="2"
                                    Style="{StaticResource SliderStyle}" ValueChanged="Zone2SimGuidedSensitivity_Changed"/>
                        </StackPanel>
                        <Separator Margin="0,8,0,8"/>

                        <local:CorrectionEditor x:Name="Zone2CorrectionEditor" Margin="0,8,0,0"/>

                        <!-- Post-Correction Simulation (Re-simulate for Verification) -->
                        <Separator Margin="0,12,0,8"/>
                        <CheckBox x:Name="Zone2PostSimCheckBox" Content="Re-simulate for Verification"
                                  Margin="0,0,0,4"
                                  ToolTip="Apply CVD simulation AFTER correction to see how corrected colors appear to colorblind users"
                                  Checked="Zone2PostSim_Changed" Unchecked="Zone2PostSim_Changed"/>
                        <StackPanel x:Name="Zone2PostSimPanel" Visibility="Collapsed" Margin="16,0,0,0">
                            <TextBlock Text="Simulation Algorithm" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <RadioButton x:Name="Zone2PostSimMachadoRadio" Content="Machado" IsChecked="True"
                                             Checked="Zone2PostSimAlgorithm_Changed" Margin="0,0,16,0"/>
                                <RadioButton x:Name="Zone2PostSimStrictRadio" Content="Strict (LMS)"
                                             Checked="Zone2PostSimAlgorithm_Changed"/>
                            </StackPanel>
                            <TextBlock Text="CVD Type to Simulate" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="Zone2PostSimFilterCombo" SelectionChanged="Zone2PostSimFilter_Changed" Margin="0,0,0,8">
                                <ComboBoxItem Content="Protanopia (Red-Green blind)"/>
                                <ComboBoxItem Content="Protanomaly (Red-Green weak)"/>
                                <ComboBoxItem Content="Deuteranopia (Green-Red blind)" IsSelected="True"/>
                                <ComboBoxItem Content="Deuteranomaly (Green-Red weak)"/>
                                <ComboBoxItem Content="Tritanopia (Blue-Yellow blind)"/>
                                <ComboBoxItem Content="Tritanomaly (Blue-Yellow weak)"/>
                                <ComboBoxItem Content="Achromatopsia (No color)"/>
                                <ComboBoxItem Content="Achromatomaly (Weak color)"/>
                            </ComboBox>
                            <TextBlock x:Name="Zone2PostSimIntensityLabel" Text="Simulation Intensity (1.00)" Style="{StaticResource LabelStyle}"
                                       ToolTip="How strongly to apply the simulation (0 = off, 1 = full)"/>
                            <Slider x:Name="Zone2PostSimIntensitySlider" Minimum="0" Maximum="1" Value="1"
                                    Style="{StaticResource SliderStyle}" ValueChanged="Zone2PostSimIntensity_Changed"/>
                        </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Expander>

            <!-- Zone 3 (visible for quadrant mode) -->
            <Expander x:Name="Zone3Expander" Style="{StaticResource ZoneExpanderStyle}" Visibility="Collapsed">
                <Expander.Header>
                    <TextBlock x:Name="Zone3Header" Text="Zone 4 (Bottom-Right)" Style="{StaticResource ZoneHeaderStyle}"/>
                </Expander.Header>
                <StackPanel x:Name="Zone3Panel" Margin="0,8,0,0">
                    <TextBlock Text="Mode" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="Zone3ModeCombo" SelectionChanged="Zone3ModeCombo_SelectionChanged" Margin="0,0,0,8">
                        <ComboBoxItem Content="Original"/>
                        <ComboBoxItem Content="Simulation"/>
                        <ComboBoxItem Content="Correction"/>
                    </ComboBox>

                    <StackPanel x:Name="Zone3SimulationPanel" Visibility="Collapsed">
                        <TextBlock Text="Algorithm" Style="{StaticResource LabelStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <RadioButton x:Name="Zone3MachadoRadio" Content="Machado" IsChecked="True"
                                         Checked="Zone3Algorithm_Changed" Margin="0,0,16,0"/>
                            <RadioButton x:Name="Zone3StrictRadio" Content="Strict (LMS)"
                                         Checked="Zone3Algorithm_Changed"/>
                        </StackPanel>
                        <TextBlock Text="CVD Type" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="Zone3SimFilterCombo" SelectionChanged="Zone3SimFilter_Changed" Margin="0,0,0,8">
                            <ComboBoxItem Content="None"/>
                            <ComboBoxItem Content="Protanopia (red-blind)"/>
                            <ComboBoxItem Content="Protanomaly (red-weak)"/>
                            <ComboBoxItem Content="Deuteranopia (green-blind)"/>
                            <ComboBoxItem Content="Deuteranomaly (green-weak)"/>
                            <ComboBoxItem Content="Tritanopia (blue-blind)"/>
                            <ComboBoxItem Content="Tritanomaly (blue-weak)"/>
                            <ComboBoxItem Content="Achromatopsia"/>
                            <ComboBoxItem Content="Achromatomaly"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel x:Name="Zone3CorrectionPanel" Visibility="Collapsed">
                        <!-- Correction Algorithm Selection -->
                        <TextBlock Text="Correction Algorithm" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="Zone3CorrectionAlgorithmCombo" SelectionChanged="Zone3CorrectionAlgorithm_Changed" Margin="0,0,0,8">
                            <ComboBoxItem Content="LUT-Based (Color Remapping)" IsSelected="True"/>
                            <ComboBoxItem Content="Daltonization (Error Redistribution)"/>
                            <ComboBoxItem Content="Hue Rotation (Color Shift)"/>
                            <ComboBoxItem Content="CIELAB Remapping (Perceptual)"/>
                        </ComboBox>

                        <!-- Hue Rotation Settings -->
                        <StackPanel x:Name="Zone3HueRotationPanel" Visibility="Collapsed">
                            <TextBlock Text="Rotates problematic hue ranges to more distinguishable positions."
                                       TextWrapping="Wrap" Opacity="0.7" FontSize="11" Margin="0,0,0,8"/>
                            <TextBlock Text="CVD Type to Correct" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="Zone3HueRotationCVDCombo" SelectionChanged="Zone3HueRotationCVD_Changed" Margin="0,0,0,8">
                                <ComboBoxItem Content="Protanopia (red-blind)"/>
                                <ComboBoxItem Content="Protanomaly (red-weak)"/>
                                <ComboBoxItem Content="Deuteranopia (green-blind)" IsSelected="True"/>
                                <ComboBoxItem Content="Deuteranomaly (green-weak)"/>
                                <ComboBoxItem Content="Tritanopia (blue-blind)"/>
                                <ComboBoxItem Content="Tritanomaly (blue-weak)"/>
                            </ComboBox>
                            <TextBlock x:Name="Zone3HueRotationStrengthLabel" Text="Strength (1.00)" Style="{StaticResource LabelStyle}"/>
                            <Slider x:Name="Zone3HueRotationStrengthSlider" Minimum="0" Maximum="1" Value="1"
                                    Style="{StaticResource SliderStyle}" ValueChanged="Zone3HueRotationStrength_Changed"/>
                            <CheckBox x:Name="Zone3HueRotationAdvancedCheckBox" Content="Advanced Options"
                                      Margin="0,8,0,4" Checked="Zone3HueRotationAdvanced_Changed" Unchecked="Zone3HueRotationAdvanced_Changed"/>
                            <StackPanel x:Name="Zone3HueRotationAdvancedPanel" Visibility="Collapsed" Margin="16,0,0,0">
                                <TextBlock x:Name="Zone3HueRotationSourceStartLabel" Text="Source Start (0°)" Style="{StaticResource LabelStyle}"/>
                                <Slider x:Name="Zone3HueRotationSourceStartSlider" Minimum="0" Maximum="360" Value="0"
                                        Style="{StaticResource SliderStyle}" ValueChanged="Zone3HueRotationSourceStart_Changed"/>
                                <TextBlock x:Name="Zone3HueRotationSourceEndLabel" Text="Source End (120°)" Style="{StaticResource LabelStyle}"/>
                                <Slider x:Name="Zone3HueRotationSourceEndSlider" Minimum="0" Maximum="360" Value="120"
                                        Style="{StaticResource SliderStyle}" ValueChanged="Zone3HueRotationSourceEnd_Changed"/>
                                <TextBlock x:Name="Zone3HueRotationShiftLabel" Text="Hue Shift (+60°)" Style="{StaticResource LabelStyle}"/>
                                <Slider x:Name="Zone3HueRotationShiftSlider" Minimum="-180" Maximum="180" Value="60"
                                        Style="{StaticResource SliderStyle}" ValueChanged="Zone3HueRotationShift_Changed"/>
                                <TextBlock x:Name="Zone3HueRotationFalloffLabel" Text="Edge Falloff (0.30)" Style="{StaticResource LabelStyle}"/>
                                <Slider x:Name="Zone3HueRotationFalloffSlider" Minimum="0" Maximum="1" Value="0.3"
                                        Style="{StaticResource SliderStyle}" ValueChanged="Zone3HueRotationFalloff_Changed"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- CIELAB Remapping Settings -->
                        <StackPanel x:Name="Zone3CIELABPanel" Visibility="Collapsed">
                            <TextBlock Text="Transfers color information between perceptual axes."
                                       TextWrapping="Wrap" Opacity="0.7" FontSize="11" Margin="0,0,0,8"/>
                            <TextBlock Text="CVD Type to Correct" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="Zone3CIELABCVDCombo" SelectionChanged="Zone3CIELABCVD_Changed" Margin="0,0,0,8">
                                <ComboBoxItem Content="Protanopia (red-blind)"/>
                                <ComboBoxItem Content="Protanomaly (red-weak)"/>
                                <ComboBoxItem Content="Deuteranopia (green-blind)" IsSelected="True"/>
                                <ComboBoxItem Content="Deuteranomaly (green-weak)"/>
                                <ComboBoxItem Content="Tritanopia (blue-blind)"/>
                                <ComboBoxItem Content="Tritanomaly (blue-weak)"/>
                            </ComboBox>
                            <TextBlock x:Name="Zone3CIELABStrengthLabel" Text="Strength (1.00)" Style="{StaticResource LabelStyle}"/>
                            <Slider x:Name="Zone3CIELABStrengthSlider" Minimum="0" Maximum="1" Value="1"
                                    Style="{StaticResource SliderStyle}" ValueChanged="Zone3CIELABStrength_Changed"/>
                            <CheckBox x:Name="Zone3CIELABAdvancedCheckBox" Content="Advanced Options"
                                      Margin="0,8,0,4" Checked="Zone3CIELABAdvanced_Changed" Unchecked="Zone3CIELABAdvanced_Changed"/>
                            <StackPanel x:Name="Zone3CIELABAdvancedPanel" Visibility="Collapsed" Margin="16,0,0,0">
                                <TextBlock x:Name="Zone3CIELABAtoBLabel" Text="a* → b* Transfer (0.50)" Style="{StaticResource LabelStyle}"/>
                                <Slider x:Name="Zone3CIELABAtoBSlider" Minimum="-1" Maximum="1" Value="0.5"
                                        Style="{StaticResource SliderStyle}" ValueChanged="Zone3CIELABAtoB_Changed"/>
                                <TextBlock x:Name="Zone3CIELABBtoALabel" Text="b* → a* Transfer (0.00)" Style="{StaticResource LabelStyle}"/>
                                <Slider x:Name="Zone3CIELABBtoASlider" Minimum="-1" Maximum="1" Value="0"
                                        Style="{StaticResource SliderStyle}" ValueChanged="Zone3CIELABBtoA_Changed"/>
                                <TextBlock x:Name="Zone3CIELABAEnhanceLabel" Text="a* Enhancement (1.00)" Style="{StaticResource LabelStyle}"/>
                                <Slider x:Name="Zone3CIELABAEnhanceSlider" Minimum="0" Maximum="2" Value="1"
                                        Style="{StaticResource SliderStyle}" ValueChanged="Zone3CIELABAEnhance_Changed"/>
                                <TextBlock x:Name="Zone3CIELABBEnhanceLabel" Text="b* Enhancement (1.00)" Style="{StaticResource LabelStyle}"/>
                                <Slider x:Name="Zone3CIELABBEnhanceSlider" Minimum="0" Maximum="2" Value="1"
                                        Style="{StaticResource SliderStyle}" ValueChanged="Zone3CIELABBEnhance_Changed"/>
                                <TextBlock x:Name="Zone3CIELABLEnhanceLabel" Text="Lightness Encoding (0.00)" Style="{StaticResource LabelStyle}"/>
                                <Slider x:Name="Zone3CIELABLEnhanceSlider" Minimum="0" Maximum="1" Value="0"
                                        Style="{StaticResource SliderStyle}" ValueChanged="Zone3CIELABLEnhance_Changed"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Daltonization Settings -->
                        <StackPanel x:Name="Zone3DaltonizationPanel" Visibility="Collapsed">
                            <TextBlock Text="Daltonization corrects colors by simulating how a CVD person sees them, then redistributing the 'lost' color information into channels they can perceive."
                                       TextWrapping="Wrap" Opacity="0.7" FontSize="11" Margin="0,0,0,8"/>
                            <TextBlock Text="CVD Type to Correct" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="Zone3DaltonizationCVDCombo" SelectionChanged="Zone3DaltonizationCVD_Changed" Margin="0,0,0,8">
                                <ComboBoxItem Content="Protanopia (red-blind)"/>
                                <ComboBoxItem Content="Protanomaly (red-weak)"/>
                                <ComboBoxItem Content="Deuteranopia (green-blind)" IsSelected="True"/>
                                <ComboBoxItem Content="Deuteranomaly (green-weak)"/>
                                <ComboBoxItem Content="Tritanopia (blue-blind)"/>
                                <ComboBoxItem Content="Tritanomaly (blue-weak)"/>
                            </ComboBox>
                            <TextBlock x:Name="Zone3DaltonizationStrengthLabel" Text="Strength (1.00)" Style="{StaticResource LabelStyle}"/>
                            <Slider x:Name="Zone3DaltonizationStrengthSlider" Minimum="0" Maximum="1" Value="1"
                                    Style="{StaticResource SliderStyle}" ValueChanged="Zone3DaltonizationStrength_Changed"/>
                        </StackPanel>

                        <!-- LUT-Based Settings -->
                        <StackPanel x:Name="Zone3LUTPanel">
                            <TextBlock Text="Preset" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="Zone3PresetCombo" Grid.Column="0" Margin="0,0,8,0"
                                          SelectionChanged="Zone3PresetCombo_SelectionChanged"/>
                                <Button Content="Apply" Grid.Column="1" Click="Zone3ApplyPreset_Click" Padding="12,4"/>
                            </Grid>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button x:Name="Zone3SaveAsPresetButton" Content="Save As..."
                                    Click="Zone3SaveAsPreset_Click" Padding="8,4" Margin="0,0,4,0"/>
                            <Button x:Name="Zone3SavePresetButton" Content="Update"
                                    Click="Zone3SavePreset_Click" Padding="8,4" Margin="0,0,4,0"
                                    IsEnabled="False"/>
                            <Button x:Name="Zone3ExportPresetButton" Content="Export"
                                    Click="Zone3ExportPreset_Click" Padding="8,4" Margin="0,0,4,0"/>
                            <Button x:Name="Zone3ImportPresetButton" Content="Import"
                                    Click="Zone3ImportPreset_Click" Padding="8,4" Margin="0,0,4,0"/>
                            <Button x:Name="Zone3DeletePresetButton" Content="Delete"
                                    Click="Zone3DeletePreset_Click" Padding="8,4"
                                    IsEnabled="False"
                                    ToolTip="Delete the selected custom preset"/>
                        </StackPanel>

                        <!-- Simulation-Guided Correction -->
                        <Separator Margin="0,12,0,8"/>
                        <CheckBox x:Name="Zone3SimGuidedCheckBox" Content="Simulation-Guided Correction"
                                  Margin="0,0,0,4"
                                  Checked="Zone3SimGuided_Changed" Unchecked="Zone3SimGuided_Changed"/>
                        <StackPanel x:Name="Zone3SimGuidedPanel" Visibility="Collapsed" Margin="16,0,0,0">
                            <TextBlock Text="Detection Algorithm" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <RadioButton x:Name="Zone3SimGuidedMachadoRadio" Content="Machado" IsChecked="True"
                                             Checked="Zone3SimGuidedAlgorithm_Changed" Margin="0,0,16,0"/>
                                <RadioButton x:Name="Zone3SimGuidedStrictRadio" Content="Strict (LMS)"
                                             Checked="Zone3SimGuidedAlgorithm_Changed"/>
                            </StackPanel>
                            <TextBlock Text="CVD Type to Detect" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="Zone3SimGuidedFilterCombo" SelectionChanged="Zone3SimGuidedFilter_Changed" Margin="0,0,0,8">
                                <ComboBoxItem Content="Protanopia (Red-Green blind)"/>
                                <ComboBoxItem Content="Protanomaly (Red-Green weak)"/>
                                <ComboBoxItem Content="Deuteranopia (Green-Red blind)" IsSelected="True"/>
                                <ComboBoxItem Content="Deuteranomaly (Green-Red weak)"/>
                                <ComboBoxItem Content="Tritanopia (Blue-Yellow blind)"/>
                                <ComboBoxItem Content="Tritanomaly (Blue-Yellow weak)"/>
                                <ComboBoxItem Content="Achromatopsia (No color)"/>
                                <ComboBoxItem Content="Achromatomaly (Weak color)"/>
                            </ComboBox>
                            <TextBlock x:Name="Zone3SimGuidedSensitivityLabel" Text="Sensitivity (2.00)" Style="{StaticResource LabelStyle}"
                                       ToolTip="Lower = only strongly affected pixels, Higher = more pixels corrected"/>
                            <Slider x:Name="Zone3SimGuidedSensitivitySlider" Minimum="0.5" Maximum="25" Value="2"
                                    Style="{StaticResource SliderStyle}" ValueChanged="Zone3SimGuidedSensitivity_Changed"/>
                        </StackPanel>
                        <Separator Margin="0,8,0,8"/>

                        <local:CorrectionEditor x:Name="Zone3CorrectionEditor" Margin="0,8,0,0"/>

                        <!-- Post-Correction Simulation (Re-simulate for Verification) -->
                        <Separator Margin="0,12,0,8"/>
                        <CheckBox x:Name="Zone3PostSimCheckBox" Content="Re-simulate for Verification"
                                  Margin="0,0,0,4"
                                  ToolTip="Apply CVD simulation AFTER correction to see how corrected colors appear to colorblind users"
                                  Checked="Zone3PostSim_Changed" Unchecked="Zone3PostSim_Changed"/>
                        <StackPanel x:Name="Zone3PostSimPanel" Visibility="Collapsed" Margin="16,0,0,0">
                            <TextBlock Text="Simulation Algorithm" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <RadioButton x:Name="Zone3PostSimMachadoRadio" Content="Machado" IsChecked="True"
                                             Checked="Zone3PostSimAlgorithm_Changed" Margin="0,0,16,0"/>
                                <RadioButton x:Name="Zone3PostSimStrictRadio" Content="Strict (LMS)"
                                             Checked="Zone3PostSimAlgorithm_Changed"/>
                            </StackPanel>
                            <TextBlock Text="CVD Type to Simulate" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="Zone3PostSimFilterCombo" SelectionChanged="Zone3PostSimFilter_Changed" Margin="0,0,0,8">
                                <ComboBoxItem Content="Protanopia (Red-Green blind)"/>
                                <ComboBoxItem Content="Protanomaly (Red-Green weak)"/>
                                <ComboBoxItem Content="Deuteranopia (Green-Red blind)" IsSelected="True"/>
                                <ComboBoxItem Content="Deuteranomaly (Green-Red weak)"/>
                                <ComboBoxItem Content="Tritanopia (Blue-Yellow blind)"/>
                                <ComboBoxItem Content="Tritanomaly (Blue-Yellow weak)"/>
                                <ComboBoxItem Content="Achromatopsia (No color)"/>
                                <ComboBoxItem Content="Achromatomaly (Weak color)"/>
                            </ComboBox>
                            <TextBlock x:Name="Zone3PostSimIntensityLabel" Text="Simulation Intensity (1.00)" Style="{StaticResource LabelStyle}"
                                       ToolTip="How strongly to apply the simulation (0 = off, 1 = full)"/>
                            <Slider x:Name="Zone3PostSimIntensitySlider" Minimum="0" Maximum="1" Value="1"
                                    Style="{StaticResource SliderStyle}" ValueChanged="Zone3PostSimIntensity_Changed"/>
                        </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Expander>

        </StackPanel>
    </StackPanel>
</UserControl>
