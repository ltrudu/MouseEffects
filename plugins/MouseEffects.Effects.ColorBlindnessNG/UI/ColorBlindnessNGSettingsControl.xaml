<UserControl x:Class="MouseEffects.Effects.ColorBlindnessNG.UI.ColorBlindnessNGSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="320">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="SectionStyle">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ChannelHeaderStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Header Row -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox x:Name="EnabledCheckBox" Content="Enabled" Grid.Column="0"
                      VerticalAlignment="Center"
                      IsChecked="True" Checked="EnabledCheckBox_Changed" Unchecked="EnabledCheckBox_Changed"/>

            <TextBlock Text="Color Blindness NG" Grid.Column="1"
                       FontWeight="Bold" FontSize="14"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0"/>

            <Button x:Name="FoldButton" Grid.Column="2"
                    Content="&#x25BC;" Width="24" Height="24"
                    Background="Transparent" BorderThickness="0"
                    Click="FoldButton_Click" ToolTip="Expand/Collapse settings"/>
        </Grid>

        <!-- Description -->
        <TextBlock Text="Next-gen CVD simulation and correction with LUT-based color remapping."
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0"/>

        <!-- Collapsible Content -->
        <StackPanel x:Name="ContentPanel" Visibility="Collapsed" Margin="0,8,0,0">

            <!-- Mode Selection -->
            <TextBlock Text="Operating Mode" Style="{StaticResource SectionStyle}"/>
            <ComboBox x:Name="ModeCombo" SelectionChanged="ModeCombo_SelectionChanged" Margin="0,0,0,12">
                <ComboBoxItem Content="Simulation (show what CVD people see)" IsSelected="True"/>
                <ComboBoxItem Content="Correction (help CVD users see better)"/>
            </ComboBox>

            <!-- ======================== SIMULATION MODE UI ======================== -->
            <StackPanel x:Name="SimulationPanel">
                <TextBlock Text="Simulation Settings" Style="{StaticResource SectionStyle}"/>

                <TextBlock Text="Algorithm" Style="{StaticResource LabelStyle}"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <RadioButton x:Name="MachadoRadio" Content="Machado (RGB)" IsChecked="True"
                                 Checked="Algorithm_Changed" Margin="0,0,16,0"/>
                    <RadioButton x:Name="StrictRadio" Content="Strict (LMS)"
                                 Checked="Algorithm_Changed"/>
                </StackPanel>

                <TextBlock Text="CVD Type" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="SimulationFilterCombo" SelectionChanged="SimulationFilterCombo_SelectionChanged" Margin="0,0,0,8">
                    <ComboBoxItem Content="None" IsSelected="True"/>
                    <ComboBoxItem Content="Protanopia (red-blind)"/>
                    <ComboBoxItem Content="Protanomaly (red-weak)"/>
                    <ComboBoxItem Content="Deuteranopia (green-blind)"/>
                    <ComboBoxItem Content="Deuteranomaly (green-weak)"/>
                    <ComboBoxItem Content="Tritanopia (blue-blind)"/>
                    <ComboBoxItem Content="Tritanomaly (blue-weak)"/>
                    <ComboBoxItem Content="Achromatopsia (monochromacy)"/>
                    <ComboBoxItem Content="Achromatomaly (weak color)"/>
                </ComboBox>
            </StackPanel>

            <!-- ======================== CORRECTION MODE UI ======================== -->
            <StackPanel x:Name="CorrectionPanel" Visibility="Collapsed">
                <TextBlock Text="Correction Settings" Style="{StaticResource SectionStyle}"/>

                <!-- Preset Selection -->
                <TextBlock Text="Preset" Style="{StaticResource LabelStyle}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="PresetCombo" Grid.Column="0" Margin="0,0,8,0">
                        <ComboBoxItem Content="Custom" IsSelected="True"/>
                        <ComboBoxItem Content="Deuteranopia"/>
                        <ComboBoxItem Content="Protanopia"/>
                        <ComboBoxItem Content="Tritanopia"/>
                        <ComboBoxItem Content="Deuteranomaly"/>
                        <ComboBoxItem Content="Protanomaly"/>
                        <ComboBoxItem Content="Tritanomaly"/>
                        <ComboBoxItem Content="Red-Green (Both)"/>
                        <ComboBoxItem Content="High Contrast"/>
                    </ComboBox>
                    <Button x:Name="ApplyPresetButton" Grid.Column="1" Content="Apply"
                            Click="ApplyPresetButton_Click" Padding="12,4"/>
                </Grid>

                <!-- Application Mode -->
                <TextBlock Text="Application Mode" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="ApplicationModeCombo" SelectionChanged="ApplicationModeCombo_SelectionChanged" Margin="0,0,0,8">
                    <ComboBoxItem Content="Full Channel (apply to all pixels)" IsSelected="True"/>
                    <ComboBoxItem Content="Dominant Only (apply when channel is strongest)"/>
                    <ComboBoxItem Content="Threshold (apply above threshold)"/>
                </ComboBox>

                <!-- Threshold (only visible in threshold mode) -->
                <StackPanel x:Name="ThresholdPanel" Visibility="Collapsed">
                    <TextBlock Text="Threshold" Style="{StaticResource LabelStyle}"/>
                    <Slider x:Name="ThresholdSlider" Minimum="0" Maximum="1" Value="0.3"
                            Style="{StaticResource SliderStyle}" ValueChanged="ThresholdSlider_ValueChanged"/>
                    <TextBlock x:Name="ThresholdValue" Text="0.30" Opacity="0.7" FontSize="11"/>
                </StackPanel>

                <!-- Gradient Type -->
                <TextBlock Text="Gradient Interpolation" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="GradientTypeCombo" SelectionChanged="GradientTypeCombo_SelectionChanged" Margin="0,0,0,8">
                    <ComboBoxItem Content="Linear RGB (fast)" IsSelected="True"/>
                    <ComboBoxItem Content="Perceptual LAB (smooth)"/>
                    <ComboBoxItem Content="HSL (vibrant)"/>
                </ComboBox>

                <Separator Margin="0,8,0,8"/>

                <!-- Red Channel -->
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox x:Name="RedEnabledCheckBox" Grid.Column="0" VerticalAlignment="Center"
                                  Checked="ChannelEnabled_Changed" Unchecked="ChannelEnabled_Changed"/>
                        <TextBlock Grid.Column="1" Text="Red Channel" Foreground="#FFCC6666"
                                   Style="{StaticResource ChannelHeaderStyle}"/>
                    </Grid>
                    <StackPanel x:Name="RedChannelPanel" Visibility="Collapsed" Margin="20,0,0,0">
                        <TextBlock Text="Strength" Style="{StaticResource LabelStyle}"/>
                        <Slider x:Name="RedStrengthSlider" Minimum="0" Maximum="1" Value="1"
                                Style="{StaticResource SliderStyle}" ValueChanged="RedStrengthSlider_ValueChanged"/>
                        <TextBlock x:Name="RedStrengthValue" Text="1.00" Opacity="0.7" FontSize="11"/>

                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Start Color" FontSize="11" Opacity="0.7"/>
                                <Border x:Name="RedStartColorBorder" Height="24" Margin="0,2,4,0"
                                        Background="#FF0000" BorderBrush="Gray" BorderThickness="1"
                                        MouseLeftButtonDown="RedStartColor_Click" Cursor="Hand"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" Text="&#x2192;" VerticalAlignment="Center" Margin="4"/>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="End Color" FontSize="11" Opacity="0.7"/>
                                <Border x:Name="RedEndColorBorder" Height="24" Margin="4,2,0,0"
                                        Background="#00FFFF" BorderBrush="Gray" BorderThickness="1"
                                        MouseLeftButtonDown="RedEndColor_Click" Cursor="Hand"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </StackPanel>

                <!-- Green Channel -->
                <StackPanel Margin="0,8,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox x:Name="GreenEnabledCheckBox" Grid.Column="0" VerticalAlignment="Center"
                                  Checked="ChannelEnabled_Changed" Unchecked="ChannelEnabled_Changed"/>
                        <TextBlock Grid.Column="1" Text="Green Channel" Foreground="#FF66CC66"
                                   Style="{StaticResource ChannelHeaderStyle}"/>
                    </Grid>
                    <StackPanel x:Name="GreenChannelPanel" Visibility="Collapsed" Margin="20,0,0,0">
                        <TextBlock Text="Strength" Style="{StaticResource LabelStyle}"/>
                        <Slider x:Name="GreenStrengthSlider" Minimum="0" Maximum="1" Value="1"
                                Style="{StaticResource SliderStyle}" ValueChanged="GreenStrengthSlider_ValueChanged"/>
                        <TextBlock x:Name="GreenStrengthValue" Text="1.00" Opacity="0.7" FontSize="11"/>

                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Start Color" FontSize="11" Opacity="0.7"/>
                                <Border x:Name="GreenStartColorBorder" Height="24" Margin="0,2,4,0"
                                        Background="#00FF00" BorderBrush="Gray" BorderThickness="1"
                                        MouseLeftButtonDown="GreenStartColor_Click" Cursor="Hand"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" Text="&#x2192;" VerticalAlignment="Center" Margin="4"/>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="End Color" FontSize="11" Opacity="0.7"/>
                                <Border x:Name="GreenEndColorBorder" Height="24" Margin="4,2,0,0"
                                        Background="#00FFFF" BorderBrush="Gray" BorderThickness="1"
                                        MouseLeftButtonDown="GreenEndColor_Click" Cursor="Hand"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </StackPanel>

                <!-- Blue Channel -->
                <StackPanel Margin="0,8,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox x:Name="BlueEnabledCheckBox" Grid.Column="0" VerticalAlignment="Center"
                                  Checked="ChannelEnabled_Changed" Unchecked="ChannelEnabled_Changed"/>
                        <TextBlock Grid.Column="1" Text="Blue Channel" Foreground="#FF6699FF"
                                   Style="{StaticResource ChannelHeaderStyle}"/>
                    </Grid>
                    <StackPanel x:Name="BlueChannelPanel" Visibility="Collapsed" Margin="20,0,0,0">
                        <TextBlock Text="Strength" Style="{StaticResource LabelStyle}"/>
                        <Slider x:Name="BlueStrengthSlider" Minimum="0" Maximum="1" Value="1"
                                Style="{StaticResource SliderStyle}" ValueChanged="BlueStrengthSlider_ValueChanged"/>
                        <TextBlock x:Name="BlueStrengthValue" Text="1.00" Opacity="0.7" FontSize="11"/>

                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Start Color" FontSize="11" Opacity="0.7"/>
                                <Border x:Name="BlueStartColorBorder" Height="24" Margin="0,2,4,0"
                                        Background="#0000FF" BorderBrush="Gray" BorderThickness="1"
                                        MouseLeftButtonDown="BlueStartColor_Click" Cursor="Hand"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" Text="&#x2192;" VerticalAlignment="Center" Margin="4"/>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="End Color" FontSize="11" Opacity="0.7"/>
                                <Border x:Name="BlueEndColorBorder" Height="24" Margin="4,2,0,0"
                                        Background="#FFFF00" BorderBrush="Gray" BorderThickness="1"
                                        MouseLeftButtonDown="BlueEndColor_Click" Cursor="Hand"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <Separator Margin="0,12,0,8"/>

            <!-- Global Intensity -->
            <TextBlock Text="Global Intensity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="IntensitySlider" Minimum="0" Maximum="1" Value="1"
                    Style="{StaticResource SliderStyle}" ValueChanged="IntensitySlider_ValueChanged"/>
            <TextBlock x:Name="IntensityValue" Text="1.00" Opacity="0.7" FontSize="11"/>

        </StackPanel>
    </StackPanel>
</UserControl>
