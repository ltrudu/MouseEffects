<UserControl x:Class="MouseEffects.Effects.ColorBlindnessNG.UI.ColorBlindnessNGSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MouseEffects.Effects.ColorBlindnessNG.UI"
             mc:Ignorable="d" d:DesignWidth="320">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="SectionStyle">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ZoneHeaderStyle">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ChannelHeaderStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ValueStyle">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="Expander" x:Key="ZoneExpanderStyle">
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Header Row -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox x:Name="EnabledCheckBox" Content="Enabled" Grid.Column="0"
                      VerticalAlignment="Center"
                      IsChecked="True" Checked="EnabledCheckBox_Changed" Unchecked="EnabledCheckBox_Changed"/>

            <TextBlock Text="Color Blindness NG" Grid.Column="1"
                       FontWeight="Bold" FontSize="14"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0"/>

            <Button x:Name="FoldButton" Grid.Column="2"
                    Content="&#x25BC;" Width="24" Height="24"
                    Background="Transparent" BorderThickness="0"
                    Click="FoldButton_Click" ToolTip="Expand/Collapse settings"/>
        </Grid>

        <!-- Description -->
        <TextBlock Text="Per-zone CVD simulation and correction with LUT-based color remapping."
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0"/>

        <!-- Collapsible Content -->
        <StackPanel x:Name="ContentPanel" Visibility="Collapsed" Margin="0,8,0,0">

            <!-- ======================== SPLIT SCREEN SETTINGS ======================== -->
            <TextBlock Text="Split Screen Layout" Style="{StaticResource SectionStyle}"/>

            <TextBlock Text="Display Mode" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="SplitModeCombo" SelectionChanged="SplitModeCombo_SelectionChanged" Margin="0,0,0,8">
                <ComboBoxItem Content="Fullscreen (1 zone)" IsSelected="True"/>
                <ComboBoxItem Content="Split Vertical (Left/Right)"/>
                <ComboBoxItem Content="Split Horizontal (Top/Bottom)"/>
                <ComboBoxItem Content="4 Quadrants"/>
                <ComboBoxItem Content="Circle (follows cursor)"/>
                <ComboBoxItem Content="Rectangle (follows cursor)"/>
            </ComboBox>

            <!-- Split Position Sliders (hidden for shape modes) -->
            <!-- Horizontal Split Position (for vertical split: left/right) -->
            <StackPanel x:Name="SplitPositionPanel" Visibility="Collapsed">
                <TextBlock Text="Horizontal Split Position" Style="{StaticResource LabelStyle}"/>
                <Slider x:Name="SplitPositionSlider" Minimum="0.1" Maximum="0.9" Value="0.5"
                        Style="{StaticResource SliderStyle}" ValueChanged="SplitPositionSlider_ValueChanged"/>
                <TextBlock x:Name="SplitPositionValue" Text="50%" Style="{StaticResource ValueStyle}"/>
            </StackPanel>

            <!-- Vertical Split Position (for horizontal split: top/bottom) -->
            <StackPanel x:Name="SplitPositionVPanel" Visibility="Collapsed">
                <TextBlock Text="Vertical Split Position" Style="{StaticResource LabelStyle}"/>
                <Slider x:Name="SplitPositionVSlider" Minimum="0.1" Maximum="0.9" Value="0.5"
                        Style="{StaticResource SliderStyle}" ValueChanged="SplitPositionVSlider_ValueChanged"/>
                <TextBlock x:Name="SplitPositionVValue" Text="50%" Style="{StaticResource ValueStyle}"/>
            </StackPanel>

            <!-- Shape Settings (Circle and Rectangle modes) -->
            <StackPanel x:Name="ShapeSettingsPanel" Visibility="Collapsed">
                <TextBlock Text="Shape Settings" Style="{StaticResource SectionStyle}"/>

                <!-- Circle: Radius -->
                <StackPanel x:Name="CircleSettingsPanel" Visibility="Collapsed">
                    <TextBlock Text="Radius (pixels)" Style="{StaticResource LabelStyle}"/>
                    <Slider x:Name="RadiusSlider" Minimum="10" Maximum="1000" Value="200"
                            Style="{StaticResource SliderStyle}" ValueChanged="RadiusSlider_ValueChanged"/>
                    <TextBlock x:Name="RadiusValue" Text="200 px" Style="{StaticResource ValueStyle}"/>
                </StackPanel>

                <!-- Rectangle: Width, Height, Square checkbox -->
                <StackPanel x:Name="RectangleSettingsPanel" Visibility="Collapsed">
                    <TextBlock Text="Width (pixels)" Style="{StaticResource LabelStyle}"/>
                    <Slider x:Name="RectWidthSlider" Minimum="10" Maximum="2000" Value="300"
                            Style="{StaticResource SliderStyle}" ValueChanged="RectWidthSlider_ValueChanged"/>
                    <TextBlock x:Name="RectWidthValue" Text="300 px" Style="{StaticResource ValueStyle}"/>

                    <TextBlock Text="Height (pixels)" Style="{StaticResource LabelStyle}"/>
                    <Slider x:Name="RectHeightSlider" Minimum="10" Maximum="2000" Value="200"
                            Style="{StaticResource SliderStyle}" ValueChanged="RectHeightSlider_ValueChanged"/>
                    <TextBlock x:Name="RectHeightValue" Text="200 px" Style="{StaticResource ValueStyle}"/>

                    <CheckBox x:Name="SquareCheckBox" Content="Square (sync width and height)"
                              Margin="0,4,0,0" Checked="SquareCheckBox_Changed" Unchecked="SquareCheckBox_Changed"/>
                </StackPanel>

                <!-- Edge Softness (for both Circle and Rectangle) -->
                <TextBlock Text="Edge Softness" Style="{StaticResource LabelStyle}"/>
                <Slider x:Name="EdgeSoftnessSlider" Minimum="0" Maximum="1" Value="0.2"
                        Style="{StaticResource SliderStyle}" ValueChanged="EdgeSoftnessSlider_ValueChanged"/>
                <TextBlock x:Name="EdgeSoftnessValue" Text="0.20 (Soft)" Style="{StaticResource ValueStyle}"/>
            </StackPanel>

            <!-- Comparison Mode (hidden for shape modes) -->
            <CheckBox x:Name="ComparisonModeCheckBox" Content="Comparison Mode (Zone 1 shows original)"
                      Margin="0,8,0,0" Visibility="Collapsed"
                      Checked="ComparisonModeCheckBox_Changed" Unchecked="ComparisonModeCheckBox_Changed"/>

            <Separator Margin="0,12,0,8"/>

            <!-- ======================== ZONE SETTINGS ======================== -->

            <!-- Zone 0 (always visible) -->
            <Expander x:Name="Zone0Expander" Style="{StaticResource ZoneExpanderStyle}" IsExpanded="True">
                <Expander.Header>
                    <TextBlock x:Name="Zone0Header" Text="Zone 1 (Left / Top-Left)" Style="{StaticResource ZoneHeaderStyle}"/>
                </Expander.Header>
                <StackPanel x:Name="Zone0Panel" Margin="0,8,0,0">
                    <!-- Zone Mode -->
                    <TextBlock Text="Mode" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="Zone0ModeCombo" SelectionChanged="Zone0ModeCombo_SelectionChanged" Margin="0,0,0,8">
                        <ComboBoxItem Content="Original (no processing)"/>
                        <ComboBoxItem Content="Simulation (show CVD view)"/>
                        <ComboBoxItem Content="Correction (enhance colors)"/>
                    </ComboBox>

                    <!-- Simulation Settings -->
                    <StackPanel x:Name="Zone0SimulationPanel" Visibility="Collapsed">
                        <TextBlock Text="Algorithm" Style="{StaticResource LabelStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <RadioButton x:Name="Zone0MachadoRadio" Content="Machado" IsChecked="True"
                                         Checked="Zone0Algorithm_Changed" Margin="0,0,16,0"/>
                            <RadioButton x:Name="Zone0StrictRadio" Content="Strict (LMS)"
                                         Checked="Zone0Algorithm_Changed"/>
                        </StackPanel>

                        <TextBlock Text="CVD Type" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="Zone0SimFilterCombo" SelectionChanged="Zone0SimFilter_Changed" Margin="0,0,0,8">
                            <ComboBoxItem Content="None"/>
                            <ComboBoxItem Content="Protanopia (red-blind)"/>
                            <ComboBoxItem Content="Protanomaly (red-weak)"/>
                            <ComboBoxItem Content="Deuteranopia (green-blind)"/>
                            <ComboBoxItem Content="Deuteranomaly (green-weak)"/>
                            <ComboBoxItem Content="Tritanopia (blue-blind)"/>
                            <ComboBoxItem Content="Tritanomaly (blue-weak)"/>
                            <ComboBoxItem Content="Achromatopsia"/>
                            <ComboBoxItem Content="Achromatomaly"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Correction Settings -->
                    <StackPanel x:Name="Zone0CorrectionPanel" Visibility="Collapsed">
                        <!-- Preset -->
                        <TextBlock Text="Preset" Style="{StaticResource LabelStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="Zone0PresetCombo" Grid.Column="0" Margin="0,0,8,0"
                                      SelectionChanged="Zone0PresetCombo_SelectionChanged"/>
                            <Button x:Name="Zone0ApplyPresetButton" Grid.Column="1" Content="Apply"
                                    Click="Zone0ApplyPreset_Click" Padding="12,4"/>
                        </Grid>

                        <!-- Custom Preset Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button x:Name="SaveAsPresetButton" Content="Save As..."
                                    Click="SaveAsPresetButton_Click" Padding="8,4" Margin="0,0,4,0"
                                    ToolTip="Save current settings as a new custom preset"/>
                            <Button x:Name="SavePresetButton" Content="Update"
                                    Click="SavePresetButton_Click" Padding="8,4" Margin="0,0,4,0"
                                    IsEnabled="False"
                                    ToolTip="Update the selected custom preset with current settings"/>
                            <Button x:Name="ExportPresetButton" Content="Export"
                                    Click="ExportPresetButton_Click" Padding="8,4" Margin="0,0,4,0"
                                    ToolTip="Export selected preset to file"/>
                            <Button x:Name="ImportPresetButton" Content="Import"
                                    Click="ImportPresetButton_Click" Padding="8,4"
                                    ToolTip="Import preset from file"/>
                        </StackPanel>

                        <!-- Simulation-Guided Correction -->
                        <Separator Margin="0,12,0,8"/>
                        <CheckBox x:Name="Zone0SimGuidedCheckBox" Content="Simulation-Guided Correction"
                                  Margin="0,0,0,4"
                                  ToolTip="Only apply correction to pixels that would be affected by CVD (detected via simulation)"
                                  Checked="Zone0SimGuided_Changed" Unchecked="Zone0SimGuided_Changed"/>
                        <StackPanel x:Name="Zone0SimGuidedPanel" Visibility="Collapsed" Margin="16,0,0,0">
                            <TextBlock Text="Detection Algorithm" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <RadioButton x:Name="Zone0SimGuidedMachadoRadio" Content="Machado" IsChecked="True"
                                             Checked="Zone0SimGuidedAlgorithm_Changed" Margin="0,0,16,0"/>
                                <RadioButton x:Name="Zone0SimGuidedStrictRadio" Content="Strict (LMS)"
                                             Checked="Zone0SimGuidedAlgorithm_Changed"/>
                            </StackPanel>
                            <TextBlock Text="CVD Type to Detect" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="Zone0SimGuidedFilterCombo" SelectionChanged="Zone0SimGuidedFilter_Changed" Margin="0,0,0,8">
                                <ComboBoxItem Content="Protanopia (Red-Green blind)"/>
                                <ComboBoxItem Content="Protanomaly (Red-Green weak)"/>
                                <ComboBoxItem Content="Deuteranopia (Green-Red blind)" IsSelected="True"/>
                                <ComboBoxItem Content="Deuteranomaly (Green-Red weak)"/>
                                <ComboBoxItem Content="Tritanopia (Blue-Yellow blind)"/>
                                <ComboBoxItem Content="Tritanomaly (Blue-Yellow weak)"/>
                                <ComboBoxItem Content="Achromatopsia (No color)"/>
                                <ComboBoxItem Content="Achromatomaly (Weak color)"/>
                            </ComboBox>
                            <TextBlock x:Name="Zone0SimGuidedSensitivityLabel" Text="Sensitivity (2.00)" Style="{StaticResource LabelStyle}"
                                       ToolTip="Lower = only strongly affected pixels, Higher = more pixels corrected"/>
                            <Slider x:Name="Zone0SimGuidedSensitivitySlider" Minimum="0.5" Maximum="25" Value="2"
                                    Style="{StaticResource SliderStyle}" ValueChanged="Zone0SimGuidedSensitivity_Changed"/>
                        </StackPanel>
                        <Separator Margin="0,8,0,8"/>

                        <local:CorrectionEditor x:Name="Zone0CorrectionEditor" Margin="0,8,0,0"/>

                        <!-- Post-Correction Simulation (Re-simulate for Verification) -->
                        <Separator Margin="0,12,0,8"/>
                        <CheckBox x:Name="Zone0PostSimCheckBox" Content="Re-simulate for Verification"
                                  Margin="0,0,0,4"
                                  ToolTip="Apply CVD simulation AFTER correction to see how corrected colors appear to colorblind users"
                                  Checked="Zone0PostSim_Changed" Unchecked="Zone0PostSim_Changed"/>
                        <StackPanel x:Name="Zone0PostSimPanel" Visibility="Collapsed" Margin="16,0,0,0">
                            <TextBlock Text="Simulation Algorithm" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <RadioButton x:Name="Zone0PostSimMachadoRadio" Content="Machado" IsChecked="True"
                                             Checked="Zone0PostSimAlgorithm_Changed" Margin="0,0,16,0"/>
                                <RadioButton x:Name="Zone0PostSimStrictRadio" Content="Strict (LMS)"
                                             Checked="Zone0PostSimAlgorithm_Changed"/>
                            </StackPanel>
                            <TextBlock Text="CVD Type to Simulate" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="Zone0PostSimFilterCombo" SelectionChanged="Zone0PostSimFilter_Changed" Margin="0,0,0,8">
                                <ComboBoxItem Content="Protanopia (Red-Green blind)"/>
                                <ComboBoxItem Content="Protanomaly (Red-Green weak)"/>
                                <ComboBoxItem Content="Deuteranopia (Green-Red blind)" IsSelected="True"/>
                                <ComboBoxItem Content="Deuteranomaly (Green-Red weak)"/>
                                <ComboBoxItem Content="Tritanopia (Blue-Yellow blind)"/>
                                <ComboBoxItem Content="Tritanomaly (Blue-Yellow weak)"/>
                                <ComboBoxItem Content="Achromatopsia (No color)"/>
                                <ComboBoxItem Content="Achromatomaly (Weak color)"/>
                            </ComboBox>
                            <TextBlock x:Name="Zone0PostSimIntensityLabel" Text="Simulation Intensity (1.00)" Style="{StaticResource LabelStyle}"
                                       ToolTip="How strongly to apply the simulation (0 = off, 1 = full)"/>
                            <Slider x:Name="Zone0PostSimIntensitySlider" Minimum="0" Maximum="1" Value="1"
                                    Style="{StaticResource SliderStyle}" ValueChanged="Zone0PostSimIntensity_Changed"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Intensity -->
                    <StackPanel x:Name="Zone0IntensityPanel" Visibility="Collapsed">
                        <TextBlock x:Name="Zone0IntensityLabel" Text="Intensity (1.00)" Style="{StaticResource LabelStyle}"/>
                        <Slider x:Name="Zone0IntensitySlider" Minimum="0" Maximum="1" Value="1"
                                ValueChanged="Zone0Intensity_Changed"/>
                    </StackPanel>
                </StackPanel>
            </Expander>

            <!-- Zone 1 (visible for split modes) -->
            <Expander x:Name="Zone1Expander" Style="{StaticResource ZoneExpanderStyle}" Visibility="Collapsed">
                <Expander.Header>
                    <TextBlock x:Name="Zone1Header" Text="Zone 2 (Right / Top-Right)" Style="{StaticResource ZoneHeaderStyle}"/>
                </Expander.Header>
                <StackPanel x:Name="Zone1Panel" Margin="0,8,0,0">
                    <TextBlock Text="Mode" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="Zone1ModeCombo" SelectionChanged="Zone1ModeCombo_SelectionChanged" Margin="0,0,0,8">
                        <ComboBoxItem Content="Original (no processing)"/>
                        <ComboBoxItem Content="Simulation (show CVD view)"/>
                        <ComboBoxItem Content="Correction (enhance colors)"/>
                    </ComboBox>

                    <StackPanel x:Name="Zone1SimulationPanel" Visibility="Collapsed">
                        <TextBlock Text="Algorithm" Style="{StaticResource LabelStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <RadioButton x:Name="Zone1MachadoRadio" Content="Machado" IsChecked="True"
                                         Checked="Zone1Algorithm_Changed" Margin="0,0,16,0"/>
                            <RadioButton x:Name="Zone1StrictRadio" Content="Strict (LMS)"
                                         Checked="Zone1Algorithm_Changed"/>
                        </StackPanel>
                        <TextBlock Text="CVD Type" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="Zone1SimFilterCombo" SelectionChanged="Zone1SimFilter_Changed" Margin="0,0,0,8">
                            <ComboBoxItem Content="None"/>
                            <ComboBoxItem Content="Protanopia"/>
                            <ComboBoxItem Content="Protanomaly"/>
                            <ComboBoxItem Content="Deuteranopia"/>
                            <ComboBoxItem Content="Deuteranomaly"/>
                            <ComboBoxItem Content="Tritanopia"/>
                            <ComboBoxItem Content="Tritanomaly"/>
                            <ComboBoxItem Content="Achromatopsia"/>
                            <ComboBoxItem Content="Achromatomaly"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel x:Name="Zone1CorrectionPanel" Visibility="Collapsed">
                        <TextBlock Text="Preset" Style="{StaticResource LabelStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="Zone1PresetCombo" Grid.Column="0" Margin="0,0,8,0"
                                      SelectionChanged="Zone1PresetCombo_SelectionChanged"/>
                            <Button x:Name="Zone1ApplyPresetButton" Grid.Column="1" Content="Apply"
                                    Click="Zone1ApplyPreset_Click" Padding="12,4"/>
                        </Grid>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button x:Name="Zone1SaveAsPresetButton" Content="Save As..."
                                    Click="Zone1SaveAsPreset_Click" Padding="8,4" Margin="0,0,4,0"/>
                            <Button x:Name="Zone1SavePresetButton" Content="Update"
                                    Click="Zone1SavePreset_Click" Padding="8,4" Margin="0,0,4,0"
                                    IsEnabled="False"/>
                            <Button x:Name="Zone1ExportPresetButton" Content="Export"
                                    Click="Zone1ExportPreset_Click" Padding="8,4" Margin="0,0,4,0"/>
                            <Button x:Name="Zone1ImportPresetButton" Content="Import"
                                    Click="Zone1ImportPreset_Click" Padding="8,4"/>
                        </StackPanel>

                        <!-- Simulation-Guided Correction -->
                        <Separator Margin="0,12,0,8"/>
                        <CheckBox x:Name="Zone1SimGuidedCheckBox" Content="Simulation-Guided Correction"
                                  Margin="0,0,0,4"
                                  ToolTip="Only apply correction to pixels that would be affected by CVD"
                                  Checked="Zone1SimGuided_Changed" Unchecked="Zone1SimGuided_Changed"/>
                        <StackPanel x:Name="Zone1SimGuidedPanel" Visibility="Collapsed" Margin="16,0,0,0">
                            <TextBlock Text="Detection Algorithm" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <RadioButton x:Name="Zone1SimGuidedMachadoRadio" Content="Machado" IsChecked="True"
                                             Checked="Zone1SimGuidedAlgorithm_Changed" Margin="0,0,16,0"/>
                                <RadioButton x:Name="Zone1SimGuidedStrictRadio" Content="Strict (LMS)"
                                             Checked="Zone1SimGuidedAlgorithm_Changed"/>
                            </StackPanel>
                            <TextBlock Text="CVD Type to Detect" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="Zone1SimGuidedFilterCombo" SelectionChanged="Zone1SimGuidedFilter_Changed" Margin="0,0,0,8">
                                <ComboBoxItem Content="Protanopia (Red-Green blind)"/>
                                <ComboBoxItem Content="Protanomaly (Red-Green weak)"/>
                                <ComboBoxItem Content="Deuteranopia (Green-Red blind)" IsSelected="True"/>
                                <ComboBoxItem Content="Deuteranomaly (Green-Red weak)"/>
                                <ComboBoxItem Content="Tritanopia (Blue-Yellow blind)"/>
                                <ComboBoxItem Content="Tritanomaly (Blue-Yellow weak)"/>
                                <ComboBoxItem Content="Achromatopsia (No color)"/>
                                <ComboBoxItem Content="Achromatomaly (Weak color)"/>
                            </ComboBox>
                            <TextBlock x:Name="Zone1SimGuidedSensitivityLabel" Text="Sensitivity (2.00)" Style="{StaticResource LabelStyle}"
                                       ToolTip="Lower = only strongly affected pixels, Higher = more pixels corrected"/>
                            <Slider x:Name="Zone1SimGuidedSensitivitySlider" Minimum="0.5" Maximum="25" Value="2"
                                    Style="{StaticResource SliderStyle}" ValueChanged="Zone1SimGuidedSensitivity_Changed"/>
                        </StackPanel>
                        <Separator Margin="0,8,0,8"/>

                        <local:CorrectionEditor x:Name="Zone1CorrectionEditor" Margin="0,8,0,0"/>

                        <!-- Post-Correction Simulation (Re-simulate for Verification) -->
                        <Separator Margin="0,12,0,8"/>
                        <CheckBox x:Name="Zone1PostSimCheckBox" Content="Re-simulate for Verification"
                                  Margin="0,0,0,4"
                                  ToolTip="Apply CVD simulation AFTER correction to see how corrected colors appear to colorblind users"
                                  Checked="Zone1PostSim_Changed" Unchecked="Zone1PostSim_Changed"/>
                        <StackPanel x:Name="Zone1PostSimPanel" Visibility="Collapsed" Margin="16,0,0,0">
                            <TextBlock Text="Simulation Algorithm" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <RadioButton x:Name="Zone1PostSimMachadoRadio" Content="Machado" IsChecked="True"
                                             Checked="Zone1PostSimAlgorithm_Changed" Margin="0,0,16,0"/>
                                <RadioButton x:Name="Zone1PostSimStrictRadio" Content="Strict (LMS)"
                                             Checked="Zone1PostSimAlgorithm_Changed"/>
                            </StackPanel>
                            <TextBlock Text="CVD Type to Simulate" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="Zone1PostSimFilterCombo" SelectionChanged="Zone1PostSimFilter_Changed" Margin="0,0,0,8">
                                <ComboBoxItem Content="Protanopia (Red-Green blind)"/>
                                <ComboBoxItem Content="Protanomaly (Red-Green weak)"/>
                                <ComboBoxItem Content="Deuteranopia (Green-Red blind)" IsSelected="True"/>
                                <ComboBoxItem Content="Deuteranomaly (Green-Red weak)"/>
                                <ComboBoxItem Content="Tritanopia (Blue-Yellow blind)"/>
                                <ComboBoxItem Content="Tritanomaly (Blue-Yellow weak)"/>
                                <ComboBoxItem Content="Achromatopsia (No color)"/>
                                <ComboBoxItem Content="Achromatomaly (Weak color)"/>
                            </ComboBox>
                            <TextBlock x:Name="Zone1PostSimIntensityLabel" Text="Simulation Intensity (1.00)" Style="{StaticResource LabelStyle}"
                                       ToolTip="How strongly to apply the simulation (0 = off, 1 = full)"/>
                            <Slider x:Name="Zone1PostSimIntensitySlider" Minimum="0" Maximum="1" Value="1"
                                    Style="{StaticResource SliderStyle}" ValueChanged="Zone1PostSimIntensity_Changed"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel x:Name="Zone1IntensityPanel" Visibility="Collapsed">
                        <TextBlock x:Name="Zone1IntensityLabel" Text="Intensity (1.00)" Style="{StaticResource LabelStyle}"/>
                        <Slider x:Name="Zone1IntensitySlider" Minimum="0" Maximum="1" Value="1"
                                ValueChanged="Zone1Intensity_Changed"/>
                    </StackPanel>
                </StackPanel>
            </Expander>

            <!-- Zone 2 (visible for quadrant mode) -->
            <Expander x:Name="Zone2Expander" Style="{StaticResource ZoneExpanderStyle}" Visibility="Collapsed">
                <Expander.Header>
                    <TextBlock x:Name="Zone2Header" Text="Zone 3 (Bottom-Left)" Style="{StaticResource ZoneHeaderStyle}"/>
                </Expander.Header>
                <StackPanel x:Name="Zone2Panel" Margin="0,8,0,0">
                    <TextBlock Text="Mode" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="Zone2ModeCombo" SelectionChanged="Zone2ModeCombo_SelectionChanged" Margin="0,0,0,8">
                        <ComboBoxItem Content="Original"/>
                        <ComboBoxItem Content="Simulation"/>
                        <ComboBoxItem Content="Correction"/>
                    </ComboBox>

                    <StackPanel x:Name="Zone2SimulationPanel" Visibility="Collapsed">
                        <ComboBox x:Name="Zone2SimFilterCombo" SelectionChanged="Zone2SimFilter_Changed">
                            <ComboBoxItem Content="None"/>
                            <ComboBoxItem Content="Protanopia"/>
                            <ComboBoxItem Content="Deuteranopia"/>
                            <ComboBoxItem Content="Tritanopia"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel x:Name="Zone2CorrectionPanel" Visibility="Collapsed">
                        <TextBlock Text="Preset" Style="{StaticResource LabelStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="Zone2PresetCombo" Grid.Column="0" Margin="0,0,8,0"
                                      SelectionChanged="Zone2PresetCombo_SelectionChanged"/>
                            <Button Content="Apply" Grid.Column="1" Click="Zone2ApplyPreset_Click" Padding="12,4"/>
                        </Grid>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button x:Name="Zone2SaveAsPresetButton" Content="Save As..."
                                    Click="Zone2SaveAsPreset_Click" Padding="8,4" Margin="0,0,4,0"/>
                            <Button x:Name="Zone2SavePresetButton" Content="Update"
                                    Click="Zone2SavePreset_Click" Padding="8,4" Margin="0,0,4,0"
                                    IsEnabled="False"/>
                            <Button x:Name="Zone2ExportPresetButton" Content="Export"
