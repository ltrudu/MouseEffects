<Window x:Class="MouseEffects.Effects.ColorBlindnessNG.UI.PresetNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Preset" Height="160" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Enter a name for the preset:" Margin="0,0,0,8"/>

        <TextBox x:Name="PresetNameTextBox" Grid.Row="1"
                 Text="" MaxLength="100"
                 TextChanged="PresetNameTextBox_TextChanged"/>

        <TextBlock x:Name="ErrorText" Grid.Row="2"
                   Foreground="Red" FontSize="11"
                   TextWrapping="Wrap" Margin="0,4,0,0"
                   Visibility="Collapsed"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="OkButton" Content="OK" Width="75"
                    IsDefault="True" Click="OkButton_Click" IsEnabled="False"/>
            <Button Content="Cancel" Width="75" Margin="8,0,0,0"
                    IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
