<Window x:Class="MouseEffects.Effects.ColorBlindnessNG.UI.PresetConflictDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preset Already Exists" Height="220" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" TextWrapping="Wrap" Margin="0,0,0,16">
            <Run Text="A preset named "/>
            <Run x:Name="PresetNameRun" FontWeight="Bold" Text=""/>
            <Run Text=" already exists."/>
        </TextBlock>

        <RadioButton x:Name="OverwriteRadio" Grid.Row="1"
                     Content="Overwrite existing preset"
                     GroupName="ConflictAction"
                     Checked="RadioButton_Checked" Margin="0,0,0,8"/>

        <StackPanel Grid.Row="2" Orientation="Vertical">
            <RadioButton x:Name="RenameRadio"
                         Content="Save with new name:"
                         GroupName="ConflictAction"
                         IsChecked="True"
                         Checked="RadioButton_Checked"/>
            <TextBox x:Name="NewNameTextBox" Margin="20,8,0,0"
                     Text="" MaxLength="100"
                     TextChanged="NewNameTextBox_TextChanged"/>
            <TextBlock x:Name="ErrorText" Margin="20,4,0,0"
                       Foreground="Red" FontSize="11"
                       TextWrapping="Wrap"
                       Visibility="Collapsed"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="OkButton" Content="OK" Width="75"
                    IsDefault="True" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="8,0,0,0"
                    IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
