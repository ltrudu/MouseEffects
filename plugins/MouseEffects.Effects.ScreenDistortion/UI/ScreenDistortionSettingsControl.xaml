<UserControl x:Class="MouseEffects.Effects.ScreenDistortion.UI.ScreenDistortionSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Header Row: Enabled checkbox | Title | Fold/Unfold button -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox x:Name="EnabledCheckBox" Content="Enabled" Grid.Column="0"
                      VerticalAlignment="Center"
                      IsChecked="True" Checked="EnabledCheckBox_Changed" Unchecked="EnabledCheckBox_Changed"/>

            <TextBlock Text="Screen Distortion" Grid.Column="1"
                       FontWeight="Bold" FontSize="14"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0"/>

            <Button x:Name="FoldButton" Grid.Column="2"
                    Content="â–¼" Width="24" Height="24"
                    Background="Transparent" BorderThickness="0"
                    Click="FoldButton_Click" ToolTip="Expand/Collapse settings"/>
        </Grid>

        <!-- Description (always visible) -->
        <TextBlock Text="Creates a lens/ripple distortion effect around the mouse cursor by distorting the screen content"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0"/>

        <!-- Collapsible Content Panel -->
        <StackPanel x:Name="ContentPanel" Visibility="Collapsed" Margin="0,8,0,0">
            <TextBlock Text="Distortion Radius (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RadiusSlider" Minimum="50" Maximum="1920" Value="150"
                    Style="{StaticResource SliderStyle}" ValueChanged="RadiusSlider_ValueChanged"/>
            <TextBlock x:Name="RadiusValue" Text="150" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Distortion Strength" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="StrengthSlider" Minimum="0" Maximum="1" Value="0.3"
                    Style="{StaticResource SliderStyle}" ValueChanged="StrengthSlider_ValueChanged"/>
            <TextBlock x:Name="StrengthValue" Text="0.3" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Ripple Frequency" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="FrequencySlider" Minimum="1" Maximum="20" Value="8"
                    Style="{StaticResource SliderStyle}" ValueChanged="FrequencySlider_ValueChanged"/>
            <TextBlock x:Name="FrequencyValue" Text="8" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Ripple Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SpeedSlider" Minimum="0" Maximum="10" Value="3"
                    Style="{StaticResource SliderStyle}" ValueChanged="SpeedSlider_ValueChanged"/>
            <TextBlock x:Name="SpeedValue" Text="3" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Wave Height" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="WaveHeightSlider" Minimum="0" Maximum="1" Value="0.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="WaveHeightSlider_ValueChanged"/>
            <TextBlock x:Name="WaveHeightValue" Text="0.5" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Wave Width" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="WaveWidthSlider" Minimum="0.1" Maximum="3" Value="1"
                    Style="{StaticResource SliderStyle}" ValueChanged="WaveWidthSlider_ValueChanged"/>
            <TextBlock x:Name="WaveWidthValue" Text="1" Opacity="0.7" FontSize="11"/>

            <Separator Margin="0,12,0,8"/>
            <TextBlock Text="Visual Effects" FontWeight="Bold" Margin="0,0,0,8"/>

            <CheckBox x:Name="ChromaticCheckBox" Content="Chromatic Aberration"
                      IsChecked="True" Checked="ChromaticCheckBox_Changed" Unchecked="ChromaticCheckBox_Changed"/>

            <CheckBox x:Name="GlowCheckBox" Content="Edge Glow" Margin="0,8,0,0"
                      IsChecked="True" Checked="GlowCheckBox_Changed" Unchecked="GlowCheckBox_Changed"/>

            <TextBlock Text="Glow Intensity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="GlowIntensitySlider" Minimum="0" Maximum="1" Value="0.2"
                    Style="{StaticResource SliderStyle}" ValueChanged="GlowIntensitySlider_ValueChanged"/>
            <TextBlock x:Name="GlowIntensityValue" Text="0.2" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Glow Color" Style="{StaticResource LabelStyle}"/>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <Border x:Name="ColorPreview" Width="24" Height="24" BorderThickness="1"
                        BorderBrush="Gray" Background="#4C80FF" Margin="0,0,8,0"/>
                <Button x:Name="ColorPickerButton" Content="Pick Color..." Click="ColorPickerButton_Click"/>
            </StackPanel>

            <Separator Margin="0,12,0,8"/>
            <TextBlock Text="Wireframe Overlay" FontWeight="Bold" Margin="0,0,0,8"/>

            <CheckBox x:Name="WireframeCheckBox" Content="Show Wireframe Grid"
                      IsChecked="False" Checked="WireframeCheckBox_Changed" Unchecked="WireframeCheckBox_Changed"/>

            <TextBlock Text="Grid Spacing (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="WireframeSpacingSlider" Minimum="10" Maximum="100" Value="30"
                    Style="{StaticResource SliderStyle}" ValueChanged="WireframeSpacingSlider_ValueChanged"/>
            <TextBlock x:Name="WireframeSpacingValue" Text="30" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Line Thickness" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="WireframeThicknessSlider" Minimum="0.5" Maximum="5" Value="1.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="WireframeThicknessSlider_ValueChanged"/>
            <TextBlock x:Name="WireframeThicknessValue" Text="1.5" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Wireframe Color" Style="{StaticResource LabelStyle}"/>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <Border x:Name="WireframeColorPreview" Width="24" Height="24" BorderThickness="1"
                        BorderBrush="Gray" Background="#00FF80" Margin="0,0,8,0"/>
                <Button x:Name="WireframeColorPickerButton" Content="Pick Color..." Click="WireframeColorPickerButton_Click"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
