<UserControl x:Class="MouseEffects.Effects.GravityWell.UI.GravityWellSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="CheckBox" x:Key="CheckBoxStyle">
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">

            <!-- Particle Settings Section -->
            <TextBlock Text="Particle Settings" FontWeight="Bold" FontSize="13" Margin="0,8,0,4"/>

            <TextBlock Text="Particle Count" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ParticleCountSlider" Minimum="50" Maximum="500" Value="100"
                    Style="{StaticResource SliderStyle}" ValueChanged="ParticleCountSlider_ValueChanged"/>
            <TextBlock x:Name="ParticleCountValue" Text="100" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Particle Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ParticleSizeSlider" Minimum="3" Maximum="20" Value="8"
                    Style="{StaticResource SliderStyle}" ValueChanged="ParticleSizeSlider_ValueChanged"/>
            <TextBlock x:Name="ParticleSizeValue" Text="8.0" Opacity="0.7" FontSize="11"/>

            <CheckBox x:Name="RandomColorsCheckBox" Content="Random Colors"
                      Style="{StaticResource CheckBoxStyle}"
                      Checked="RandomColorsCheckBox_Changed" Unchecked="RandomColorsCheckBox_Changed"/>

            <!-- Physics Settings Section -->
            <TextBlock Text="Physics Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Gravity Mode" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="GravityModeCombo" SelectionChanged="GravityModeCombo_Changed" Margin="0,0,0,8">
                <ComboBoxItem Content="Attract" IsSelected="True"/>
                <ComboBoxItem Content="Repel"/>
                <ComboBoxItem Content="Orbit"/>
            </ComboBox>

            <TextBlock Text="Gravity Strength" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="GravityStrengthSlider" Minimum="10000" Maximum="200000" Value="50000"
                    Style="{StaticResource SliderStyle}" ValueChanged="GravityStrengthSlider_ValueChanged"/>
            <TextBlock x:Name="GravityStrengthValue" Text="50000" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Orbit Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="OrbitSpeedSlider" Minimum="0" Maximum="500" Value="200"
                    Style="{StaticResource SliderStyle}" ValueChanged="OrbitSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="OrbitSpeedValue" Text="200" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Damping" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="DampingSlider" Minimum="0.90" Maximum="1.0" Value="0.98"
                    Style="{StaticResource SliderStyle}" ValueChanged="DampingSlider_ValueChanged"/>
            <TextBlock x:Name="DampingValue" Text="0.98" Opacity="0.7" FontSize="11"/>

            <!-- Trail Settings Section -->
            <TextBlock Text="Trail Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <CheckBox x:Name="TrailEnabledCheckBox" Content="Trail Enabled"
                      IsChecked="True"
                      Style="{StaticResource CheckBoxStyle}"
                      Checked="TrailEnabledCheckBox_Changed" Unchecked="TrailEnabledCheckBox_Changed"/>

            <TextBlock Text="Trail Length" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="TrailLengthSlider" Minimum="0.1" Maximum="1.0" Value="0.3"
                    Style="{StaticResource SliderStyle}" ValueChanged="TrailLengthSlider_ValueChanged"/>
            <TextBlock x:Name="TrailLengthValue" Text="0.30" Opacity="0.7" FontSize="11"/>

            <!-- Visual Settings Section -->
            <TextBlock Text="Visual Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="HDR Multiplier" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="HdrMultiplierSlider" Minimum="0.5" Maximum="3.0" Value="1.0"
                    Style="{StaticResource SliderStyle}" ValueChanged="HdrMultiplierSlider_ValueChanged"/>
            <TextBlock x:Name="HdrMultiplierValue" Text="1.0" Opacity="0.7" FontSize="11"/>
    </StackPanel>
</UserControl>
