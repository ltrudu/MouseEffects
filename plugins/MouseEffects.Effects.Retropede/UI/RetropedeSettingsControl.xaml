<UserControl x:Class="MouseEffects.Effects.Retropede.UI.RetropedeSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="350">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="SectionStyle">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,12,0,8"/>
            <Setter Property="Foreground" Value="#FF00AAFF"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <TextBlock Text="Defend against waves of retropedes descending through mushroom fields"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,8"/>

        <!-- Score Display -->
        <Border Background="#22FFFFFF" CornerRadius="4" Padding="8" Margin="0,8,0,0">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="SCORE: " FontWeight="Bold" Foreground="#FF00FF00"/>
                            <TextBlock x:Name="ScoreDisplay" Text="0" FontWeight="Bold" Foreground="#FFFFFF00" FontSize="16"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="PPM: " FontWeight="Bold" Foreground="#FFFFCC00" FontSize="12"/>
                            <TextBlock x:Name="PpmDisplay" Text="0" FontWeight="Bold" Foreground="#FFFFCC00" FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="TIME: " FontWeight="Bold" Foreground="#FF00CCFF" FontSize="12"/>
                            <TextBlock x:Name="TimerDisplay" Text="READY" FontWeight="Bold" Foreground="#FF00CCFF" FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="WAVE: " FontWeight="Bold" Foreground="#FFFF66FF" FontSize="12"/>
                            <TextBlock x:Name="WaveDisplay" Text="1" FontWeight="Bold" Foreground="#FFFF66FF" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                    <Button x:Name="ResetButton" Grid.Column="1" Content="RESET"
                            VerticalAlignment="Center" Padding="12,6"
                            Background="#FF2266" Foreground="White" FontWeight="Bold"
                            Click="ResetButton_Click" ToolTip="Reset score and start timer"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Settings Panel -->
        <StackPanel Margin="0,8,0,0">

            <!-- ========== RENDER STYLE ========== -->
            <TextBlock Text="RENDER STYLE" Style="{StaticResource SectionStyle}"/>

            <TextBlock Text="Visual Style" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="RenderStyleCombo" SelectionChanged="RenderStyleCombo_Changed" Margin="0,0,0,4">
                <ComboBoxItem Content="Modern (Neon)" IsSelected="True"/>
                <ComboBoxItem Content="Retro (Arcade)"/>
            </ComboBox>

            <!-- ========== CANNON SETTINGS ========== -->
            <TextBlock Text="CANNON SETTINGS" Style="{StaticResource SectionStyle}"/>

            <CheckBox x:Name="FireOnLeftClickCheckBox" Content="Fire on Left Click" Margin="0,4,0,4"
                      IsChecked="True" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"/>
            <CheckBox x:Name="FireOnMoveCheckBox" Content="Fire on Mouse Move" Margin="0,0,0,4"
                      IsChecked="False" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"/>

            <TextBlock Text="Move Fire Threshold (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MoveFireThresholdSlider" Minimum="20" Maximum="200" Value="80"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="MoveFireThresholdValue" Text="80" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Laser Speed (px/sec)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="LaserSpeedSlider" Minimum="400" Maximum="1500" Value="800"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="LaserSpeedValue" Text="800" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Cannon Size (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="CannonSizeSlider" Minimum="16" Maximum="48" Value="24"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="CannonSizeValue" Text="24" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Player Zone Height (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="PlayerZoneHeightSlider" Minimum="100" Maximum="400" Value="150"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="PlayerZoneHeightValue" Text="150" Opacity="0.7" FontSize="11"/>

            <!-- ========== RETROPEDE SETTINGS ========== -->
            <TextBlock Text="RETROPEDE SETTINGS" Style="{StaticResource SectionStyle}"/>

            <TextBlock Text="Base Speed (px/sec)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="BaseSpeedSlider" Minimum="30" Maximum="300" Value="80"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="BaseSpeedValue" Text="80" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Starting Segments" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="StartingSegmentsSlider" Minimum="5" Maximum="50" Value="12"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"
                    IsSnapToTickEnabled="True" TickFrequency="1"/>
            <TextBlock x:Name="StartingSegmentsValue" Text="12" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Segment Size (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SegmentSizeSlider" Minimum="12" Maximum="32" Value="20"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="SegmentSizeValue" Text="20" Opacity="0.7" FontSize="11"/>

            <!-- Retropede Colors -->
            <TextBlock Text="Retropede Colors" Style="{StaticResource LabelStyle}"/>
            <Grid Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,4,0">
                    <TextBlock Text="Head" FontSize="10" Opacity="0.7" HorizontalAlignment="Center"/>
                    <Border x:Name="RetropedeHeadColorPreview" Width="32" Height="24" BorderThickness="1"
                            BorderBrush="Gray" Background="#FF3366" HorizontalAlignment="Center" Cursor="Hand"
                            MouseLeftButtonUp="RetropedeHeadColorPreview_Click"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="4,0,0,0">
                    <TextBlock Text="Body" FontSize="10" Opacity="0.7" HorizontalAlignment="Center"/>
                    <Border x:Name="RetropedeBodyColorPreview" Width="32" Height="24" BorderThickness="1"
                            BorderBrush="Gray" Background="#FF6699" HorizontalAlignment="Center" Cursor="Hand"
                            MouseLeftButtonUp="RetropedeBodyColorPreview_Click"/>
                </StackPanel>
            </Grid>

            <!-- ========== MUSHROOM SETTINGS ========== -->
            <TextBlock Text="MUSHROOM SETTINGS" Style="{StaticResource SectionStyle}"/>

            <TextBlock Text="Mushroom Size (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MushroomSizeSlider" Minimum="12" Maximum="24" Value="16"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="MushroomSizeValue" Text="16" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Mushroom Health" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MushroomHealthSlider" Minimum="1" Maximum="4" Value="3"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"
                    IsSnapToTickEnabled="True" TickFrequency="1"/>
            <TextBlock x:Name="MushroomHealthValue" Text="3" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Initial Mushroom Count" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="InitialMushroomCountSlider" Minimum="10" Maximum="100" Value="50"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"
                    IsSnapToTickEnabled="True" TickFrequency="5"/>
            <TextBlock x:Name="InitialMushroomCountValue" Text="50" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Mushroom Free Zone (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MushroomFreeZoneSlider" Minimum="0" Maximum="200" Value="80"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"
                    IsSnapToTickEnabled="True" TickFrequency="10"/>
            <TextBlock x:Name="MushroomFreeZoneValue" Text="80" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Mushroom Color" Style="{StaticResource LabelStyle}"/>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <Border x:Name="MushroomColorPreview" Width="24" Height="24" BorderThickness="1"
                        BorderBrush="Gray" Background="#66FF66" Margin="0,0,8,0" Cursor="Hand"
                        MouseLeftButtonUp="MushroomColorPreview_Click"/>
                <TextBlock Text="Click to change" Opacity="0.5" VerticalAlignment="Center" FontSize="10"/>
            </StackPanel>

            <!-- ========== SPIDER SETTINGS ========== -->
            <TextBlock Text="SPIDER SETTINGS" Style="{StaticResource SectionStyle}"/>

            <CheckBox x:Name="SpiderEnabledCheckBox" Content="Enable Spider" Margin="0,4,0,4"
                      IsChecked="True" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"/>

            <TextBlock Text="Spider Spawn Rate (sec)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SpiderSpawnRateSlider" Minimum="3" Maximum="20" Value="8"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="SpiderSpawnRateValue" Text="8" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Spider Speed (px/sec)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SpiderSpeedSlider" Minimum="50" Maximum="200" Value="100"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="SpiderSpeedValue" Text="100" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Spider Color" Style="{StaticResource LabelStyle}"/>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <Border x:Name="SpiderColorPreview" Width="24" Height="24" BorderThickness="1"
                        BorderBrush="Gray" Background="#FFFF33" Margin="0,0,8,0" Cursor="Hand"
                        MouseLeftButtonUp="SpiderColorPreview_Click"/>
                <TextBlock Text="Click to change" Opacity="0.5" VerticalAlignment="Center" FontSize="10"/>
            </StackPanel>

            <!-- ========== DDT SETTINGS ========== -->
            <TextBlock Text="DDT BOMB SETTINGS" Style="{StaticResource SectionStyle}"/>

            <CheckBox x:Name="DdtEnabledCheckBox" Content="Enable DDT Bombs" Margin="0,4,0,4"
                      IsChecked="True" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"/>

            <TextBlock Text="Max DDT on Field" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="DdtMaxOnFieldSlider" Minimum="1" Maximum="6" Value="3"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"
                    IsSnapToTickEnabled="True" TickFrequency="1"/>
            <TextBlock x:Name="DdtMaxOnFieldValue" Text="3" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="DDT Explosion Radius (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="DdtExplosionRadiusSlider" Minimum="40" Maximum="150" Value="80"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="DdtExplosionRadiusValue" Text="80" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="DDT Explosion Duration (sec)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="DdtExplosionDurationSlider" Minimum="0.5" Maximum="3" Value="1.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="DdtExplosionDurationValue" Text="1.5" Opacity="0.7" FontSize="11"/>

            <!-- DDT Colors -->
            <TextBlock Text="DDT Colors" Style="{StaticResource LabelStyle}"/>
            <Grid Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,4,0">
                    <TextBlock Text="Bomb" FontSize="10" Opacity="0.7" HorizontalAlignment="Center"/>
                    <Border x:Name="DdtBombColorPreview" Width="32" Height="24" BorderThickness="1"
                            BorderBrush="Gray" Background="#FF00FF" HorizontalAlignment="Center" Cursor="Hand"
                            MouseLeftButtonUp="DdtBombColorPreview_Click"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="4,0,0,0">
                    <TextBlock Text="Gas" FontSize="10" Opacity="0.7" HorizontalAlignment="Center"/>
                    <Border x:Name="DdtGasColorPreview" Width="32" Height="24" BorderThickness="1"
                            BorderBrush="Gray" Background="#00FF00" HorizontalAlignment="Center" Cursor="Hand"
                            MouseLeftButtonUp="DdtGasColorPreview_Click"/>
                </StackPanel>
            </Grid>

            <!-- ========== VISUAL SETTINGS ========== -->
            <TextBlock Text="VISUAL SETTINGS" Style="{StaticResource SectionStyle}"/>

            <TextBlock Text="Glow Intensity (Modern)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="GlowSlider" Minimum="0" Maximum="3" Value="1.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="GlowValue" Text="1.5" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Neon Intensity (Modern)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="NeonSlider" Minimum="0" Maximum="2" Value="1"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="NeonValue" Text="1.0" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Scanline Intensity (Retro)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ScanlinesSlider" Minimum="0" Maximum="1" Value="0.3"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="ScanlinesValue" Text="0.3" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Animation Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="AnimSpeedSlider" Minimum="0.5" Maximum="5" Value="1.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="Slider_ValueChanged"/>
            <TextBlock x:Name="AnimSpeedValue" Text="1.5" Opacity="0.7" FontSize="11"/>

            <!-- ========== SCORING ========== -->
            <TextBlock Text="SCORING" Style="{StaticResource SectionStyle}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,4,0">
                    <TextBlock Text="Head" FontSize="10" Opacity="0.7"/>
                    <TextBox x:Name="ScoreHeadTextBox" Text="100" Width="50" TextChanged="ScoreTextBox_Changed"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="4,0,0,0">
                    <TextBlock Text="Body" FontSize="10" Opacity="0.7"/>
                    <TextBox x:Name="ScoreBodyTextBox" Text="10" Width="50" TextChanged="ScoreTextBox_Changed"/>
                </StackPanel>
            </Grid>

            <Grid Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,4,0">
                    <TextBlock Text="Mushroom" FontSize="10" Opacity="0.7"/>
                    <TextBox x:Name="ScoreMushroomTextBox" Text="1" Width="50" TextChanged="ScoreTextBox_Changed"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="4,0,0,0">
                    <TextBlock Text="Spider" FontSize="10" Opacity="0.7"/>
                    <TextBox x:Name="ScoreSpiderTextBox" Text="600" Width="50" TextChanged="ScoreTextBox_Changed"/>
                </StackPanel>
            </Grid>

            <!-- ========== TIMER SETTINGS ========== -->
            <TextBlock Text="TIMER SETTINGS" Style="{StaticResource SectionStyle}"/>

            <TextBlock Text="Game Duration (seconds)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="TimerDurationSlider" Minimum="30" Maximum="300" Value="120"
                    Style="{StaticResource SliderStyle}" ValueChanged="TimerDurationSlider_ValueChanged"
                    IsSnapToTickEnabled="True" TickFrequency="15"/>
            <TextBlock x:Name="TimerDurationValue" Text="2:00" Opacity="0.7" FontSize="11"/>

        </StackPanel>
    </StackPanel>
</UserControl>
