<UserControl x:Class="MouseEffects.Effects.ParticleTrail.UI.ParticleTrailSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Description -->
        <TextBlock Text="Creates colorful particle trails that follow the mouse cursor"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0"/>

        <StackPanel Margin="0,8,0,0">
            <TextBlock Text="Emission Rate" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="EmissionRateSlider" Minimum="10" Maximum="500" Value="100"
                    Style="{StaticResource SliderStyle}" ValueChanged="EmissionRateSlider_ValueChanged"/>
            <TextBlock x:Name="EmissionRateValue" Text="100" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Particle Lifetime (sec)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="LifetimeSlider" Minimum="0.5" Maximum="5" Value="1.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="LifetimeSlider_ValueChanged"/>
            <TextBlock x:Name="LifetimeValue" Text="1.5" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Particle Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SizeSlider" Minimum="2" Maximum="32" Value="8"
                    Style="{StaticResource SliderStyle}" ValueChanged="SizeSlider_ValueChanged"/>
            <TextBlock x:Name="SizeValue" Text="8" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Spread Angle" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SpreadSlider" Minimum="0" Maximum="3.14" Value="0.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="SpreadSlider_ValueChanged"/>
            <TextBlock x:Name="SpreadValue" Text="0.5" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Initial Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SpeedSlider" Minimum="10" Maximum="200" Value="50"
                    Style="{StaticResource SliderStyle}" ValueChanged="SpeedSlider_ValueChanged"/>
            <TextBlock x:Name="SpeedValue" Text="50" Opacity="0.7" FontSize="11"/>
        </StackPanel>
    </StackPanel>
</UserControl>
