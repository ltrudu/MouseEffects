<UserControl x:Class="MouseEffects.Effects.Shockwave.UI.ShockwaveSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
            <!-- Max Shockwaves -->
            <TextBlock Text="Max Shockwaves" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxShockwavesSlider" Minimum="1" Maximum="100" Value="20"
                    Style="{StaticResource SliderStyle}" ValueChanged="MaxShockwavesSlider_ValueChanged"
                    IsSnapToTickEnabled="True" TickFrequency="1"/>
            <TextBlock x:Name="MaxShockwavesValue" Text="20" Opacity="0.7" FontSize="11"/>

            <!-- Ring Lifespan -->
            <TextBlock Text="Ring Lifespan (sec)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="LifespanSlider" Minimum="0.5" Maximum="10" Value="2"
                    Style="{StaticResource SliderStyle}" ValueChanged="LifespanSlider_ValueChanged"/>
            <TextBlock x:Name="LifespanValue" Text="2.0" Opacity="0.7" FontSize="11"/>

            <!-- Expansion Speed -->
            <TextBlock Text="Expansion Speed (px/sec)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ExpansionSpeedSlider" Minimum="100" Maximum="2000" Value="600"
                    Style="{StaticResource SliderStyle}" ValueChanged="ExpansionSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="ExpansionSpeedValue" Text="600" Opacity="0.7" FontSize="11"/>

            <!-- Max Radius -->
            <TextBlock Text="Max Radius (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxRadiusSlider" Minimum="100" Maximum="2000" Value="500"
                    Style="{StaticResource SliderStyle}" ValueChanged="MaxRadiusSlider_ValueChanged"/>
            <TextBlock x:Name="MaxRadiusValue" Text="500" Opacity="0.7" FontSize="11"/>

            <!-- Ring Thickness -->
            <TextBlock Text="Ring Thickness (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ThicknessSlider" Minimum="5" Maximum="50" Value="15"
                    Style="{StaticResource SliderStyle}" ValueChanged="ThicknessSlider_ValueChanged"/>
            <TextBlock x:Name="ThicknessValue" Text="15" Opacity="0.7" FontSize="11"/>

            <!-- Glow Intensity -->
            <TextBlock Text="Glow Intensity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="GlowIntensitySlider" Minimum="0.1" Maximum="5" Value="1.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="GlowIntensitySlider_ValueChanged"/>
            <TextBlock x:Name="GlowIntensityValue" Text="1.5" Opacity="0.7" FontSize="11"/>

            <!-- Distortion Section -->
            <TextBlock Text="Distortion" Style="{StaticResource LabelStyle}" FontSize="13" Margin="0,12,0,4"/>
            <CheckBox x:Name="DistortionCheckBox" Content="Enable Distortion"
                      Margin="0,4,0,4" IsChecked="True"
                      Checked="DistortionCheckBox_Changed" Unchecked="DistortionCheckBox_Changed"/>

            <TextBlock Text="Distortion Strength" Margin="0,4,0,2"/>
            <Slider x:Name="DistortionStrengthSlider" Minimum="0" Maximum="100" Value="20"
                    Style="{StaticResource SliderStyle}" ValueChanged="DistortionStrengthSlider_ValueChanged"/>
            <TextBlock x:Name="DistortionStrengthValue" Text="20" Opacity="0.7" FontSize="11"/>

            <!-- HDR Brightness -->
            <TextBlock Text="HDR Brightness" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="HdrBrightnessSlider" Minimum="0.1" Maximum="10" Value="1"
                    Style="{StaticResource SliderStyle}" ValueChanged="HdrBrightnessSlider_ValueChanged"/>
            <TextBlock x:Name="HdrBrightnessValue" Text="1.0" Opacity="0.7" FontSize="11"/>

            <!-- Click Triggers -->
            <TextBlock Text="Click Trigger" Style="{StaticResource LabelStyle}" FontSize="13" Margin="0,12,0,4"/>
            <CheckBox x:Name="LeftClickCheckBox" Content="Spawn on Left Click"
                      Margin="0,4,0,4" IsChecked="True"
                      Checked="LeftClickCheckBox_Changed" Unchecked="LeftClickCheckBox_Changed"/>
            <CheckBox x:Name="RightClickCheckBox" Content="Spawn on Right Click"
                      Margin="0,0,0,4" IsChecked="False"
                      Checked="RightClickCheckBox_Changed" Unchecked="RightClickCheckBox_Changed"/>

            <!-- Mouse Movement Section -->
            <TextBlock Text="Mouse Movement" Style="{StaticResource LabelStyle}" FontSize="13" Margin="0,12,0,4"/>
            <CheckBox x:Name="SpawnOnMoveCheckBox" Content="Spawn on Mouse Move"
                      Margin="0,4,0,4" IsChecked="False"
                      Checked="SpawnOnMoveCheckBox_Changed" Unchecked="SpawnOnMoveCheckBox_Changed"/>

            <TextBlock Text="Move Spawn Distance (px)" Margin="0,4,0,2"/>
            <Slider x:Name="MoveSpawnDistanceSlider" Minimum="10" Maximum="300" Value="100"
                    Style="{StaticResource SliderStyle}" ValueChanged="MoveSpawnDistanceSlider_ValueChanged"/>
            <TextBlock x:Name="MoveSpawnDistanceValue" Text="100" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Move Ring Lifespan (sec)" Margin="0,4,0,2"/>
            <Slider x:Name="MoveLifespanSlider" Minimum="0.5" Maximum="10" Value="1.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="MoveLifespanSlider_ValueChanged"/>
            <TextBlock x:Name="MoveLifespanValue" Text="1.5" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Move Expansion Speed (px/sec)" Margin="0,4,0,2"/>
            <Slider x:Name="MoveExpansionSpeedSlider" Minimum="100" Maximum="2000" Value="400"
                    Style="{StaticResource SliderStyle}" ValueChanged="MoveExpansionSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="MoveExpansionSpeedValue" Text="400" Opacity="0.7" FontSize="11"/>

            <!-- Color Section -->
            <TextBlock Text="Color" Style="{StaticResource LabelStyle}" FontSize="13" Margin="0,12,0,4"/>
            <ComboBox x:Name="ColorPresetCombo" Margin="0,4,0,4" SelectionChanged="ColorPresetCombo_Changed">
                <ComboBoxItem Content="Energy Blue" IsSelected="True"/>
                <ComboBoxItem Content="Fire Red"/>
                <ComboBoxItem Content="White"/>
                <ComboBoxItem Content="Custom"/>
            </ComboBox>

            <!-- Custom Color Picker -->
            <Grid Margin="0,4,0,0" x:Name="CustomColorPanel" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="CustomColorPreview" Grid.Column="0"
                        Width="24" Height="24" CornerRadius="4"
                        Background="#0080FF" BorderBrush="Gray" BorderThickness="1"
                        Margin="0,0,10,0"/>
                <Button Grid.Column="1" Content="Pick Color"
                        Click="CustomColorButton_Click"
                        Background="#45475A" Foreground="#CDD6F4" BorderThickness="0"
                        Padding="10,4"/>
            </Grid>
    </StackPanel>
</UserControl>
