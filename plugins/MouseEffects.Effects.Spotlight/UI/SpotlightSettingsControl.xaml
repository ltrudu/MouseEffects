<UserControl x:Class="MouseEffects.Effects.Spotlight.UI.SpotlightSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Header Row: Enabled checkbox | Title | Fold/Unfold button -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox x:Name="EnabledCheckBox" Content="Enabled" Grid.Column="0"
                      VerticalAlignment="Center"
                      IsChecked="True" Checked="EnabledCheckBox_Changed" Unchecked="EnabledCheckBox_Changed"/>

            <TextBlock Text="Spotlight" Grid.Column="1"
                       FontWeight="Bold" FontSize="14"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0"/>

            <Button x:Name="FoldButton" Grid.Column="2"
                    Content="â–¼" Width="24" Height="24"
                    Background="Transparent" BorderThickness="0"
                    Click="FoldButton_Click" ToolTip="Expand/Collapse settings"/>
        </Grid>

        <!-- Description (always visible) -->
        <TextBlock Text="Creates a dramatic theater spotlight effect centered on the mouse cursor, darkening everything outside the lit area"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0"/>

        <!-- Collapsible Content Panel -->
        <StackPanel x:Name="ContentPanel" Visibility="Collapsed" Margin="0,8,0,0">
            <!-- Spotlight Parameters -->
            <TextBlock Text="Spotlight Parameters" FontWeight="Bold" Margin="0,0,0,8"/>

            <TextBlock Text="Spotlight Radius (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SpotlightRadiusSlider" Minimum="50" Maximum="400" Value="200"
                    SmallChange="10" LargeChange="50" TickFrequency="10"
                    Style="{StaticResource SliderStyle}" ValueChanged="SpotlightRadiusSlider_ValueChanged"/>
            <TextBlock x:Name="SpotlightRadiusValue" Text="200" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Edge Softness" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="EdgeSoftnessSlider" Minimum="10" Maximum="200" Value="100"
                    SmallChange="10" LargeChange="50" TickFrequency="10"
                    Style="{StaticResource SliderStyle}" ValueChanged="EdgeSoftnessSlider_ValueChanged"/>
            <TextBlock x:Name="EdgeSoftnessValue" Text="100" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Darkness Level" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="DarknessLevelSlider" Minimum="0.0" Maximum="0.8" Value="0.1"
                    SmallChange="0.05" LargeChange="0.2" TickFrequency="0.05"
                    Style="{StaticResource SliderStyle}" ValueChanged="DarknessLevelSlider_ValueChanged"/>
            <TextBlock x:Name="DarknessLevelValue" Text="0.10" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Brightness Boost" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="BrightnessBoostSlider" Minimum="1.0" Maximum="2.0" Value="1.2"
                    SmallChange="0.1" LargeChange="0.5" TickFrequency="0.1"
                    Style="{StaticResource SliderStyle}" ValueChanged="BrightnessBoostSlider_ValueChanged"/>
            <TextBlock x:Name="BrightnessBoostValue" Text="1.2" Opacity="0.7" FontSize="11"/>

            <!-- Color Temperature -->
            <Separator Margin="0,12,0,8"/>
            <TextBlock Text="Color Temperature" FontWeight="Bold" Margin="0,0,0,8"/>

            <ComboBox x:Name="ColorTemperatureCombo" SelectionChanged="ColorTemperatureCombo_SelectionChanged">
                <ComboBoxItem Content="Warm (Orange)" />
                <ComboBoxItem Content="Neutral (White)" IsSelected="True"/>
                <ComboBoxItem Content="Cool (Blue)" />
            </ComboBox>

            <!-- Dust Particles -->
            <Separator Margin="0,12,0,8"/>
            <TextBlock Text="Dust Particles" FontWeight="Bold" Margin="0,0,0,8"/>

            <CheckBox x:Name="DustParticlesCheckBox" Content="Enable Dust Particles" Margin="0,0,0,8"
                      IsChecked="True" Checked="DustParticlesCheckBox_Changed" Unchecked="DustParticlesCheckBox_Changed"/>

            <StackPanel x:Name="DustParticlesPanel" Visibility="Visible">
                <TextBlock Text="Dust Density" Style="{StaticResource LabelStyle}"/>
                <Slider x:Name="DustDensitySlider" Minimum="0.0" Maximum="1.0" Value="0.5"
                        SmallChange="0.1" LargeChange="0.3" TickFrequency="0.1"
                        Style="{StaticResource SliderStyle}" ValueChanged="DustDensitySlider_ValueChanged"/>
                <TextBlock x:Name="DustDensityValue" Text="0.5" Opacity="0.7" FontSize="11"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
