<UserControl x:Class="MouseEffects.Effects.ColorBlindness.UI.CurveEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="250" d:DesignWidth="300"
             Background="#1E1E1E">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Channel selector and coordinates -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ComboBox x:Name="ChannelCombo" Grid.Column="0" Width="80"
                      SelectionChanged="ChannelCombo_SelectionChanged">
                <ComboBoxItem Content="RGB" IsSelected="True"/>
                <ComboBoxItem Content="Red"/>
                <ComboBoxItem Content="Green"/>
                <ComboBoxItem Content="Blue"/>
            </ComboBox>

            <TextBlock x:Name="CoordinatesText" Grid.Column="2"
                       Foreground="#808080" FontSize="11"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- Curve canvas -->
        <Border Grid.Row="1" BorderBrush="#404040" BorderThickness="1" Background="#282828">
            <Canvas x:Name="CurveCanvas"
                    ClipToBounds="True"
                    MouseLeftButtonDown="CurveCanvas_MouseLeftButtonDown"
                    MouseLeftButtonUp="CurveCanvas_MouseLeftButtonUp"
                    MouseMove="CurveCanvas_MouseMove"
                    MouseRightButtonDown="CurveCanvas_MouseRightButtonDown"/>
        </Border>

        <!-- Channel checkboxes -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,4">
            <CheckBox x:Name="ShowRedCheck" Content="Red" Foreground="#FF6B6B"
                      IsChecked="True" Checked="ShowChannel_Changed" Unchecked="ShowChannel_Changed"
                      Margin="0,0,16,0"/>
            <CheckBox x:Name="ShowGreenCheck" Content="Green" Foreground="#6BFF6B"
                      IsChecked="True" Checked="ShowChannel_Changed" Unchecked="ShowChannel_Changed"
                      Margin="0,0,16,0"/>
            <CheckBox x:Name="ShowBlueCheck" Content="Blue" Foreground="#6B6BFF"
                      IsChecked="True" Checked="ShowChannel_Changed" Unchecked="ShowChannel_Changed"/>
        </StackPanel>

        <!-- Reset button and tip -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Tip: Right-click to remove control points."
                       Foreground="#606060" FontSize="10" VerticalAlignment="Center"/>
            <Button Grid.Column="1" x:Name="ResetButton" Content="Reset" Padding="12,4"
                    Click="ResetButton_Click"/>
        </Grid>
    </Grid>
</UserControl>
