<UserControl x:Class="MouseEffects.Effects.Hearts.UI.HeartsSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="CheckBox" x:Key="CheckBoxStyle">
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">

            <!-- Heart Settings Section -->
            <TextBlock Text="Heart Settings" FontWeight="Bold" FontSize="13" Margin="0,8,0,4"/>

            <TextBlock Text="Heart Count (per second)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="HeartCountSlider" Minimum="5" Maximum="50" Value="15"
                    Style="{StaticResource SliderStyle}" ValueChanged="HeartCountSlider_ValueChanged"/>
            <TextBlock x:Name="HeartCountValue" Text="15" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Min Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MinSizeSlider" Minimum="5" Maximum="30" Value="12"
                    Style="{StaticResource SliderStyle}" ValueChanged="MinSizeSlider_ValueChanged"/>
            <TextBlock x:Name="MinSizeValue" Text="12" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Max Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxSizeSlider" Minimum="10" Maximum="50" Value="25"
                    Style="{StaticResource SliderStyle}" ValueChanged="MaxSizeSlider_ValueChanged"/>
            <TextBlock x:Name="MaxSizeValue" Text="25" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Lifetime (seconds)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="LifetimeSlider" Minimum="3" Maximum="15" Value="8"
                    Style="{StaticResource SliderStyle}" ValueChanged="LifetimeSlider_ValueChanged"/>
            <TextBlock x:Name="LifetimeValue" Text="8" Opacity="0.7" FontSize="11"/>

            <!-- Motion Settings Section -->
            <TextBlock Text="Motion Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Float Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="FloatSpeedSlider" Minimum="10" Maximum="100" Value="40"
                    Style="{StaticResource SliderStyle}" ValueChanged="FloatSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="FloatSpeedValue" Text="40" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Wobble Amount" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="WobbleAmountSlider" Minimum="0" Maximum="80" Value="30"
                    Style="{StaticResource SliderStyle}" ValueChanged="WobbleAmountSlider_ValueChanged"/>
            <TextBlock x:Name="WobbleAmountValue" Text="30" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Wobble Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="WobbleFrequencySlider" Minimum="0.1" Maximum="3" Value="1.2"
                    Style="{StaticResource SliderStyle}" ValueChanged="WobbleFrequencySlider_ValueChanged"/>
            <TextBlock x:Name="WobbleFrequencyValue" Text="1.2" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Rotation Amount" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RotationAmountSlider" Minimum="0" Maximum="1.5" Value="0.3"
                    Style="{StaticResource SliderStyle}" ValueChanged="RotationAmountSlider_ValueChanged"/>
            <TextBlock x:Name="RotationAmountValue" Text="0.3" Opacity="0.7" FontSize="11"/>

            <!-- Visual Effects Section -->
            <TextBlock Text="Visual Effects" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Glow Intensity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="GlowIntensitySlider" Minimum="0.3" Maximum="2" Value="1.0"
                    Style="{StaticResource SliderStyle}" ValueChanged="GlowIntensitySlider_ValueChanged"/>
            <TextBlock x:Name="GlowIntensityValue" Text="1.0" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Sparkle Intensity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SparkleIntensitySlider" Minimum="0" Maximum="1" Value="0.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="SparkleIntensitySlider_ValueChanged"/>
            <TextBlock x:Name="SparkleIntensityValue" Text="0.5" Opacity="0.7" FontSize="11"/>

            <!-- Color Mode Section -->
            <TextBlock Text="Color Mode" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <ComboBox x:Name="ColorModeComboBox" SelectionChanged="ColorModeComboBox_Changed" Margin="0,4">
                <ComboBoxItem Content="Red" IsSelected="True"/>
                <ComboBoxItem Content="Pink"/>
                <ComboBoxItem Content="Mixed (Red/Pink/Rose Gold)"/>
                <ComboBoxItem Content="Rainbow"/>
            </ComboBox>
    </StackPanel>
</UserControl>
