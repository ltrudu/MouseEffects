<UserControl x:Class="MouseEffects.Effects.Kaleidoscope.UI.KaleidoscopeSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <TextBlock Text="Creates real-time kaleidoscopic mirroring of the screen around the mouse cursor with radial symmetry"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,8"/>

        <!-- Settings Panel -->
        <StackPanel Margin="0,8,0,0">
            <!-- Basic Parameters -->
            <TextBlock Text="Basic Settings" FontWeight="Bold" Margin="0,0,0,8"/>

            <TextBlock Text="Effect Radius (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RadiusSlider" Minimum="100" Maximum="600" Value="300"
                    SmallChange="10" LargeChange="50" TickFrequency="10"
                    Style="{StaticResource SliderStyle}" ValueChanged="RadiusSlider_ValueChanged"/>
            <TextBlock x:Name="RadiusValue" Text="300" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Segment Count" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SegmentsSlider" Minimum="4" Maximum="16" Value="8"
                    SmallChange="1" LargeChange="2" TickFrequency="1"
                    Style="{StaticResource SliderStyle}" ValueChanged="SegmentsSlider_ValueChanged"/>
            <TextBlock x:Name="SegmentsValue" Text="8" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Zoom Factor" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ZoomSlider" Minimum="0.5" Maximum="2.0" Value="1.0"
                    SmallChange="0.1" LargeChange="0.5" TickFrequency="0.1"
                    Style="{StaticResource SliderStyle}" ValueChanged="ZoomSlider_ValueChanged"/>
            <TextBlock x:Name="ZoomValue" Text="1.0" Opacity="0.7" FontSize="11"/>

            <!-- Rotation Settings -->
            <Separator Margin="0,12,0,8"/>
            <TextBlock Text="Rotation" FontWeight="Bold" Margin="0,0,0,8"/>

            <TextBlock Text="Rotation Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RotationSpeedSlider" Minimum="0.0" Maximum="2.0" Value="0.5"
                    SmallChange="0.1" LargeChange="0.5" TickFrequency="0.1"
                    Style="{StaticResource SliderStyle}" ValueChanged="RotationSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="RotationSpeedValue" Text="0.5" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Rotation Offset" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RotationOffsetSlider" Minimum="0.0" Maximum="6.28" Value="0.0"
                    SmallChange="0.1" LargeChange="1.0" TickFrequency="0.1"
                    Style="{StaticResource SliderStyle}" ValueChanged="RotationOffsetSlider_ValueChanged"/>
            <TextBlock x:Name="RotationOffsetValue" Text="0.0" Opacity="0.7" FontSize="11"/>

            <!-- Edge Settings -->
            <Separator Margin="0,12,0,8"/>
            <TextBlock Text="Edge Blending" FontWeight="Bold" Margin="0,0,0,8"/>

            <TextBlock Text="Edge Softness" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="EdgeSoftnessSlider" Minimum="0.0" Maximum="0.5" Value="0.2"
                    SmallChange="0.05" LargeChange="0.1" TickFrequency="0.05"
                    Style="{StaticResource SliderStyle}" ValueChanged="EdgeSoftnessSlider_ValueChanged"/>
            <TextBlock x:Name="EdgeSoftnessValue" Text="0.2" Opacity="0.7" FontSize="11"/>
        </StackPanel>
    </StackPanel>
</UserControl>
