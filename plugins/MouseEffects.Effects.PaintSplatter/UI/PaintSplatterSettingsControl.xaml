<UserControl x:Class="MouseEffects.Effects.PaintSplatter.UI.PaintSplatterSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="CheckBox" x:Key="CheckBoxStyle">
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Header Row: Enabled checkbox | Title | Fold/Unfold button -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox x:Name="EnabledCheckBox" Content="Enabled" Grid.Column="0"
                      VerticalAlignment="Center"
                      IsChecked="True" Checked="EnabledCheckBox_Changed" Unchecked="EnabledCheckBox_Changed"/>

            <TextBlock Text="Paint Splatter" Grid.Column="1"
                       FontWeight="Bold" FontSize="14"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0"/>

            <Button x:Name="FoldButton" Grid.Column="2"
                    Content="â–¼" Width="24" Height="24"
                    Background="Transparent" BorderThickness="0"
                    Click="FoldButton_Click" ToolTip="Expand/Collapse settings"/>
        </Grid>

        <!-- Description (always visible) -->
        <TextBlock Text="Artistic paint drops that splatter on clicks like Jackson Pollock"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0"/>

        <!-- Collapsible Content Panel -->
        <StackPanel x:Name="ContentPanel" Visibility="Collapsed" Margin="0,8,0,0">

            <!-- Trigger Section -->
            <TextBlock Text="Trigger" FontWeight="Bold" FontSize="13" Margin="0,8,0,4"/>

            <CheckBox x:Name="ClickEnabledCheckBox" Content="Click to Splat"
                      Style="{StaticResource CheckBoxStyle}"
                      Checked="ClickEnabledCheckBox_Changed" Unchecked="ClickEnabledCheckBox_Changed"/>

            <!-- Splat Settings Section -->
            <TextBlock Text="Splat Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Splat Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SplatSizeSlider" Minimum="20" Maximum="150" Value="60"
                    Style="{StaticResource SliderStyle}" ValueChanged="SplatSizeSlider_ValueChanged"/>
            <TextBlock x:Name="SplatSizeValue" Text="60" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Droplet Count" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="DropletCountSlider" Minimum="5" Maximum="30" Value="15"
                    Style="{StaticResource SliderStyle}" ValueChanged="DropletCountSlider_ValueChanged"/>
            <TextBlock x:Name="DropletCountValue" Text="15" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Spread Radius" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SpreadRadiusSlider" Minimum="10" Maximum="100" Value="25"
                    Style="{StaticResource SliderStyle}" ValueChanged="SpreadRadiusSlider_ValueChanged"/>
            <TextBlock x:Name="SpreadRadiusValue" Text="25" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Edge Noisiness" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="EdgeNoisinessSlider" Minimum="0" Maximum="1" Value="0.3"
                    Style="{StaticResource SliderStyle}" ValueChanged="EdgeNoisinessSlider_ValueChanged"/>
            <TextBlock x:Name="EdgeNoisinessValue" Text="0.3" Opacity="0.7" FontSize="11"/>

            <CheckBox x:Name="EnableDripsCheckBox" Content="Enable Drip Trails"
                      Style="{StaticResource CheckBoxStyle}"
                      Checked="EnableDripsCheckBox_Changed" Unchecked="EnableDripsCheckBox_Changed"/>

            <TextBlock Text="Drip Length" Style="{StaticResource LabelStyle}" Margin="16,4,0,4"/>
            <Slider x:Name="DripLengthSlider" Minimum="10" Maximum="100" Value="40"
                    Style="{StaticResource SliderStyle}" Margin="16,0,0,4"
                    ValueChanged="DripLengthSlider_ValueChanged"/>
            <TextBlock x:Name="DripLengthValue" Text="40" Opacity="0.7" FontSize="11" Margin="16,0,0,0"/>

            <TextBlock Text="Opacity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="OpacitySlider" Minimum="0.1" Maximum="1" Value="0.85"
                    Style="{StaticResource SliderStyle}" ValueChanged="OpacitySlider_ValueChanged"/>
            <TextBlock x:Name="OpacityValue" Text="0.85" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Lifetime (seconds)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="LifetimeSlider" Minimum="1" Maximum="20" Value="5"
                    Style="{StaticResource SliderStyle}" ValueChanged="LifetimeSlider_ValueChanged"/>
            <TextBlock x:Name="LifetimeValue" Text="5.0" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Max Splats" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxSplatsSlider" Minimum="10" Maximum="200" Value="50"
                    Style="{StaticResource SliderStyle}" ValueChanged="MaxSplatsSlider_ValueChanged"/>
            <TextBlock x:Name="MaxSplatsValue" Text="50" Opacity="0.7" FontSize="11"/>

            <!-- Color Settings Section -->
            <TextBlock Text="Color Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Color Mode" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="ColorModeCombo" SelectionChanged="ColorModeCombo_Changed" Margin="0,0,0,8">
                <ComboBoxItem Content="Single Color" IsSelected="True"/>
                <ComboBoxItem Content="Random (All Palettes)"/>
                <ComboBoxItem Content="Palette"/>
            </ComboBox>

            <TextBlock Text="Palette" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="PaletteCombo" SelectionChanged="PaletteCombo_Changed" Margin="0,0,0,8">
                <ComboBoxItem Content="Primary (Red, Blue, Yellow)" IsSelected="True"/>
                <ComboBoxItem Content="Neon (Hot Pink, Cyan, Lime)"/>
                <ComboBoxItem Content="Earth (Brown, Orange, Olive)"/>
                <ComboBoxItem Content="Pastel (Pink, Blue, Mint)"/>
            </ComboBox>

            <TextBlock Text="Single Color (RGB sliders)" Style="{StaticResource LabelStyle}"/>

            <TextBlock Text="Red" Opacity="0.7" FontSize="11" Margin="0,4,0,2"/>
            <Slider x:Name="RedSlider" Minimum="0" Maximum="1" Value="0.9"
                    Style="{StaticResource SliderStyle}" ValueChanged="ColorSlider_ValueChanged"/>

            <TextBlock Text="Green" Opacity="0.7" FontSize="11" Margin="0,4,0,2"/>
            <Slider x:Name="GreenSlider" Minimum="0" Maximum="1" Value="0.1"
                    Style="{StaticResource SliderStyle}" ValueChanged="ColorSlider_ValueChanged"/>

            <TextBlock Text="Blue" Opacity="0.7" FontSize="11" Margin="0,4,0,2"/>
            <Slider x:Name="BlueSlider" Minimum="0" Maximum="1" Value="0.1"
                    Style="{StaticResource SliderStyle}" ValueChanged="ColorSlider_ValueChanged"/>

            <Border x:Name="ColorPreview" Height="30" Background="Red" Margin="0,4,0,8"
                    BorderBrush="Gray" BorderThickness="1"/>
        </StackPanel>
    </StackPanel>
</UserControl>
