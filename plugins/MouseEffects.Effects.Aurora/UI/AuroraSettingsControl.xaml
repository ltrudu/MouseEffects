<UserControl x:Class="MouseEffects.Effects.Aurora.UI.AuroraSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             Width="400">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
            <!-- Header -->
            <TextBlock Text="Aurora Settings"
                      FontSize="18"
                      FontWeight="SemiBold"
                      Margin="0,0,0,15"/>

            <!-- Aurora Appearance -->
            <ui:SimpleStackPanel Spacing="12">
                <TextBlock Text="Aurora Appearance"
                          FontWeight="SemiBold"
                          FontSize="14"
                          Margin="0,10,0,5"/>

                <ui:SimpleStackPanel Spacing="8">
                    <TextBlock Text="Aurora Height"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="HeightSlider"
                               Grid.Column="0"
                               Minimum="100"
                               Maximum="800"
                               Value="400"
                               TickFrequency="10"
                               IsSnapToTickEnabled="True"
                               ValueChanged="HeightSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=HeightSlider, Path=Value, StringFormat=N0}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Horizontal Spread"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="HorizontalSpreadSlider"
                               Grid.Column="0"
                               Minimum="100"
                               Maximum="600"
                               Value="300"
                               TickFrequency="10"
                               IsSnapToTickEnabled="True"
                               ValueChanged="HorizontalSpreadSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=HorizontalSpreadSlider, Path=Value, StringFormat=N0}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Number of Layers (1-5)"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="NumLayersSlider"
                               Grid.Column="0"
                               Minimum="1"
                               Maximum="5"
                               Value="3"
                               TickFrequency="1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="NumLayersSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=NumLayersSlider, Path=Value, StringFormat=N0}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Color Intensity"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="ColorIntensitySlider"
                               Grid.Column="0"
                               Minimum="0.5"
                               Maximum="3"
                               Value="1.5"
                               TickFrequency="0.1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="ColorIntensitySlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=ColorIntensitySlider, Path=Value, StringFormat=F1}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Glow Strength"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="GlowStrengthSlider"
                               Grid.Column="0"
                               Minimum="0.5"
                               Maximum="4"
                               Value="2"
                               TickFrequency="0.1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="GlowStrengthSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=GlowStrengthSlider, Path=Value, StringFormat=F1}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>
                </ui:SimpleStackPanel>

                <!-- Animation Settings -->
                <TextBlock Text="Animation"
                          FontWeight="SemiBold"
                          FontSize="14"
                          Margin="0,20,0,5"/>

                <ui:SimpleStackPanel Spacing="8">
                    <TextBlock Text="Wave Speed"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="WaveSpeedSlider"
                               Grid.Column="0"
                               Minimum="0.1"
                               Maximum="3"
                               Value="1"
                               TickFrequency="0.1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="WaveSpeedSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=WaveSpeedSlider, Path=Value, StringFormat=F1}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Wave Frequency"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="WaveFrequencySlider"
                               Grid.Column="0"
                               Minimum="0.5"
                               Maximum="5"
                               Value="2"
                               TickFrequency="0.1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="WaveFrequencySlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=WaveFrequencySlider, Path=Value, StringFormat=F1}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Noise Scale"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="NoiseScaleSlider"
                               Grid.Column="0"
                               Minimum="0.5"
                               Maximum="4"
                               Value="1.5"
                               TickFrequency="0.1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="NoiseScaleSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=NoiseScaleSlider, Path=Value, StringFormat=F1}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Noise Strength"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="NoiseStrengthSlider"
                               Grid.Column="0"
                               Minimum="0"
                               Maximum="1"
                               Value="0.3"
                               TickFrequency="0.05"
                               IsSnapToTickEnabled="True"
                               ValueChanged="NoiseStrengthSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=NoiseStrengthSlider, Path=Value, StringFormat=F2}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Vertical Flow"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="VerticalFlowSlider"
                               Grid.Column="0"
                               Minimum="0"
                               Maximum="2"
                               Value="0.5"
                               TickFrequency="0.1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="VerticalFlowSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=VerticalFlowSlider, Path=Value, StringFormat=F1}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>
                </ui:SimpleStackPanel>

                <!-- Color Settings -->
                <TextBlock Text="Aurora Colors"
                          FontWeight="SemiBold"
                          FontSize="14"
                          Margin="0,20,0,5"/>

                <ui:SimpleStackPanel Spacing="8">
                    <TextBlock Text="Color Preset"/>
                    <ComboBox x:Name="ColorPresetCombo" SelectionChanged="ColorPresetCombo_SelectionChanged">
                        <ComboBoxItem Content="Classic Aurora (Green/Cyan/Purple)" IsSelected="True"/>
                        <ComboBoxItem Content="Pink Aurora (Pink/Purple/Cyan)"/>
                        <ComboBoxItem Content="Blue Aurora (Blue/Cyan/White)"/>
                        <ComboBoxItem Content="Red Aurora (Red/Orange/Yellow)"/>
                        <ComboBoxItem Content="Purple Aurora (Purple/Pink/Blue)"/>
                    </ComboBox>
                </ui:SimpleStackPanel>
            </ui:SimpleStackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
