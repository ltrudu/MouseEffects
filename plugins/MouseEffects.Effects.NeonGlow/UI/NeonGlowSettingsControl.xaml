<UserControl x:Class="MouseEffects.Effects.NeonGlow.UI.NeonGlowSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             Width="400">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
            <!-- Header -->
            <TextBlock Text="Neon Glow Settings"
                      FontSize="18"
                      FontWeight="SemiBold"
                      Margin="0,0,0,15"/>

            <!-- Trail Settings -->
            <ui:SimpleStackPanel Spacing="12">
                <TextBlock Text="Trail Settings"
                          FontWeight="SemiBold"
                          FontSize="14"
                          Margin="0,10,0,5"/>

                <ui:SimpleStackPanel Spacing="8">
                    <TextBlock Text="Trail Length"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="TrailLengthSlider"
                               Grid.Column="0"
                               Minimum="50"
                               Maximum="500"
                               Value="200"
                               TickFrequency="50"
                               IsSnapToTickEnabled="True"
                               ValueChanged="TrailLengthSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=TrailLengthSlider, Path=Value, StringFormat=N0}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Trail Spacing"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="TrailSpacingSlider"
                               Grid.Column="0"
                               Minimum="2"
                               Maximum="20"
                               Value="8"
                               TickFrequency="1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="TrailSpacingSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=TrailSpacingSlider, Path=Value, StringFormat=N0}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>
                </ui:SimpleStackPanel>

                <!-- Line and Glow Settings -->
                <TextBlock Text="Line and Glow"
                          FontWeight="SemiBold"
                          FontSize="14"
                          Margin="0,20,0,5"/>

                <ui:SimpleStackPanel Spacing="8">
                    <TextBlock Text="Line Thickness"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="LineThicknessSlider"
                               Grid.Column="0"
                               Minimum="1"
                               Maximum="10"
                               Value="4"
                               TickFrequency="0.5"
                               IsSnapToTickEnabled="True"
                               ValueChanged="LineThicknessSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=LineThicknessSlider, Path=Value, StringFormat=F1}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Glow Layers (1-5)"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="GlowLayersSlider"
                               Grid.Column="0"
                               Minimum="1"
                               Maximum="5"
                               Value="3"
                               TickFrequency="1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="GlowLayersSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=GlowLayersSlider, Path=Value, StringFormat=N0}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Glow Intensity"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="GlowIntensitySlider"
                               Grid.Column="0"
                               Minimum="0.5"
                               Maximum="3"
                               Value="1.5"
                               TickFrequency="0.1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="GlowIntensitySlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=GlowIntensitySlider, Path=Value, StringFormat=F1}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>
                </ui:SimpleStackPanel>

                <!-- Fade and Smoothing -->
                <TextBlock Text="Fade and Smoothing"
                          FontWeight="SemiBold"
                          FontSize="14"
                          Margin="0,20,0,5"/>

                <ui:SimpleStackPanel Spacing="8">
                    <TextBlock Text="Fade Speed"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="FadeSpeedSlider"
                               Grid.Column="0"
                               Minimum="0.1"
                               Maximum="3"
                               Value="1"
                               TickFrequency="0.1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="FadeSpeedSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=FadeSpeedSlider, Path=Value, StringFormat=F1}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Smoothing Factor"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="SmoothingSlider"
                               Grid.Column="0"
                               Minimum="0"
                               Maximum="0.9"
                               Value="0.3"
                               TickFrequency="0.1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="SmoothingSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=SmoothingSlider, Path=Value, StringFormat=F1}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>
                </ui:SimpleStackPanel>

                <!-- Color Settings -->
                <TextBlock Text="Color Settings"
                          FontWeight="SemiBold"
                          FontSize="14"
                          Margin="0,20,0,5"/>

                <ui:SimpleStackPanel Spacing="8">
                    <TextBlock Text="Color Mode"/>
                    <ComboBox x:Name="ColorModeCombo" SelectionChanged="ColorModeCombo_SelectionChanged">
                        <ComboBoxItem Content="Fixed Color"/>
                        <ComboBoxItem Content="Rainbow" IsSelected="True"/>
                        <ComboBoxItem Content="Gradient"/>
                    </ComboBox>

                    <StackPanel x:Name="FixedColorPanel" Visibility="Collapsed">
                        <TextBlock Text="Primary Color Preset" Margin="0,5,0,5"/>
                        <ComboBox x:Name="FixedColorPresetCombo" SelectionChanged="FixedColorPresetCombo_SelectionChanged">
                            <ComboBoxItem Content="Hot Pink" IsSelected="True"/>
                            <ComboBoxItem Content="Cyan"/>
                            <ComboBoxItem Content="Purple"/>
                            <ComboBoxItem Content="Neon Green"/>
                            <ComboBoxItem Content="Orange"/>
                            <ComboBoxItem Content="Electric Blue"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel x:Name="GradientColorPanel" Visibility="Collapsed">
                        <TextBlock Text="Gradient Preset" Margin="0,5,0,5"/>
                        <ComboBox x:Name="GradientPresetCombo" SelectionChanged="GradientPresetCombo_SelectionChanged">
                            <ComboBoxItem Content="Pink to Cyan" IsSelected="True"/>
                            <ComboBoxItem Content="Purple to Blue"/>
                            <ComboBoxItem Content="Orange to Pink"/>
                            <ComboBoxItem Content="Green to Cyan"/>
                            <ComboBoxItem Content="Blue to Purple"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel x:Name="RainbowSpeedPanel">
                        <TextBlock Text="Rainbow Speed" Margin="0,5,0,0"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="RainbowSpeedSlider"
                                   Grid.Column="0"
                                   Minimum="0.1"
                                   Maximum="2"
                                   Value="0.5"
                                   TickFrequency="0.1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="RainbowSpeedSlider_ValueChanged"/>
                            <TextBlock Grid.Column="1"
                                      Text="{Binding ElementName=RainbowSpeedSlider, Path=Value, StringFormat=F1}"
                                      Width="40"
                                      TextAlignment="Right"
                                      Margin="10,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </ui:SimpleStackPanel>
            </ui:SimpleStackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
