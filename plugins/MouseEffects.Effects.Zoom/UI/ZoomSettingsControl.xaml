<UserControl x:Class="MouseEffects.Effects.Zoom.UI.ZoomSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Description -->
        <TextBlock Text="Magnifies the area around the mouse cursor with selectable circle or rectangle shape"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,8"/>

        <StackPanel>
            <!-- Shape Selection -->
            <TextBlock Text="Shape" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="ShapeComboBox" SelectedIndex="0" SelectionChanged="ShapeComboBox_SelectionChanged">
                <ComboBoxItem Content="Circle"/>
                <ComboBoxItem Content="Rectangle"/>
            </ComboBox>

            <!-- Zoom Factor -->
            <TextBlock Text="Zoom Factor" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ZoomFactorSlider" Minimum="1.1" Maximum="5.0" Value="1.5"
                    SmallChange="0.1" LargeChange="0.5" TickFrequency="0.1"
                    Style="{StaticResource SliderStyle}" ValueChanged="ZoomFactorSlider_ValueChanged"/>
            <TextBlock x:Name="ZoomFactorValue" Text="1.5x" Opacity="0.7" FontSize="11"/>

            <!-- Circle Settings Panel -->
            <StackPanel x:Name="CircleSettingsPanel" Visibility="Visible">
                <Separator Margin="0,12,0,8"/>
                <TextBlock Text="Circle Settings" FontWeight="Bold" Margin="0,0,0,8"/>

                <TextBlock Text="Radius (px)" Style="{StaticResource LabelStyle}"/>
                <Slider x:Name="RadiusSlider" Minimum="20" Maximum="500" Value="100"
                        Style="{StaticResource SliderStyle}" ValueChanged="RadiusSlider_ValueChanged"/>
                <TextBlock x:Name="RadiusValue" Text="100" Opacity="0.7" FontSize="11"/>
            </StackPanel>

            <!-- Rectangle Settings Panel -->
            <StackPanel x:Name="RectangleSettingsPanel" Visibility="Collapsed">
                <Separator Margin="0,12,0,8"/>
                <TextBlock Text="Rectangle Settings" FontWeight="Bold" Margin="0,0,0,8"/>

                <CheckBox x:Name="SyncSizesCheckBox" Content="Square (Sync Width/Height)" Margin="0,0,0,8"
                          IsChecked="False" Checked="SyncSizesCheckBox_Changed" Unchecked="SyncSizesCheckBox_Changed"/>

                <TextBlock Text="Width (px)" Style="{StaticResource LabelStyle}"/>
                <Slider x:Name="WidthSlider" Minimum="40" Maximum="800" Value="200"
                        Style="{StaticResource SliderStyle}" ValueChanged="WidthSlider_ValueChanged"/>
                <TextBlock x:Name="WidthValue" Text="200" Opacity="0.7" FontSize="11"/>

                <TextBlock x:Name="HeightLabel" Text="Height (px)" Style="{StaticResource LabelStyle}"/>
                <Slider x:Name="HeightSlider" Minimum="40" Maximum="800" Value="150"
                        Style="{StaticResource SliderStyle}" ValueChanged="HeightSlider_ValueChanged"/>
                <TextBlock x:Name="HeightValue" Text="150" Opacity="0.7" FontSize="11"/>
            </StackPanel>

            <!-- Border Settings -->
            <Separator Margin="0,12,0,8"/>
            <TextBlock Text="Border" FontWeight="Bold" Margin="0,0,0,8"/>

            <TextBlock Text="Border Width (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="BorderWidthSlider" Minimum="0" Maximum="10" Value="2"
                    Style="{StaticResource SliderStyle}" ValueChanged="BorderWidthSlider_ValueChanged"/>
            <TextBlock x:Name="BorderWidthValue" Text="2" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Border Color" Style="{StaticResource LabelStyle}"/>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <Border x:Name="BorderColorPreview" Width="24" Height="24" BorderThickness="1"
                        BorderBrush="Gray" Background="#3399FF" Margin="0,0,8,0"/>
                <Button x:Name="BorderColorPickerButton" Content="Pick Color..." Click="BorderColorPickerButton_Click"/>
            </StackPanel>

            <!-- Hotkeys Settings -->
            <Separator Margin="0,12,0,8"/>
            <TextBlock Text="Hotkeys" FontWeight="Bold" Margin="0,0,0,8"/>

            <CheckBox x:Name="ZoomHotkeyCheckBox" Content="Zoom Hotkey (Shift+Ctrl+Wheel)" Margin="0,0,0,4"
                      IsChecked="False" Checked="ZoomHotkeyCheckBox_Changed" Unchecked="ZoomHotkeyCheckBox_Changed"
                      ToolTip="Adjust zoom factor by 0.1 with Shift+Ctrl+Mouse Wheel"/>

            <CheckBox x:Name="SizeHotkeyCheckBox" Content="Size Hotkey (Shift+Alt+Wheel)" Margin="0,4,0,0"
                      IsChecked="False" Checked="SizeHotkeyCheckBox_Changed" Unchecked="SizeHotkeyCheckBox_Changed"
                      ToolTip="Adjust size by 5% with Shift+Alt+Mouse Wheel"/>
        </StackPanel>
    </StackPanel>
</UserControl>
