<UserControl x:Class="MouseEffects.Effects.FallingLeaves.UI.FallingLeavesSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="CheckBox" x:Key="CheckBoxStyle">
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Header Row: Enabled checkbox | Title | Fold/Unfold button -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox x:Name="EnabledCheckBox" Content="Enabled" Grid.Column="0"
                      VerticalAlignment="Center"
                      IsChecked="True" Checked="EnabledCheckBox_Changed" Unchecked="EnabledCheckBox_Changed"/>

            <TextBlock Text="Falling Leaves" Grid.Column="1"
                       FontWeight="Bold" FontSize="14"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0"/>

            <Button x:Name="FoldButton" Grid.Column="2"
                    Content="â–¼" Width="24" Height="24"
                    Background="Transparent" BorderThickness="0"
                    Click="FoldButton_Click" ToolTip="Expand/Collapse settings"/>
        </Grid>

        <!-- Description (always visible) -->
        <TextBlock Text="Autumn leaves drifting down with natural tumbling motion"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0"/>

        <!-- Collapsible Content Panel -->
        <StackPanel x:Name="ContentPanel" Visibility="Collapsed" Margin="0,8,0,0">

            <!-- Spawn Settings Section -->
            <TextBlock Text="Spawn Settings" FontWeight="Bold" FontSize="13" Margin="0,8,0,4"/>

            <TextBlock Text="Leaf Count (per second)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="LeafCountSlider" Minimum="5" Maximum="100" Value="30"
                    Style="{StaticResource SliderStyle}" ValueChanged="LeafCountSlider_ValueChanged"/>
            <TextBlock x:Name="LeafCountValue" Text="30" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Spawn Radius" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SpawnRadiusSlider" Minimum="50" Maximum="300" Value="120"
                    Style="{StaticResource SliderStyle}" ValueChanged="SpawnRadiusSlider_ValueChanged"/>
            <TextBlock x:Name="SpawnRadiusValue" Text="120" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Leaf Lifetime (seconds)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="LifetimeSlider" Minimum="3" Maximum="20" Value="10"
                    Style="{StaticResource SliderStyle}" ValueChanged="LifetimeSlider_ValueChanged"/>
            <TextBlock x:Name="LifetimeValue" Text="10" Opacity="0.7" FontSize="11"/>

            <!-- Motion Settings Section -->
            <TextBlock Text="Motion Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Fall Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="FallSpeedSlider" Minimum="10" Maximum="150" Value="50"
                    Style="{StaticResource SliderStyle}" ValueChanged="FallSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="FallSpeedValue" Text="50" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Wind Strength" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="WindStrengthSlider" Minimum="0" Maximum="80" Value="25"
                    Style="{StaticResource SliderStyle}" ValueChanged="WindStrengthSlider_ValueChanged"/>
            <TextBlock x:Name="WindStrengthValue" Text="25" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Wind Frequency" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="WindFrequencySlider" Minimum="0.1" Maximum="2" Value="0.3"
                    Style="{StaticResource SliderStyle}" ValueChanged="WindFrequencySlider_ValueChanged"/>
            <TextBlock x:Name="WindFrequencyValue" Text="0.3" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Tumble Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="TumbleSpeedSlider" Minimum="0" Maximum="6" Value="2.0"
                    Style="{StaticResource SliderStyle}" ValueChanged="TumbleSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="TumbleSpeedValue" Text="2.0" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Sway Amount" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SwayAmountSlider" Minimum="0" Maximum="100" Value="40"
                    Style="{StaticResource SliderStyle}" ValueChanged="SwayAmountSlider_ValueChanged"/>
            <TextBlock x:Name="SwayAmountValue" Text="40" Opacity="0.7" FontSize="11"/>

            <!-- Appearance Settings Section -->
            <TextBlock Text="Appearance Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Min Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MinSizeSlider" Minimum="5" Maximum="30" Value="12"
                    Style="{StaticResource SliderStyle}" ValueChanged="MinSizeSlider_ValueChanged"/>
            <TextBlock x:Name="MinSizeValue" Text="12" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Max Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxSizeSlider" Minimum="10" Maximum="60" Value="28"
                    Style="{StaticResource SliderStyle}" ValueChanged="MaxSizeSlider_ValueChanged"/>
            <TextBlock x:Name="MaxSizeValue" Text="28" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Color Variety" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ColorVarietySlider" Minimum="0" Maximum="1" Value="0.8"
                    Style="{StaticResource SliderStyle}" ValueChanged="ColorVarietySlider_ValueChanged"/>
            <TextBlock x:Name="ColorVarietyValue" Text="0.8" Opacity="0.7" FontSize="11"/>
        </StackPanel>
    </StackPanel>
</UserControl>
