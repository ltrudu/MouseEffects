<UserControl x:Class="MouseEffects.Effects.InkBlot.UI.InkBlotSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="400">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
            <!-- Drop Settings -->
            <TextBlock Text="Drop Settings" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

            <TextBlock Text="Drop Size:" Margin="0,5,0,2"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Slider x:Name="DropSizeSlider" Minimum="20" Maximum="200" Width="250"
                        ValueChanged="DropSizeSlider_ValueChanged"/>
                <TextBlock Text="{Binding ElementName=DropSizeSlider, Path=Value, StringFormat={}{0:F0} px}"
                           Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock Text="Spread Speed:" Margin="0,5,0,2"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Slider x:Name="SpreadSpeedSlider" Minimum="10" Maximum="200" Width="250"
                        ValueChanged="SpreadSpeedSlider_ValueChanged"/>
                <TextBlock Text="{Binding ElementName=SpreadSpeedSlider, Path=Value, StringFormat={}{0:F0} px/s}"
                           Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock Text="Edge Irregularity:" Margin="0,5,0,2"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Slider x:Name="EdgeIrregularitySlider" Minimum="0" Maximum="1" Width="250"
                        ValueChanged="EdgeIrregularitySlider_ValueChanged" TickFrequency="0.05"/>
                <TextBlock Text="{Binding ElementName=EdgeIrregularitySlider, Path=Value, StringFormat={}{0:F2}}"
                           Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock Text="Opacity:" Margin="0,5,0,2"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Slider x:Name="OpacitySlider" Minimum="0.1" Maximum="1" Width="250"
                        ValueChanged="OpacitySlider_ValueChanged" TickFrequency="0.05"/>
                <TextBlock Text="{Binding ElementName=OpacitySlider, Path=Value, StringFormat={}{0:F2}}"
                           Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock Text="Lifetime:" Margin="0,5,0,2"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Slider x:Name="LifetimeSlider" Minimum="0.5" Maximum="10" Width="250"
                        ValueChanged="LifetimeSlider_ValueChanged" TickFrequency="0.5"/>
                <TextBlock Text="{Binding ElementName=LifetimeSlider, Path=Value, StringFormat={}{0:F1} s}"
                           Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Color Settings -->
            <TextBlock Text="Color Settings" FontWeight="Bold" FontSize="14" Margin="0,20,0,10"/>

            <TextBlock Text="Color Mode:" Margin="0,5,0,2"/>
            <ComboBox x:Name="ColorModeCombo" Margin="0,0,0,10" SelectionChanged="ColorModeCombo_SelectionChanged">
                <ComboBoxItem Content="Ink" IsSelected="False"/>
                <ComboBoxItem Content="Watercolor" IsSelected="True"/>
            </ComboBox>

            <!-- Ink Colors -->
            <StackPanel x:Name="InkColorPanel" Visibility="Collapsed">
                <TextBlock Text="Ink Color:" Margin="0,5,0,2"/>
                <ComboBox x:Name="InkColorCombo" Margin="0,0,0,10" SelectionChanged="InkColorCombo_SelectionChanged">
                    <ComboBoxItem Content="Black" IsSelected="True"/>
                    <ComboBoxItem Content="Blue"/>
                    <ComboBoxItem Content="Red"/>
                    <ComboBoxItem Content="Sepia"/>
                </ComboBox>
            </StackPanel>

            <!-- Watercolor Colors -->
            <StackPanel x:Name="WatercolorPanel" Visibility="Visible">
                <TextBlock Text="Watercolor Color:" Margin="0,5,0,2"/>
                <ComboBox x:Name="WatercolorCombo" Margin="0,0,0,10" SelectionChanged="WatercolorCombo_SelectionChanged">
                    <ComboBoxItem Content="Soft Blue" IsSelected="True"/>
                    <ComboBoxItem Content="Soft Pink"/>
                    <ComboBoxItem Content="Soft Green"/>
                    <ComboBoxItem Content="Soft Purple"/>
                    <ComboBoxItem Content="Soft Yellow"/>
                </ComboBox>
            </StackPanel>

            <CheckBox x:Name="RandomColorCheck" Content="Random Color" Margin="0,5,0,10"
                      Checked="RandomColorCheck_Changed" Unchecked="RandomColorCheck_Changed" IsChecked="True"/>

            <!-- Trigger Settings -->
            <TextBlock Text="Trigger Settings" FontWeight="Bold" FontSize="14" Margin="0,20,0,10"/>

            <CheckBox x:Name="SpawnOnClickCheck" Content="Spawn on Click" Margin="0,5,0,10"
                      Checked="SpawnOnClickCheck_Changed" Unchecked="SpawnOnClickCheck_Changed" IsChecked="True"/>

            <CheckBox x:Name="SpawnOnMoveCheck" Content="Spawn on Move" Margin="0,5,0,10"
                      Checked="SpawnOnMoveCheck_Changed" Unchecked="SpawnOnMoveCheck_Changed" IsChecked="False"/>

            <TextBlock Text="Move Distance:" Margin="0,5,0,2"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Slider x:Name="MoveDistanceSlider" Minimum="20" Maximum="200" Width="250"
                        ValueChanged="MoveDistanceSlider_ValueChanged" TickFrequency="10"/>
                <TextBlock Text="{Binding ElementName=MoveDistanceSlider, Path=Value, StringFormat={}{0:F0} px}"
                           Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Performance Settings -->
            <TextBlock Text="Performance Settings" FontWeight="Bold" FontSize="14" Margin="0,20,0,10"/>

            <TextBlock Text="Max Active Blots:" Margin="0,5,0,2"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Slider x:Name="MaxBlotsSlider" Minimum="10" Maximum="100" Width="250"
                        ValueChanged="MaxBlotsSlider_ValueChanged" TickFrequency="5"/>
                <TextBlock Text="{Binding ElementName=MaxBlotsSlider, Path=Value, StringFormat={}{0:F0}}"
                           Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock Text="Max Blots/Second:" Margin="0,5,0,2"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Slider x:Name="MaxBlotsPerSecondSlider" Minimum="5" Maximum="50" Width="250"
                        ValueChanged="MaxBlotsPerSecondSlider_ValueChanged" TickFrequency="5"/>
                <TextBlock Text="{Binding ElementName=MaxBlotsPerSecondSlider, Path=Value, StringFormat={}{0:F0}}"
                           Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
