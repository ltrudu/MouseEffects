<UserControl x:Class="MouseEffects.Effects.Runes.UI.RunesSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019">

    <StackPanel>
        <CheckBox x:Name="EnabledCheckBox" Content="Enabled" Margin="0,0,0,10"
                  Checked="EnabledCheckBox_Changed" Unchecked="EnabledCheckBox_Changed"/>

        <Button x:Name="FoldButton" Content="â–¼" Width="30" Height="25"
                Margin="0,0,0,10" Click="FoldButton_Click" HorizontalAlignment="Left"/>

        <StackPanel x:Name="ContentPanel" Visibility="Collapsed">

            <!-- Trigger Settings -->
            <TextBlock Text="Trigger Settings" FontWeight="Bold" Margin="0,5,0,5"/>

            <CheckBox x:Name="MouseMoveCheckBox" Content="Mouse Move Trigger" Margin="0,3"
                      Checked="MouseMoveCheckBox_Changed" Unchecked="MouseMoveCheckBox_Changed"/>

            <Grid Margin="0,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Move Distance:" VerticalAlignment="Center"/>
                <TextBlock x:Name="MoveDistanceValue" Grid.Column="1" Text="60" MinWidth="40" TextAlignment="Right"/>
            </Grid>
            <Slider x:Name="MoveDistanceSlider" Minimum="20" Maximum="200" Value="60"
                    TickFrequency="10" IsSnapToTickEnabled="True"
                    ValueChanged="MoveDistanceSlider_ValueChanged" Margin="0,0,0,8"/>

            <CheckBox x:Name="LeftClickCheckBox" Content="Left Click Trigger" Margin="0,3"
                      Checked="LeftClickCheckBox_Changed" Unchecked="LeftClickCheckBox_Changed"/>

            <Grid Margin="0,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Left Click Burst:" VerticalAlignment="Center"/>
                <TextBlock x:Name="LeftClickCountValue" Grid.Column="1" Text="5" MinWidth="40" TextAlignment="Right"/>
            </Grid>
            <Slider x:Name="LeftClickCountSlider" Minimum="1" Maximum="15" Value="5"
                    TickFrequency="1" IsSnapToTickEnabled="True"
                    ValueChanged="LeftClickCountSlider_ValueChanged" Margin="0,0,0,8"/>

            <CheckBox x:Name="RightClickCheckBox" Content="Right Click Trigger" Margin="0,3"
                      Checked="RightClickCheckBox_Changed" Unchecked="RightClickCheckBox_Changed"/>

            <Grid Margin="0,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Right Click Burst:" VerticalAlignment="Center"/>
                <TextBlock x:Name="RightClickCountValue" Grid.Column="1" Text="8" MinWidth="40" TextAlignment="Right"/>
            </Grid>
            <Slider x:Name="RightClickCountSlider" Minimum="1" Maximum="20" Value="8"
                    TickFrequency="1" IsSnapToTickEnabled="True"
                    ValueChanged="RightClickCountSlider_ValueChanged" Margin="0,0,0,8"/>

            <!-- Rune Appearance -->
            <TextBlock Text="Rune Appearance" FontWeight="Bold" Margin="0,10,0,5"/>

            <Grid Margin="0,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Rune Count:" VerticalAlignment="Center"/>
                <TextBlock x:Name="RuneCountValue" Grid.Column="1" Text="3" MinWidth="40" TextAlignment="Right"/>
            </Grid>
            <Slider x:Name="RuneCountSlider" Minimum="1" Maximum="20" Value="3"
                    TickFrequency="1" IsSnapToTickEnabled="True"
                    ValueChanged="RuneCountSlider_ValueChanged" Margin="0,0,0,8"/>

            <Grid Margin="0,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Rune Size:" VerticalAlignment="Center"/>
                <TextBlock x:Name="RuneSizeValue" Grid.Column="1" Text="40" MinWidth="40" TextAlignment="Right"/>
            </Grid>
            <Slider x:Name="RuneSizeSlider" Minimum="20" Maximum="100" Value="40"
                    TickFrequency="5" IsSnapToTickEnabled="True"
                    ValueChanged="RuneSizeSlider_ValueChanged" Margin="0,0,0,8"/>

            <Grid Margin="0,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Lifetime:" VerticalAlignment="Center"/>
                <TextBlock x:Name="LifetimeValue" Grid.Column="1" Text="3.0s" MinWidth="40" TextAlignment="Right"/>
            </Grid>
            <Slider x:Name="LifetimeSlider" Minimum="1" Maximum="10" Value="3"
                    TickFrequency="0.5" IsSnapToTickEnabled="True"
                    ValueChanged="LifetimeSlider_ValueChanged" Margin="0,0,0,8"/>

            <Grid Margin="0,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Glow Intensity:" VerticalAlignment="Center"/>
                <TextBlock x:Name="GlowIntensityValue" Grid.Column="1" Text="1.5" MinWidth="40" TextAlignment="Right"/>
            </Grid>
            <Slider x:Name="GlowIntensitySlider" Minimum="0.5" Maximum="3" Value="1.5"
                    TickFrequency="0.1" IsSnapToTickEnabled="True"
                    ValueChanged="GlowIntensitySlider_ValueChanged" Margin="0,0,0,8"/>

            <!-- Animation Settings -->
            <TextBlock Text="Animation" FontWeight="Bold" Margin="0,10,0,5"/>

            <Grid Margin="0,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Rotation Speed:" VerticalAlignment="Center"/>
                <TextBlock x:Name="RotationSpeedValue" Grid.Column="1" Text="0.5" MinWidth="40" TextAlignment="Right"/>
            </Grid>
            <Slider x:Name="RotationSpeedSlider" Minimum="0" Maximum="3" Value="0.5"
                    TickFrequency="0.1" IsSnapToTickEnabled="True"
                    ValueChanged="RotationSpeedSlider_ValueChanged" Margin="0,0,0,8"/>

            <Grid Margin="0,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Float Distance:" VerticalAlignment="Center"/>
                <TextBlock x:Name="FloatDistanceValue" Grid.Column="1" Text="20" MinWidth="40" TextAlignment="Right"/>
            </Grid>
            <Slider x:Name="FloatDistanceSlider" Minimum="0" Maximum="50" Value="20"
                    TickFrequency="5" IsSnapToTickEnabled="True"
                    ValueChanged="FloatDistanceSlider_ValueChanged" Margin="0,0,0,8"/>

            <!-- Color Settings -->
            <TextBlock Text="Color" FontWeight="Bold" Margin="0,10,0,5"/>

            <CheckBox x:Name="RainbowModeCheckBox" Content="Rainbow Mode" Margin="0,3"
                      Checked="RainbowModeCheckBox_Changed" Unchecked="RainbowModeCheckBox_Changed"/>

            <Grid Margin="0,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Rainbow Speed:" VerticalAlignment="Center"/>
                <TextBlock x:Name="RainbowSpeedValue" Grid.Column="1" Text="0.3" MinWidth="40" TextAlignment="Right"/>
            </Grid>
            <Slider x:Name="RainbowSpeedSlider" Minimum="0.1" Maximum="2" Value="0.3"
                    TickFrequency="0.1" IsSnapToTickEnabled="True"
                    ValueChanged="RainbowSpeedSlider_ValueChanged" Margin="0,0,0,8"/>

        </StackPanel>
    </StackPanel>
</UserControl>
