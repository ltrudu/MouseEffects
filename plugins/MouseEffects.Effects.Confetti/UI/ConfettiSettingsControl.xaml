<UserControl x:Class="MouseEffects.Effects.Confetti.UI.ConfettiSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="CheckBox" x:Key="CheckBoxStyle">
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Description -->
        <TextBlock Text="Colorful confetti particles with physics and tumbling motion"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,8"/>

        <StackPanel Margin="0,8,0,0">

            <!-- Trigger Mode Section -->
            <TextBlock Text="Trigger Mode" FontWeight="Bold" FontSize="13" Margin="0,8,0,4"/>

            <CheckBox x:Name="BurstOnClickCheckBox" Content="Burst on Click"
                      Style="{StaticResource CheckBoxStyle}"
                      Checked="BurstOnClickCheckBox_Changed" Unchecked="BurstOnClickCheckBox_Changed"/>

            <CheckBox x:Name="TrailOnMoveCheckBox" Content="Trail on Mouse Move"
                      Style="{StaticResource CheckBoxStyle}"
                      Checked="TrailOnMoveCheckBox_Changed" Unchecked="TrailOnMoveCheckBox_Changed"/>

            <!-- Burst Settings Section -->
            <TextBlock Text="Burst Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Confetti Count per Burst" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="BurstCountSlider" Minimum="10" Maximum="200" Value="50"
                    Style="{StaticResource SliderStyle}" ValueChanged="BurstCountSlider_ValueChanged"/>
            <TextBlock x:Name="BurstCountValue" Text="50" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Burst Force" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="BurstForceSlider" Minimum="100" Maximum="800" Value="400"
                    Style="{StaticResource SliderStyle}" ValueChanged="BurstForceSlider_ValueChanged"/>
            <TextBlock x:Name="BurstForceValue" Text="400" Opacity="0.7" FontSize="11"/>

            <!-- Trail Settings Section -->
            <TextBlock Text="Trail Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Trail Spacing (pixels)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="TrailSpacingSlider" Minimum="5" Maximum="100" Value="20"
                    Style="{StaticResource SliderStyle}" ValueChanged="TrailSpacingSlider_ValueChanged"/>
            <TextBlock x:Name="TrailSpacingValue" Text="20" Opacity="0.7" FontSize="11"/>

            <!-- Particle Settings Section -->
            <TextBlock Text="Particle Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Min Particle Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MinParticleSizeSlider" Minimum="2" Maximum="30" Value="8"
                    Style="{StaticResource SliderStyle}" ValueChanged="MinParticleSizeSlider_ValueChanged"/>
            <TextBlock x:Name="MinParticleSizeValue" Text="8" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Max Particle Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxParticleSizeSlider" Minimum="5" Maximum="50" Value="16"
                    Style="{StaticResource SliderStyle}" ValueChanged="MaxParticleSizeSlider_ValueChanged"/>
            <TextBlock x:Name="MaxParticleSizeValue" Text="16" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Lifetime (seconds)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ParticleLifespanSlider" Minimum="1" Maximum="10" Value="3.0"
                    Style="{StaticResource SliderStyle}" ValueChanged="ParticleLifespanSlider_ValueChanged"/>
            <TextBlock x:Name="ParticleLifespanValue" Text="3.0" Opacity="0.7" FontSize="11"/>

            <!-- Physics Settings Section -->
            <TextBlock Text="Physics Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Gravity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="GravitySlider" Minimum="0" Maximum="500" Value="200"
                    Style="{StaticResource SliderStyle}" ValueChanged="GravitySlider_ValueChanged"/>
            <TextBlock x:Name="GravityValue" Text="200" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Air Resistance" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="AirResistanceSlider" Minimum="0.90" Maximum="1.0" Value="0.985"
                    Style="{StaticResource SliderStyle}" ValueChanged="AirResistanceSlider_ValueChanged"/>
            <TextBlock x:Name="AirResistanceValue" Text="0.985" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Flutter Amount" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="FlutterAmountSlider" Minimum="0" Maximum="5" Value="2.0"
                    Style="{StaticResource SliderStyle}" ValueChanged="FlutterAmountSlider_ValueChanged"/>
            <TextBlock x:Name="FlutterAmountValue" Text="2.0" Opacity="0.7" FontSize="11"/>

            <!-- Shape Settings Section -->
            <TextBlock Text="Confetti Shapes" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <CheckBox x:Name="UseRectanglesCheckBox" Content="Rectangles"
                      Style="{StaticResource CheckBoxStyle}"
                      Checked="UseRectanglesCheckBox_Changed" Unchecked="UseRectanglesCheckBox_Changed"/>

            <CheckBox x:Name="UseCirclesCheckBox" Content="Circles"
                      Style="{StaticResource CheckBoxStyle}"
                      Checked="UseCirclesCheckBox_Changed" Unchecked="UseCirclesCheckBox_Changed"/>

            <CheckBox x:Name="UseRibbonsCheckBox" Content="Ribbons/Streamers"
                      Style="{StaticResource CheckBoxStyle}"
                      Checked="UseRibbonsCheckBox_Changed" Unchecked="UseRibbonsCheckBox_Changed"/>

            <!-- Color Settings Section -->
            <TextBlock Text="Color Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <CheckBox x:Name="RainbowModeCheckBox" Content="Rainbow Mode"
                      Style="{StaticResource CheckBoxStyle}"
                      Checked="RainbowModeCheckBox_Changed" Unchecked="RainbowModeCheckBox_Changed"/>

            <TextBlock Text="Rainbow Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RainbowSpeedSlider" Minimum="0.1" Maximum="5" Value="0.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="RainbowSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="RainbowSpeedValue" Text="0.5" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="(When disabled, uses party color palette)"
                       Opacity="0.5" FontSize="10" Margin="0,4,0,8"/>

            <!-- Performance Section -->
            <TextBlock Text="Performance" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Max Particles" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxParticlesSlider" Minimum="100" Maximum="10000" Value="5000"
                    Style="{StaticResource SliderStyle}" ValueChanged="MaxParticlesSlider_ValueChanged"/>
            <TextBlock x:Name="MaxParticlesValue" Text="5000" Opacity="0.7" FontSize="11"/>
        </StackPanel>
    </StackPanel>
</UserControl>
