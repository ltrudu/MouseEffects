<UserControl x:Class="MouseEffects.Effects.CometTrail.UI.CometTrailSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="CheckBox" x:Key="CheckBoxStyle">
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Description -->
        <TextBlock Text="A blazing comet with fiery tail and sparks following the mouse cursor"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,8"/>

        <StackPanel Margin="0,8,0,0">

            <!-- Trail Settings Section -->
            <TextBlock Text="Trail Settings" FontWeight="Bold" FontSize="13" Margin="0,8,0,4"/>

            <TextBlock Text="Trail Length" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxTrailLengthSlider" Minimum="100" Maximum="500" Value="250"
                    Style="{StaticResource SliderStyle}" ValueChanged="MaxTrailLengthSlider_ValueChanged"/>
            <TextBlock x:Name="MaxTrailLengthValue" Text="250" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Trail Spacing" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="TrailSpacingSlider" Minimum="3" Maximum="15" Value="6"
                    Style="{StaticResource SliderStyle}" ValueChanged="TrailSpacingSlider_ValueChanged"/>
            <TextBlock x:Name="TrailSpacingValue" Text="6" Opacity="0.7" FontSize="11"/>

            <!-- Comet Appearance Section -->
            <TextBlock Text="Comet Appearance" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Head Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="HeadSizeSlider" Minimum="10" Maximum="50" Value="20"
                    Style="{StaticResource SliderStyle}" ValueChanged="HeadSizeSlider_ValueChanged"/>
            <TextBlock x:Name="HeadSizeValue" Text="20" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Trail Width" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="TrailWidthSlider" Minimum="3" Maximum="20" Value="8"
                    Style="{StaticResource SliderStyle}" ValueChanged="TrailWidthSlider_ValueChanged"/>
            <TextBlock x:Name="TrailWidthValue" Text="8" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Glow Intensity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="GlowIntensitySlider" Minimum="0.5" Maximum="4.0" Value="2.0"
                    Style="{StaticResource SliderStyle}" ValueChanged="GlowIntensitySlider_ValueChanged"/>
            <TextBlock x:Name="GlowIntensityValue" Text="2.0" Opacity="0.7" FontSize="11"/>

            <!-- Spark Settings Section -->
            <TextBlock Text="Spark Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Spark Count" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SparkCountSlider" Minimum="0" Maximum="20" Value="5"
                    Style="{StaticResource SliderStyle}" ValueChanged="SparkCountSlider_ValueChanged"/>
            <TextBlock x:Name="SparkCountValue" Text="5" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Spark Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SparkSizeSlider" Minimum="1" Maximum="8" Value="3"
                    Style="{StaticResource SliderStyle}" ValueChanged="SparkSizeSlider_ValueChanged"/>
            <TextBlock x:Name="SparkSizeValue" Text="3" Opacity="0.7" FontSize="11"/>

            <!-- Color Settings Section -->
            <TextBlock Text="Color Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Color Temperature" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ColorTemperatureSlider" Minimum="0" Maximum="1" Value="0.7"
                    Style="{StaticResource SliderStyle}" ValueChanged="ColorTemperatureSlider_ValueChanged"/>
            <TextBlock x:Name="ColorTemperatureValue" Text="0.70" Opacity="0.7" FontSize="11"/>

            <!-- Animation Settings Section -->
            <TextBlock Text="Animation Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Fade Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="FadeSpeedSlider" Minimum="0.1" Maximum="3.0" Value="1.0"
                    Style="{StaticResource SliderStyle}" ValueChanged="FadeSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="FadeSpeedValue" Text="1.0" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Smoothing" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SmoothingFactorSlider" Minimum="0" Maximum="0.9" Value="0.2"
                    Style="{StaticResource SliderStyle}" ValueChanged="SmoothingFactorSlider_ValueChanged"/>
            <TextBlock x:Name="SmoothingFactorValue" Text="0.20" Opacity="0.7" FontSize="11"/>
        </StackPanel>
    </StackPanel>
</UserControl>
