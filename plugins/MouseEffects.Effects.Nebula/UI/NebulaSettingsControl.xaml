<UserControl x:Class="MouseEffects.Effects.Nebula.UI.NebulaSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019">
    <StackPanel Margin="0">
            <!-- Alpha Setting -->
            <ui:SimpleStackPanel Spacing="8" Margin="0,0,0,12">
                <TextBlock Text="Alpha"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="AlphaSlider"
                           Grid.Column="0"
                           Minimum="0.1"
                           Maximum="1.0"
                           Value="0.7"
                           TickFrequency="0.05"
                           IsSnapToTickEnabled="True"
                           ValueChanged="AlphaSlider_ValueChanged"/>
                    <TextBlock Grid.Column="1"
                              Text="{Binding ElementName=AlphaSlider, Path=Value, StringFormat=F2}"
                              Width="40"
                              TextAlignment="Right"
                              Margin="10,0,0,0"/>
                </Grid>
            </ui:SimpleStackPanel>

            <!-- Cloud Properties -->
            <ui:SimpleStackPanel Spacing="12">
                <TextBlock Text="Cloud Properties"
                          FontWeight="SemiBold"
                          FontSize="14"
                          Margin="0,10,0,5"/>

                <ui:SimpleStackPanel Spacing="8">
                    <TextBlock Text="Cloud Density"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="CloudDensitySlider"
                               Grid.Column="0"
                               Minimum="0.1"
                               Maximum="1.5"
                               Value="0.7"
                               TickFrequency="0.05"
                               IsSnapToTickEnabled="True"
                               ValueChanged="CloudDensitySlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=CloudDensitySlider, Path=Value, StringFormat=F2}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Number of Layers (2-5)"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="LayerCountSlider"
                               Grid.Column="0"
                               Minimum="2"
                               Maximum="5"
                               Value="4"
                               TickFrequency="1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="LayerCountSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=LayerCountSlider, Path=Value, StringFormat=N0}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Effect Radius"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="EffectRadiusSlider"
                               Grid.Column="0"
                               Minimum="200"
                               Maximum="800"
                               Value="400"
                               TickFrequency="10"
                               IsSnapToTickEnabled="True"
                               ValueChanged="EffectRadiusSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=EffectRadiusSlider, Path=Value, StringFormat=N0}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Noise Scale"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="NoiseScaleSlider"
                               Grid.Column="0"
                               Minimum="0.5"
                               Maximum="3"
                               Value="1.2"
                               TickFrequency="0.1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="NoiseScaleSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=NoiseScaleSlider, Path=Value, StringFormat=F1}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>
                </ui:SimpleStackPanel>

                <!-- Animation Settings -->
                <TextBlock Text="Animation"
                          FontWeight="SemiBold"
                          FontSize="14"
                          Margin="0,20,0,5"/>

                <ui:SimpleStackPanel Spacing="8">
                    <TextBlock Text="Swirl Speed"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="SwirlSpeedSlider"
                               Grid.Column="0"
                               Minimum="0"
                               Maximum="2"
                               Value="0.5"
                               TickFrequency="0.1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="SwirlSpeedSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=SwirlSpeedSlider, Path=Value, StringFormat=F1}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Cloud Drift Speed"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="CloudSpeedSlider"
                               Grid.Column="0"
                               Minimum="0"
                               Maximum="1"
                               Value="0.3"
                               TickFrequency="0.05"
                               IsSnapToTickEnabled="True"
                               ValueChanged="CloudSpeedSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=CloudSpeedSlider, Path=Value, StringFormat=F2}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>
                </ui:SimpleStackPanel>

                <!-- Visual Effects -->
                <TextBlock Text="Visual Effects"
                          FontWeight="SemiBold"
                          FontSize="14"
                          Margin="0,20,0,5"/>

                <ui:SimpleStackPanel Spacing="8">
                    <TextBlock Text="Glow Intensity"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="GlowIntensitySlider"
                               Grid.Column="0"
                               Minimum="0.5"
                               Maximum="3"
                               Value="1.5"
                               TickFrequency="0.1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="GlowIntensitySlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=GlowIntensitySlider, Path=Value, StringFormat=F1}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Glow Animation Speed"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="GlowAnimationSpeedSlider"
                               Grid.Column="0"
                               Minimum="0"
                               Maximum="10"
                               Value="0"
                               TickFrequency="0.5"
                               IsSnapToTickEnabled="True"
                               ValueChanged="GlowAnimationSpeedSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=GlowAnimationSpeedSlider, Path=Value, StringFormat=F1}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Star Density"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="StarDensitySlider"
                               Grid.Column="0"
                               Minimum="0"
                               Maximum="1"
                               Value="0.3"
                               TickFrequency="0.05"
                               IsSnapToTickEnabled="True"
                               ValueChanged="StarDensitySlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=StarDensitySlider, Path=Value, StringFormat=F2}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Color Variation"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="ColorVariationSlider"
                               Grid.Column="0"
                               Minimum="0"
                               Maximum="1"
                               Value="0.5"
                               TickFrequency="0.05"
                               IsSnapToTickEnabled="True"
                               ValueChanged="ColorVariationSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ElementName=ColorVariationSlider, Path=Value, StringFormat=F2}"
                                  Width="40"
                                  TextAlignment="Right"
                                  Margin="10,0,0,0"/>
                    </Grid>
                </ui:SimpleStackPanel>

                <!-- Color Palette -->
                <TextBlock Text="Color Palette"
                          FontWeight="SemiBold"
                          FontSize="14"
                          Margin="0,20,0,5"/>

                <ui:SimpleStackPanel Spacing="8">
                    <TextBlock Text="Nebula Palette"/>
                    <ComboBox x:Name="ColorPaletteCombo" SelectionChanged="ColorPaletteCombo_SelectionChanged">
                        <ComboBoxItem Content="Orion Nebula (Purple/Blue/Pink)" IsSelected="True"/>
                        <ComboBoxItem Content="Carina Nebula (Orange/Yellow/Red)"/>
                        <ComboBoxItem Content="Eagle Nebula (Green/Teal/Blue)"/>
                        <ComboBoxItem Content="Custom Colors"/>
                    </ComboBox>

                    <!-- Custom Color Section (hidden by default) -->
                    <StackPanel x:Name="CustomColorPanel" Visibility="Collapsed" Margin="0,10,0,0">
                        <TextBlock Text="Custom Colors"
                                  FontSize="12"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Custom Color 1" FontSize="11" Margin="0,5,0,2"/>
                        <TextBlock Text="(Use external color picker)" FontSize="10" Foreground="Gray"/>

                        <TextBlock Text="Custom Color 2" FontSize="11" Margin="0,10,0,2"/>
                        <TextBlock Text="(Use external color picker)" FontSize="10" Foreground="Gray"/>

                        <TextBlock Text="Custom Color 3" FontSize="11" Margin="0,10,0,2"/>
                        <TextBlock Text="(Use external color picker)" FontSize="10" Foreground="Gray"/>
                    </StackPanel>
                </ui:SimpleStackPanel>
            </ui:SimpleStackPanel>
    </StackPanel>
</UserControl>
