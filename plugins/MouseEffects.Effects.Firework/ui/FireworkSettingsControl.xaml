<UserControl x:Class="MouseEffects.Effects.Firework.UI.FireworkSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="LabelStyle" TargetType="TextBlock">
                <Setter Property="Margin" Value="0,8,0,4" />
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>
            <Style x:Key="SectionStyle" TargetType="TextBlock">
                <Setter Property="Margin" Value="0,12,0,4" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="13" />
                <Setter Property="Foreground" Value="#89B4FA" />
            </Style>
            <Style x:Key="SliderStyle" TargetType="Slider">
                <Setter Property="Margin" Value="0,0,0,4" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <TextBlock Text="Creates stunning firework explosions with colorful particles and trails"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0" />

        <StackPanel Margin="0,8,0,0">
            <!-- Firework Style Section -->
            <TextBlock Text="Firework Style" Style="{StaticResource SectionStyle}" />
            <ComboBox Name="FireworkStyleComboBox" Margin="0,4,0,4"
                      SelectionChanged="FireworkStyleComboBox_SelectionChanged">
                <ComboBoxItem Content="Classic Burst" IsSelected="True" />
                <ComboBoxItem Content="Spinner" />
                <ComboBoxItem Content="Willow" />
                <ComboBoxItem Content="Crackling" />
                <ComboBoxItem Content="Chrysanthemum" />
                <ComboBoxItem Content="Brocade" />
                <ComboBoxItem Content="Comet" />
                <ComboBoxItem Content="Crossette" />
                <ComboBoxItem Content="Palm" />
                <ComboBoxItem Content="Peony" />
                <ComboBoxItem Content="Pearls" />
                <ComboBoxItem Content="Fish" />
                <ComboBoxItem Content="Green Bees" />
                <ComboBoxItem Content="Pistil" />
                <ComboBoxItem Content="Stars" />
                <ComboBoxItem Content="Tail" />
                <ComboBoxItem Content="Strobe" />
                <ComboBoxItem Content="Glitter" />
                <ComboBoxItem Content="Random" />
            </ComboBox>
            <TextBlock Name="StyleDescriptionText"
                       Text="Traditional radial explosion with colorful particles and optional secondary bursts"
                       Opacity="0.7" FontSize="11" TextWrapping="Wrap" Margin="0,0,0,8" />

            <!-- Style-Specific Settings Panels -->
            <!-- Spinner Settings -->
            <StackPanel Name="SpinnerSettingsPanel" Visibility="Collapsed">
                <TextBlock Text="Spinner Settings" Style="{StaticResource SectionStyle}" />

                <TextBlock Text="Spin Speed" Style="{StaticResource LabelStyle}" />
                <Slider Name="SpinSpeedSlider" Minimum="1" Maximum="20" Value="8"
                        Style="{StaticResource SliderStyle}" ValueChanged="SpinSpeedSlider_ValueChanged" />
                <TextBlock Name="SpinSpeedValue" Text="8.0" Opacity="0.7" FontSize="11" />

                <TextBlock Text="Spin Radius" Style="{StaticResource LabelStyle}" />
                <Slider Name="SpinRadiusSlider" Minimum="10" Maximum="100" Value="30"
                        Style="{StaticResource SliderStyle}" ValueChanged="SpinRadiusSlider_ValueChanged" />
                <TextBlock Name="SpinRadiusValue" Text="30" Opacity="0.7" FontSize="11" />

                <CheckBox Name="SparkTrailsCheckBox" Content="Enable Spark Trails" Margin="0,8,0,4"
                          IsChecked="True" Checked="SparkTrailsCheckBox_Changed" Unchecked="SparkTrailsCheckBox_Changed" />
            </StackPanel>

            <!-- Willow Settings -->
            <StackPanel Name="WillowSettingsPanel" Visibility="Collapsed">
                <TextBlock Text="Willow Settings" Style="{StaticResource SectionStyle}" />

                <TextBlock Text="Droop Intensity" Style="{StaticResource LabelStyle}" />
                <Slider Name="DroopIntensitySlider" Minimum="0.5" Maximum="3" Value="2"
                        Style="{StaticResource SliderStyle}" ValueChanged="DroopIntensitySlider_ValueChanged" />
                <TextBlock Name="DroopIntensityValue" Text="2.0" Opacity="0.7" FontSize="11" />

                <TextBlock Text="Branch Density" Style="{StaticResource LabelStyle}" />
                <Slider Name="BranchDensitySlider" Minimum="1" Maximum="5" Value="2"
                        Style="{StaticResource SliderStyle}" ValueChanged="BranchDensitySlider_ValueChanged" />
                <TextBlock Name="BranchDensityValue" Text="2.0" Opacity="0.7" FontSize="11" />
            </StackPanel>

            <!-- Crackling Settings -->
            <StackPanel Name="CracklingSettingsPanel" Visibility="Collapsed">
                <TextBlock Text="Crackling Settings" Style="{StaticResource SectionStyle}" />

                <TextBlock Text="Flash Rate (Hz)" Style="{StaticResource LabelStyle}" />
                <Slider Name="FlashRateSlider" Minimum="5" Maximum="50" Value="20"
                        Style="{StaticResource SliderStyle}" ValueChanged="FlashRateSlider_ValueChanged" />
                <TextBlock Name="FlashRateValue" Text="20" Opacity="0.7" FontSize="11" />

                <TextBlock Text="Pop Intensity" Style="{StaticResource LabelStyle}" />
                <Slider Name="PopIntensitySlider" Minimum="0" Maximum="1" Value="0.5"
                        Style="{StaticResource SliderStyle}" ValueChanged="PopIntensitySlider_ValueChanged" />
                <TextBlock Name="PopIntensityValue" Text="0.5" Opacity="0.7" FontSize="11" />

                <TextBlock Text="Particle Density" Style="{StaticResource LabelStyle}" />
                <Slider Name="ParticleMultiplierSlider" Minimum="0.1" Maximum="10" Value="2"
                        Style="{StaticResource SliderStyle}" ValueChanged="ParticleMultiplierSlider_ValueChanged" />
                <TextBlock Name="ParticleMultiplierValue" Text="5.0" Opacity="0.7" FontSize="11" />
            </StackPanel>

            <!-- Chrysanthemum Settings -->
            <StackPanel Name="ChrysanthemumSettingsPanel" Visibility="Collapsed">
                <TextBlock Text="Chrysanthemum Settings" Style="{StaticResource SectionStyle}" />
                <TextBlock Text="Higher values = more particles = higher GPU load"
                           Opacity="0.6" FontSize="10" Margin="0,0,0,4" />

                <TextBlock Text="Spark Density (sparks/sec)" Style="{StaticResource LabelStyle}" />
                <Slider Name="SparkDensitySlider" Minimum="1" Maximum="20" Value="5"
                        Style="{StaticResource SliderStyle}" IsSnapToTickEnabled="True" TickFrequency="1"
                        ValueChanged="SparkDensitySlider_ValueChanged" />
                <TextBlock Name="SparkDensityValue" Text="5" Opacity="0.7" FontSize="11" />

                <TextBlock Text="Trail Persistence" Style="{StaticResource LabelStyle}" />
                <Slider Name="TrailPersistenceSlider" Minimum="0.2" Maximum="1.5" Value="0.5"
                        Style="{StaticResource SliderStyle}" ValueChanged="TrailPersistenceSlider_ValueChanged" />
                <TextBlock Name="TrailPersistenceValue" Text="0.5" Opacity="0.7" FontSize="11" />

                <TextBlock Text="Max Sparks/Particle" Style="{StaticResource LabelStyle}" />
                <Slider Name="MaxSparksSlider" Minimum="1" Maximum="10" Value="3"
                        Style="{StaticResource SliderStyle}" IsSnapToTickEnabled="True" TickFrequency="1"
                        ValueChanged="MaxSparksSlider_ValueChanged" />
                <TextBlock Name="MaxSparksValue" Text="3" Opacity="0.7" FontSize="11" />
            </StackPanel>

            <!-- Random Style Info -->
            <StackPanel Name="RandomSettingsPanel" Visibility="Collapsed">
                <TextBlock Text="Random Mode" Style="{StaticResource SectionStyle}" />
                <TextBlock Text="Each explosion will randomly select from all available styles. Configure individual styles by selecting them from the dropdown above."
                           Opacity="0.7" FontSize="11" TextWrapping="Wrap" Margin="0,4,0,8" />
            </StackPanel>

            <!-- Random Wave Mode Section -->
            <TextBlock Text="Random Wave Mode" Style="{StaticResource SectionStyle}" />
            <CheckBox Name="RandomWaveModeCheckBox" Content="Enable Random Wave Mode" Margin="0,4,0,4"
                      Checked="RandomWaveModeCheckBox_Changed" Unchecked="RandomWaveModeCheckBox_Changed" />
            <TextBlock Text="Cycles through all firework styles automatically, showing each style for a duration before switching."
                       Opacity="0.7" FontSize="11" TextWrapping="Wrap" Margin="0,0,0,8" />

            <StackPanel Name="WaveSettingsPanel" Visibility="Collapsed">
                <CheckBox Name="RandomWaveDurationCheckBox" Content="Random Duration" Margin="0,4,0,4"
                          Checked="RandomWaveDurationCheckBox_Changed" Unchecked="RandomWaveDurationCheckBox_Changed" />

                <!-- Fixed Duration -->
                <StackPanel Name="FixedDurationPanel">
                    <TextBlock Text="Wave Duration (seconds)" Style="{StaticResource LabelStyle}" />
                    <Slider Name="WaveDurationSlider" Minimum="1" Maximum="30" Value="5"
                            Style="{StaticResource SliderStyle}" ValueChanged="WaveDurationSlider_ValueChanged" />
                    <TextBlock Name="WaveDurationValue" Text="5.0" Opacity="0.7" FontSize="11" />
                </StackPanel>

                <!-- Random Duration -->
                <StackPanel Name="RandomDurationPanel" Visibility="Collapsed">
                    <TextBlock Text="Wave Duration Min (seconds)" Style="{StaticResource LabelStyle}" />
                    <Slider Name="WaveDurationMinSlider" Minimum="1" Maximum="29" Value="3"
                            Style="{StaticResource SliderStyle}" ValueChanged="WaveDurationMinSlider_ValueChanged" />
                    <TextBlock Name="WaveDurationMinValue" Text="3.0" Opacity="0.7" FontSize="11" />

                    <TextBlock Text="Wave Duration Max (seconds)" Style="{StaticResource LabelStyle}" />
                    <Slider Name="WaveDurationMaxSlider" Minimum="2" Maximum="30" Value="10"
                            Style="{StaticResource SliderStyle}" ValueChanged="WaveDurationMaxSlider_ValueChanged" />
                    <TextBlock Name="WaveDurationMaxValue" Text="10.0" Opacity="0.7" FontSize="11" />
                </StackPanel>
            </StackPanel>

            <!-- Automatic Mode Section -->
            <TextBlock Text="Automatic Mode" Style="{StaticResource SectionStyle}" />
            <CheckBox Name="AutomaticModeCheckBox" Content="Enable Automatic Mode" Margin="0,4,0,4"
                      Checked="AutomaticModeCheckBox_Changed" Unchecked="AutomaticModeCheckBox_Changed" />
            <TextBlock Text="Automatically launches fireworks from launchpads at the bottom of the screen."
                       Opacity="0.7" FontSize="11" TextWrapping="Wrap" Margin="0,0,0,8" />

            <StackPanel Name="AutomaticSettingsPanel" Visibility="Collapsed">
                <TextBlock Text="Number of Launchpads" Style="{StaticResource LabelStyle}" />
                <Slider Name="NumberOfLaunchpadsSlider" Minimum="1" Maximum="20" Value="5"
                        Style="{StaticResource SliderStyle}" IsSnapToTickEnabled="True" TickFrequency="1"
                        ValueChanged="NumberOfLaunchpadsSlider_ValueChanged" />
                <TextBlock Name="NumberOfLaunchpadsValue" Text="5" Opacity="0.7" FontSize="11" />

                <TextBlock Text="Launch Style" Style="{StaticResource LabelStyle}" />
                <ComboBox Name="LaunchStyleComboBox" Margin="0,4,0,4"
                          SelectionChanged="LaunchStyleComboBox_SelectionChanged">
                    <ComboBoxItem Content="All Together" IsSelected="True" />
                    <ComboBoxItem Content="Left to Right" />
                    <ComboBoxItem Content="Right to Left" />
                    <ComboBoxItem Content="Double Left/Right" />
                    <ComboBoxItem Content="Random Sequence" />
                    <ComboBoxItem Content="Random" />
                </ComboBox>

                <TextBlock Text="Spawn Rate (fireworks/sec)" Style="{StaticResource LabelStyle}" />
                <Slider Name="AutoSpawnRateSlider" Minimum="0.1" Maximum="120" Value="2"
                        Style="{StaticResource SliderStyle}" ValueChanged="AutoSpawnRateSlider_ValueChanged" />
                <TextBlock Name="AutoSpawnRateValue" Text="2.0" Opacity="0.7" FontSize="11" />

                <TextBlock Text="Delay Between Shots (sec)" Style="{StaticResource LabelStyle}" />
                <Slider Name="AutoSpawnDelaySlider" Minimum="0.1" Maximum="2" Value="0.5"
                        Style="{StaticResource SliderStyle}" ValueChanged="AutoSpawnDelaySlider_ValueChanged" />
                <TextBlock Name="AutoSpawnDelayValue" Text="0.5" Opacity="0.7" FontSize="11" />

                <CheckBox Name="RandomLaunchAngleCheckBox" Content="Random Launch Angle" Margin="0,8,0,4"
                          Checked="RandomLaunchAngleCheckBox_Changed" Unchecked="RandomLaunchAngleCheckBox_Changed" />

                <StackPanel Name="LaunchAnglePanel" Visibility="Collapsed">
                    <TextBlock Text="Min Launch Angle (°)" Style="{StaticResource LabelStyle}" />
                    <Slider Name="MinLaunchAngleSlider" Minimum="-90" Maximum="90" Value="-45"
                            Style="{StaticResource SliderStyle}" ValueChanged="MinLaunchAngleSlider_ValueChanged" />
                    <TextBlock Name="MinLaunchAngleValue" Text="-45°" Opacity="0.7" FontSize="11" />

                    <TextBlock Text="Max Launch Angle (°)" Style="{StaticResource LabelStyle}" />
                    <Slider Name="MaxLaunchAngleSlider" Minimum="-90" Maximum="90" Value="45"
                            Style="{StaticResource SliderStyle}" ValueChanged="MaxLaunchAngleSlider_ValueChanged" />
                    <TextBlock Name="MaxLaunchAngleValue" Text="45°" Opacity="0.7" FontSize="11" />

                    <TextBlock Text="0° = straight up, -90° = left, 90° = right"
                               Opacity="0.6" FontSize="10" Margin="0,4,0,0" />
                </StackPanel>
            </StackPanel>

            <!-- General Section -->
            <TextBlock Text="General" Style="{StaticResource SectionStyle}" />
            <CheckBox Name="DisplayParticleCountCheckBox" Content="Display Particle Count" Margin="0,4,0,4"
                      Checked="DisplayParticleCountCheckBox_Changed" Unchecked="DisplayParticleCountCheckBox_Changed" />
            <CheckBox Name="DisplayStyleCheckBox" Content="Display Style" Margin="0,0,0,8"
                      Checked="DisplayStyleCheckBox_Changed" Unchecked="DisplayStyleCheckBox_Changed" />
            <TextBlock Text="Max Particles" Style="{StaticResource LabelStyle}" />
            <Slider Name="MaxParticlesSlider" Minimum="1000" Maximum="30000" Value="5000"
                    Style="{StaticResource SliderStyle}" IsSnapToTickEnabled="True"
                    TickFrequency="100" SmallChange="100" LargeChange="1000"
                    ValueChanged="MaxParticlesSlider_ValueChanged" />
            <TextBlock Name="MaxParticlesValue" Text="5000" Opacity="0.7" FontSize="11" />

            <TextBlock Text="Max Fireworks" Style="{StaticResource LabelStyle}" />
            <Slider Name="MaxFireworksSlider" Minimum="1" Maximum="50" Value="25"
                    Style="{StaticResource SliderStyle}" IsSnapToTickEnabled="True"
                    TickFrequency="1" ValueChanged="MaxFireworksSlider_ValueChanged" />
            <TextBlock Name="MaxFireworksValue" Text="50" Opacity="0.7" FontSize="11" />

            <TextBlock Text="Particle Lifespan (sec)" Style="{StaticResource LabelStyle}" />
            <Slider Name="LifespanSlider" Minimum="0.5" Maximum="10" Value="2.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="LifespanSlider_ValueChanged" />
            <TextBlock Name="LifespanValue" Text="2.5" Opacity="0.7" FontSize="11" />

            <!-- Click Trigger Section -->
            <TextBlock Text="Click Trigger" Style="{StaticResource SectionStyle}" />
            <CheckBox Name="LeftClickCheckBox" Content="Spawn on Left Click" Margin="0,4,0,4"
                      IsChecked="True" Checked="LeftClickCheckBox_Changed" Unchecked="LeftClickCheckBox_Changed" />
            <CheckBox Name="RightClickCheckBox" Content="Spawn on Right Click" Margin="0,0,0,4"
                      IsChecked="False" Checked="RightClickCheckBox_Changed" Unchecked="RightClickCheckBox_Changed" />

            <TextBlock Text="Min Particles/Firework" Style="{StaticResource LabelStyle}" />
            <Slider Name="MinParticlesPerFireworkSlider" Minimum="10" Maximum="500" Value="50"
                    Style="{StaticResource SliderStyle}" IsSnapToTickEnabled="True"
                    TickFrequency="10" ValueChanged="MinParticlesPerFireworkSlider_ValueChanged" />
            <TextBlock Name="MinParticlesPerFireworkValue" Text="50" Opacity="0.7" FontSize="11" />

            <TextBlock Text="Max Particles/Firework" Style="{StaticResource LabelStyle}" />
            <Slider Name="MaxParticlesPerFireworkSlider" Minimum="10" Maximum="500" Value="150"
                    Style="{StaticResource SliderStyle}" IsSnapToTickEnabled="True"
                    TickFrequency="10" ValueChanged="MaxParticlesPerFireworkSlider_ValueChanged" />
            <TextBlock Name="MaxParticlesPerFireworkValue" Text="150" Opacity="0.7" FontSize="11" />

            <TextBlock Text="Explosion Force" Style="{StaticResource LabelStyle}" />
            <Slider Name="ClickForceSlider" Minimum="50" Maximum="1000" Value="300"
                    Style="{StaticResource SliderStyle}" ValueChanged="ClickForceSlider_ValueChanged" />
            <TextBlock Name="ClickForceValue" Text="300" Opacity="0.7" FontSize="11" />

            <CheckBox Name="EnableRandomExplosionSizeCheckBox" Content="Random Explosion Size" Margin="0,8,0,4"
                      IsChecked="False" Checked="EnableRandomExplosionSizeCheckBox_Changed" Unchecked="EnableRandomExplosionSizeCheckBox_Changed" />

            <StackPanel Name="RandomExplosionSizePanel" Visibility="Collapsed">
                <TextBlock Text="Min Explosion Size" Style="{StaticResource LabelStyle}" />
                <Slider Name="MinExplosionSizeSlider" Minimum="0.1" Maximum="2" Value="0.5"
                        Style="{StaticResource SliderStyle}" ValueChanged="MinExplosionSizeSlider_ValueChanged" />
                <TextBlock Name="MinExplosionSizeValue" Text="0.5" Opacity="0.7" FontSize="11" />

                <TextBlock Text="Max Explosion Size" Style="{StaticResource LabelStyle}" />
                <Slider Name="MaxExplosionSizeSlider" Minimum="0.5" Maximum="3" Value="1.5"
                        Style="{StaticResource SliderStyle}" ValueChanged="MaxExplosionSizeSlider_ValueChanged" />
                <TextBlock Name="MaxExplosionSizeValue" Text="1.5" Opacity="0.7" FontSize="11" />
            </StackPanel>

            <!-- Movement Trigger Section -->
            <TextBlock Text="Movement Trigger" Style="{StaticResource SectionStyle}" />
            <CheckBox Name="SpawnOnMoveCheckBox" Content="Spawn on Mouse Move" Margin="0,4,0,4"
                      IsChecked="False" Checked="SpawnOnMoveCheckBox_Changed" Unchecked="SpawnOnMoveCheckBox_Changed" />

            <TextBlock Text="Move Spawn Distance (px)" Style="{StaticResource LabelStyle}" />
            <Slider Name="MoveSpawnDistanceSlider" Minimum="20" Maximum="500" Value="100"
                    Style="{StaticResource SliderStyle}" ValueChanged="MoveSpawnDistanceSlider_ValueChanged" />
            <TextBlock Name="MoveSpawnDistanceValue" Text="100" Opacity="0.7" FontSize="11" />

            <TextBlock Text="Move Explosion Force" Style="{StaticResource LabelStyle}" />
            <Slider Name="MoveForceSlider" Minimum="30" Maximum="500" Value="150"
                    Style="{StaticResource SliderStyle}" ValueChanged="MoveForceSlider_ValueChanged" />
            <TextBlock Name="MoveForceValue" Text="150" Opacity="0.7" FontSize="11" />

            <!-- Particle Appearance Section -->
            <TextBlock Text="Particle Appearance" Style="{StaticResource SectionStyle}" />
            <TextBlock Text="Min Particle Size" Style="{StaticResource LabelStyle}" />
            <Slider Name="MinSizeSlider" Minimum="1" Maximum="20" Value="3"
                    Style="{StaticResource SliderStyle}" ValueChanged="MinSizeSlider_ValueChanged" />
            <TextBlock Name="MinSizeValue" Text="3.0" Opacity="0.7" FontSize="11" />

            <TextBlock Text="Max Particle Size" Style="{StaticResource LabelStyle}" />
            <Slider Name="MaxSizeSlider" Minimum="2" Maximum="50" Value="8"
                    Style="{StaticResource SliderStyle}" ValueChanged="MaxSizeSlider_ValueChanged" />
            <TextBlock Name="MaxSizeValue" Text="8.0" Opacity="0.7" FontSize="11" />

            <TextBlock Text="Glow Intensity" Style="{StaticResource LabelStyle}" />
            <Slider Name="GlowSlider" Minimum="0" Maximum="2" Value="0.8"
                    Style="{StaticResource SliderStyle}" ValueChanged="GlowSlider_ValueChanged" />
            <TextBlock Name="GlowValue" Text="0.8" Opacity="0.7" FontSize="11" />

            <CheckBox Name="EnableTrailsCheckBox" Content="Enable Trails" Margin="0,8,0,4"
                      IsChecked="True" Checked="EnableTrailsCheckBox_Changed" Unchecked="EnableTrailsCheckBox_Changed" />

            <TextBlock Text="Trail Length" Style="{StaticResource LabelStyle}" />
            <Slider Name="TrailLengthSlider" Minimum="0.1" Maximum="2" Value="0.3"
                    Style="{StaticResource SliderStyle}" ValueChanged="TrailLengthSlider_ValueChanged" />
            <TextBlock Name="TrailLengthValue" Text="0.3" Opacity="0.7" FontSize="11" />

            <!-- Physics Section -->
            <TextBlock Text="Physics" Style="{StaticResource SectionStyle}" />
            <TextBlock Text="Gravity" Style="{StaticResource LabelStyle}" />
            <Slider Name="GravitySlider" Minimum="0" Maximum="500" Value="150"
                    Style="{StaticResource SliderStyle}" ValueChanged="GravitySlider_ValueChanged" />
            <TextBlock Name="GravityValue" Text="150" Opacity="0.7" FontSize="11" />

            <TextBlock Text="Air Drag" Style="{StaticResource LabelStyle}" />
            <Slider Name="DragSlider" Minimum="0.9" Maximum="1" Value="0.98"
                    Style="{StaticResource SliderStyle}" ValueChanged="DragSlider_ValueChanged" />
            <TextBlock Name="DragValue" Text="0.98" Opacity="0.7" FontSize="11" />

            <TextBlock Text="Spread Angle (degrees)" Style="{StaticResource LabelStyle}" />
            <Slider Name="SpreadAngleSlider" Minimum="30" Maximum="360" Value="360"
                    Style="{StaticResource SliderStyle}" ValueChanged="SpreadAngleSlider_ValueChanged" />
            <TextBlock Name="SpreadAngleValue" Text="360" Opacity="0.7" FontSize="11" />

            <!-- Colors Section -->
            <TextBlock Text="Colors" Style="{StaticResource SectionStyle}" />
            <CheckBox Name="RainbowModeCheckBox" Content="Rainbow Mode" Margin="0,4,0,4"
                      IsChecked="True" Checked="RainbowModeCheckBox_Changed" Unchecked="RainbowModeCheckBox_Changed" />

            <TextBlock Text="Rainbow Speed" Style="{StaticResource LabelStyle}" />
            <Slider Name="RainbowSpeedSlider" Minimum="0.1" Maximum="5" Value="0.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="RainbowSpeedSlider_ValueChanged" />
            <TextBlock Name="RainbowSpeedValue" Text="0.5" Opacity="0.7" FontSize="11" />

            <CheckBox Name="RandomColorsCheckBox" Content="Use Random Colors" Margin="0,8,0,4"
                      IsChecked="True" Checked="RandomColorsCheckBox_Changed" Unchecked="RandomColorsCheckBox_Changed" />

            <TextBlock Text="Primary Color" Margin="0,8,0,2" />
            <Grid Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border Name="PrimaryColorPreview" Grid.Column="0" Width="24" Height="24"
                        CornerRadius="4" Background="#FF4D1A" BorderBrush="Gray"
                        BorderThickness="1" Margin="0,0,10,0" />
                <Button Grid.Column="1" Content="Pick Color" Background="#45475A"
                        Foreground="#CDD6F4" BorderThickness="0" Padding="10,4"
                        Click="PrimaryColorButton_Click" />
            </Grid>

            <TextBlock Text="Secondary Color" Margin="0,8,0,2" />
            <Grid Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border Name="SecondaryColorPreview" Grid.Column="0" Width="24" Height="24"
                        CornerRadius="4" Background="#FFCC33" BorderBrush="Gray"
                        BorderThickness="1" Margin="0,0,10,0" />
                <Button Grid.Column="1" Content="Pick Color" Background="#45475A"
                        Foreground="#CDD6F4" BorderThickness="0" Padding="10,4"
                        Click="SecondaryColorButton_Click" />
            </Grid>

            <!-- Secondary Explosion Section -->
            <TextBlock Text="Secondary Explosion" Style="{StaticResource SectionStyle}" />
            <CheckBox Name="EnableSecondaryCheckBox" Content="Enable Secondary Explosion" Margin="0,4,0,4"
                      IsChecked="True" Checked="EnableSecondaryCheckBox_Changed" Unchecked="EnableSecondaryCheckBox_Changed" />

            <TextBlock Text="Secondary Delay (sec)" Style="{StaticResource LabelStyle}" />
            <Slider Name="SecondaryDelaySlider" Minimum="0.2" Maximum="3" Value="0.8"
                    Style="{StaticResource SliderStyle}" ValueChanged="SecondaryDelaySlider_ValueChanged" />
            <TextBlock Name="SecondaryDelayValue" Text="0.8" Opacity="0.7" FontSize="11" />

            <TextBlock Text="Secondary Particle Count" Style="{StaticResource LabelStyle}" />
            <Slider Name="SecondaryCountSlider" Minimum="5" Maximum="100" Value="20"
                    Style="{StaticResource SliderStyle}" IsSnapToTickEnabled="True"
                    TickFrequency="5" ValueChanged="SecondaryCountSlider_ValueChanged" />
            <TextBlock Name="SecondaryCountValue" Text="20" Opacity="0.7" FontSize="11" />

            <TextBlock Text="Secondary Force" Style="{StaticResource LabelStyle}" />
            <Slider Name="SecondaryForceSlider" Minimum="20" Maximum="300" Value="100"
                    Style="{StaticResource SliderStyle}" ValueChanged="SecondaryForceSlider_ValueChanged" />
            <TextBlock Name="SecondaryForceValue" Text="100" Opacity="0.7" FontSize="11" />

            <!-- Rocket Mode Section -->
            <TextBlock Text="Rocket Mode" Style="{StaticResource SectionStyle}" />
            <CheckBox Name="EnableRocketModeCheckBox" Content="Enable Rocket Mode" Margin="0,4,0,4"
                      IsChecked="False" Checked="EnableRocketModeCheckBox_Changed" Unchecked="EnableRocketModeCheckBox_Changed" />

            <TextBlock Text="Rocket Speed" Style="{StaticResource LabelStyle}" />
            <Slider Name="RocketSpeedSlider" Minimum="100" Maximum="1500" Value="500"
                    Style="{StaticResource SliderStyle}" ValueChanged="RocketSpeedSlider_ValueChanged" />
            <TextBlock Name="RocketSpeedValue" Text="500" Opacity="0.7" FontSize="11" />

            <TextBlock Text="Min Explosion Altitude (%)" Style="{StaticResource LabelStyle}" />
            <Slider Name="RocketMinAltitudeSlider" Minimum="0.05" Maximum="0.5" Value="0.1"
                    Style="{StaticResource SliderStyle}" ValueChanged="RocketMinAltitudeSlider_ValueChanged" />
            <TextBlock Name="RocketMinAltitudeValue" Text="10%" Opacity="0.7" FontSize="11" />

            <TextBlock Text="Max Explosion Altitude (%)" Style="{StaticResource LabelStyle}" />
            <Slider Name="RocketMaxAltitudeSlider" Minimum="0.1" Maximum="0.8" Value="0.3"
                    Style="{StaticResource SliderStyle}" ValueChanged="RocketMaxAltitudeSlider_ValueChanged" />
            <TextBlock Name="RocketMaxAltitudeValue" Text="30%" Opacity="0.7" FontSize="11" />

            <TextBlock Text="Max Fuse Time (sec)" Style="{StaticResource LabelStyle}" />
            <Slider Name="RocketMaxFuseTimeSlider" Minimum="0.5" Maximum="5" Value="3.0"
                    Style="{StaticResource SliderStyle}" ValueChanged="RocketMaxFuseTimeSlider_ValueChanged" />
            <TextBlock Name="RocketMaxFuseTimeValue" Text="3.0" Opacity="0.7" FontSize="11" />

            <TextBlock Text="Rocket Size" Style="{StaticResource LabelStyle}" />
            <Slider Name="RocketSizeSlider" Minimum="0" Maximum="50" Value="12"
                    Style="{StaticResource SliderStyle}" ValueChanged="RocketSizeSlider_ValueChanged" />
            <TextBlock Name="RocketSizeValue" Text="12" Opacity="0.7" FontSize="11" />

            <!-- Rocket Appearance Section -->
            <TextBlock Text="Rocket Appearance" Style="{StaticResource SectionStyle}" />
            <CheckBox Name="RocketRainbowModeCheckBox" Content="Rocket Rainbow Mode" Margin="0,4,0,4"
                      IsChecked="True" Checked="RocketRainbowModeCheckBox_Changed" Unchecked="RocketRainbowModeCheckBox_Changed" />

            <TextBlock Text="Rocket Rainbow Speed" Style="{StaticResource LabelStyle}" />
            <Slider Name="RocketRainbowSpeedSlider" Minimum="0.1" Maximum="5" Value="0.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="RocketRainbowSpeedSlider_ValueChanged" />
            <TextBlock Name="RocketRainbowSpeedValue" Text="0.5" Opacity="0.7" FontSize="11" />

            <CheckBox Name="RocketRandomColorsCheckBox" Content="Rocket Random Colors" Margin="0,8,0,4"
                      IsChecked="True" Checked="RocketRandomColorsCheckBox_Changed" Unchecked="RocketRandomColorsCheckBox_Changed" />

            <TextBlock Text="Rocket Primary Color" Margin="0,8,0,2" />
            <Grid Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border Name="RocketPrimaryColorPreview" Grid.Column="0" Width="24" Height="24"
                        CornerRadius="4" Background="#FFCC33" BorderBrush="Gray"
                        BorderThickness="1" Margin="0,0,10,0" />
                <Button Grid.Column="1" Content="Pick Color" Background="#45475A"
                        Foreground="#CDD6F4" BorderThickness="0" Padding="10,4"
                        Click="RocketPrimaryColorButton_Click" />
            </Grid>

            <TextBlock Text="Rocket Secondary Color" Margin="0,8,0,2" />
            <Grid Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border Name="RocketSecondaryColorPreview" Grid.Column="0" Width="24" Height="24"
                        CornerRadius="4" Background="#FF661A" BorderBrush="Gray"
                        BorderThickness="1" Margin="0,0,10,0" />
                <Button Grid.Column="1" Content="Pick Color" Background="#45475A"
                        Foreground="#CDD6F4" BorderThickness="0" Padding="10,4"
                        Click="RocketSecondaryColorButton_Click" />
            </Grid>
        </StackPanel>
    </StackPanel>
</UserControl>
