<UserControl x:Class="MouseEffects.Effects.BlackHole.UI.BlackHoleSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Header Row: Enabled checkbox | Title | Fold/Unfold button -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox x:Name="EnabledCheckBox" Content="Enabled" Grid.Column="0"
                      VerticalAlignment="Center"
                      IsChecked="True" Checked="EnabledCheckBox_Changed" Unchecked="EnabledCheckBox_Changed"/>

            <TextBlock Text="Black Hole" Grid.Column="1"
                       FontWeight="Bold" FontSize="14"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0"/>

            <Button x:Name="FoldButton" Grid.Column="2"
                    Content="â–¼" Width="24" Height="24"
                    Background="Transparent" BorderThickness="0"
                    Click="FoldButton_Click" ToolTip="Expand/Collapse settings"/>
        </Grid>

        <!-- Description (always visible) -->
        <TextBlock Text="Creates gravitational lensing distortion around the mouse cursor, warping the screen like a real black hole"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0"/>

        <!-- Collapsible Content Panel -->
        <StackPanel x:Name="ContentPanel" Visibility="Collapsed" Margin="0,8,0,0">
            <!-- Black Hole Parameters -->
            <TextBlock Text="Black Hole Parameters" FontWeight="Bold" Margin="0,0,0,8"/>

            <TextBlock Text="Effect Radius (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RadiusSlider" Minimum="50" Maximum="500" Value="200"
                    SmallChange="10" LargeChange="50" TickFrequency="10"
                    Style="{StaticResource SliderStyle}" ValueChanged="RadiusSlider_ValueChanged"/>
            <TextBlock x:Name="RadiusValue" Text="200" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Distortion Strength" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="DistortionStrengthSlider" Minimum="0.1" Maximum="2.0" Value="1.0"
                    SmallChange="0.1" LargeChange="0.5" TickFrequency="0.1"
                    Style="{StaticResource SliderStyle}" ValueChanged="DistortionStrengthSlider_ValueChanged"/>
            <TextBlock x:Name="DistortionStrengthValue" Text="1.0" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Event Horizon Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="EventHorizonSlider" Minimum="0.0" Maximum="0.8" Value="0.3"
                    SmallChange="0.05" LargeChange="0.1" TickFrequency="0.05"
                    Style="{StaticResource SliderStyle}" ValueChanged="EventHorizonSlider_ValueChanged"/>
            <TextBlock x:Name="EventHorizonValue" Text="0.30" Opacity="0.7" FontSize="11"/>

            <!-- Accretion Disk Settings -->
            <Separator Margin="0,12,0,8"/>
            <TextBlock Text="Accretion Disk" FontWeight="Bold" Margin="0,0,0,8"/>

            <CheckBox x:Name="AccretionDiskCheckBox" Content="Enable Accretion Disk" Margin="0,0,0,8"
                      IsChecked="True" Checked="AccretionDiskCheckBox_Changed" Unchecked="AccretionDiskCheckBox_Changed"/>

            <StackPanel x:Name="AccretionDiskPanel" Visibility="Visible">
                <TextBlock Text="Disk Color" Style="{StaticResource LabelStyle}"/>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,8">
                    <Border x:Name="DiskColorPreview" Width="24" Height="24" BorderThickness="1"
                            BorderBrush="Gray" Background="#FF9933" Margin="0,0,8,0"/>
                    <Button x:Name="DiskColorPickerButton" Content="Pick Color..." Click="DiskColorPickerButton_Click"/>
                </StackPanel>

                <TextBlock Text="Rotation Speed" Style="{StaticResource LabelStyle}"/>
                <Slider x:Name="RotationSpeedSlider" Minimum="0.0" Maximum="2.0" Value="0.5"
                        SmallChange="0.1" LargeChange="0.5" TickFrequency="0.1"
                        Style="{StaticResource SliderStyle}" ValueChanged="RotationSpeedSlider_ValueChanged"/>
                <TextBlock x:Name="RotationSpeedValue" Text="0.5" Opacity="0.7" FontSize="11"/>

                <TextBlock Text="Glow Intensity" Style="{StaticResource LabelStyle}"/>
                <Slider x:Name="GlowIntensitySlider" Minimum="0.0" Maximum="3.0" Value="1.0"
                        SmallChange="0.1" LargeChange="0.5" TickFrequency="0.1"
                        Style="{StaticResource SliderStyle}" ValueChanged="GlowIntensitySlider_ValueChanged"/>
                <TextBlock x:Name="GlowIntensityValue" Text="1.0" Opacity="0.7" FontSize="11"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
