<UserControl x:Class="MouseEffects.Effects.ProceduralSigil.UI.ProceduralSigilSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="300"
             Foreground="White"
             Loaded="OnLoaded">
    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,8,0,4" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style x:Key="SectionStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,12,0,8" />
            <Setter Property="Foreground" Value="#89B4FA" />
            <Setter Property="FontSize" Value="13" />
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <!-- Description -->
        <TextBlock Text="Magical sigil with procedural geometry, runes, and glowing energy"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0" />

        <StackPanel Margin="0,8,0,0">

            <!-- Position -->
            <TextBlock Text="Position" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Position Mode" Style="{StaticResource LabelStyle}" />
            <ComboBox x:Name="PositionModeCombo" SelectionChanged="PositionModeCombo_Changed" Margin="0,0,0,8">
                <ComboBoxItem Content="Follow Cursor" IsSelected="True" />
                <ComboBoxItem Content="Screen Center" />
                <ComboBoxItem Content="Click to Summon" />
                <ComboBoxItem Content="Click at Cursor" />
            </ComboBox>

            <TextBlock Text="Sigil Size" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="SigilRadiusSlider" Grid.Column="0"
                        Minimum="100" Maximum="800" Value="200"
                        ValueChanged="SigilRadiusSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=SigilRadiusSlider, StringFormat={}{0:F0} px}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock x:Name="FadeDurationLabel" Text="Fade Duration" Style="{StaticResource LabelStyle}" />
            <Grid x:Name="FadeDurationGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="FadeDurationSlider" Grid.Column="0"
                        Minimum="0.5" Maximum="5" Value="2"
                        ValueChanged="FadeDurationSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=FadeDurationSlider, StringFormat={}{0:F1}s}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Appearance -->
            <TextBlock Text="Appearance" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Color Preset" Style="{StaticResource LabelStyle}" />
            <ComboBox x:Name="ColorPresetCombo" SelectionChanged="ColorPresetCombo_Changed" Margin="0,0,0,8">
                <ComboBoxItem Content="Shield of Fire" IsSelected="True" />
                <ComboBoxItem Content="Arcane Blue" />
                <ComboBoxItem Content="Dark Magic" />
                <ComboBoxItem Content="Holy Light" />
                <ComboBoxItem Content="Void" />
                <ComboBoxItem Content="Nature" />
                <ComboBoxItem Content="Custom" />
            </ComboBox>

            <TextBlock Text="Glow Intensity" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="GlowIntensitySlider" Grid.Column="0"
                        Minimum="0.5" Maximum="3" Value="1.5"
                        ValueChanged="GlowIntensitySlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=GlowIntensitySlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Line Thickness" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="LineThicknessSlider" Grid.Column="0"
                        Minimum="1" Maximum="5" Value="2"
                        ValueChanged="LineThicknessSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=LineThicknessSlider, StringFormat={}{0:F1} px}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Layers -->
            <TextBlock Text="Layers" Style="{StaticResource SectionStyle}" />

            <CheckBox x:Name="LayerCenterCheckBox" Content="Center Geometry"
                      IsChecked="True"
                      Checked="LayerCheckBox_Changed" Unchecked="LayerCheckBox_Changed"
                      Margin="0,4,0,4" />

            <CheckBox x:Name="LayerInnerCheckBox" Content="Inner Lattice"
                      IsChecked="True"
                      Checked="LayerCheckBox_Changed" Unchecked="LayerCheckBox_Changed"
                      Margin="0,4,0,4" />

            <CheckBox x:Name="LayerMiddleCheckBox" Content="Middle Rings"
                      IsChecked="True"
                      Checked="LayerCheckBox_Changed" Unchecked="LayerCheckBox_Changed"
                      Margin="0,4,0,4" />

            <CheckBox x:Name="LayerRunesCheckBox" Content="Rune Band"
                      IsChecked="True"
                      Checked="LayerCheckBox_Changed" Unchecked="LayerCheckBox_Changed"
                      Margin="0,4,0,4" />

            <CheckBox x:Name="LayerGlowCheckBox" Content="Outer Glow"
                      IsChecked="True"
                      Checked="LayerCheckBox_Changed" Unchecked="LayerCheckBox_Changed"
                      Margin="0,4,0,4" />

            <!-- Animation -->
            <TextBlock Text="Animation" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Rotation Speed" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="RotationSpeedSlider" Grid.Column="0"
                        Minimum="0" Maximum="2" Value="0.5"
                        ValueChanged="RotationSpeedSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=RotationSpeedSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <CheckBox x:Name="CounterRotateCheckBox" Content="Counter-Rotate Layers"
                      IsChecked="True"
                      Checked="CounterRotateCheckBox_Changed" Unchecked="CounterRotateCheckBox_Changed"
                      Margin="0,8,0,4" />

            <CheckBox x:Name="PulseCheckBox" Content="Pulse Effect"
                      IsChecked="True"
                      Checked="AnimationCheckBox_Changed" Unchecked="AnimationCheckBox_Changed"
                      Margin="0,4,0,4" />

            <TextBlock Text="Pulse Speed" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="PulseSpeedSlider" Grid.Column="0"
                        Minimum="0.5" Maximum="3" Value="1"
                        ValueChanged="PulseSpeedSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=PulseSpeedSlider, StringFormat={}{0:F1} Hz}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <CheckBox x:Name="MorphCheckBox" Content="Morph Patterns"
                      IsChecked="True"
                      Checked="AnimationCheckBox_Changed" Unchecked="AnimationCheckBox_Changed"
                      Margin="0,8,0,4" />

            <TextBlock Text="Rune Scroll Speed" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="RuneScrollSpeedSlider" Grid.Column="0"
                        Minimum="0" Maximum="1" Value="0.3"
                        ValueChanged="RuneScrollSpeedSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=RuneScrollSpeedSlider, StringFormat={}{0:F2}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

        </StackPanel>
    </StackPanel>
</UserControl>
