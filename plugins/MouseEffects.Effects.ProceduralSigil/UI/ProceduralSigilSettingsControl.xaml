<UserControl x:Class="MouseEffects.Effects.ProceduralSigil.UI.ProceduralSigilSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="300"
             Foreground="White"
             Loaded="OnLoaded">
    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,8,0,4" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style x:Key="SectionStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,12,0,8" />
            <Setter Property="Foreground" Value="#89B4FA" />
            <Setter Property="FontSize" Value="13" />
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <!-- Description -->
        <TextBlock Text="Magical sigil with procedural geometry, runes, and glowing energy"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0" />

        <StackPanel Margin="0,8,0,0">

            <!-- Alpha -->
            <TextBlock Text="Sigil Alpha" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="SigilAlphaSlider" Grid.Column="0"
                        Minimum="0" Maximum="1" Value="0.7"
                        ValueChanged="SigilAlphaSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=SigilAlphaSlider, StringFormat={}{0:F2}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Style Selection -->
            <TextBlock Text="Style" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Sigil Style" Style="{StaticResource LabelStyle}" />
            <ComboBox x:Name="SigilStyleCombo" SelectionChanged="SigilStyleCombo_Changed" Margin="0,0,0,8">
                <ComboBoxItem Content="Arcane Circle" IsSelected="True" />
                <ComboBoxItem Content="Triangle Mandala" />
                <ComboBoxItem Content="Moon" />
            </ComboBox>

            <!-- Position -->
            <TextBlock Text="Position" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Position Mode" Style="{StaticResource LabelStyle}" />
            <ComboBox x:Name="PositionModeCombo" SelectionChanged="PositionModeCombo_Changed" Margin="0,0,0,8">
                <ComboBoxItem Content="Follow Cursor" IsSelected="True" />
                <ComboBoxItem Content="Screen Center" />
                <ComboBoxItem Content="Click to Summon" />
                <ComboBoxItem Content="Click at Cursor" />
            </ComboBox>

            <TextBlock Text="Sigil Size" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="SigilRadiusSlider" Grid.Column="0"
                        Minimum="100" Maximum="800" Value="200"
                        ValueChanged="SigilRadiusSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=SigilRadiusSlider, StringFormat={}{0:F0} px}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock x:Name="FadeDurationLabel" Text="Fade Duration" Style="{StaticResource LabelStyle}" />
            <Grid x:Name="FadeDurationGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="FadeDurationSlider" Grid.Column="0"
                        Minimum="0.5" Maximum="5" Value="2"
                        ValueChanged="FadeDurationSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=FadeDurationSlider, StringFormat={}{0:F1}s}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Appearance -->
            <TextBlock Text="Appearance" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Color Preset" Style="{StaticResource LabelStyle}" />
            <ComboBox x:Name="ColorPresetCombo" SelectionChanged="ColorPresetCombo_Changed" Margin="0,0,0,8">
                <ComboBoxItem Content="Shield of Fire" IsSelected="True" />
                <ComboBoxItem Content="Arcane Blue" />
                <ComboBoxItem Content="Dark Magic" />
                <ComboBoxItem Content="Holy Light" />
                <ComboBoxItem Content="Void" />
                <ComboBoxItem Content="Nature" />
                <ComboBoxItem Content="Custom" />
            </ComboBox>

            <TextBlock Text="Glow Intensity" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="GlowIntensitySlider" Grid.Column="0"
                        Minimum="0.5" Maximum="3" Value="1.5"
                        ValueChanged="GlowIntensitySlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=GlowIntensitySlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Line Thickness" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="LineThicknessSlider" Grid.Column="0"
                        Minimum="1" Maximum="5" Value="2"
                        ValueChanged="LineThicknessSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=LineThicknessSlider, StringFormat={}{0:F1} px}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Layers -->
            <TextBlock Text="Layers" Style="{StaticResource SectionStyle}" />

            <CheckBox x:Name="LayerCenterCheckBox" Content="Center Geometry"
                      IsChecked="True"
                      Checked="LayerCheckBox_Changed" Unchecked="LayerCheckBox_Changed"
                      Margin="0,4,0,4" />

            <CheckBox x:Name="LayerInnerCheckBox" Content="Inner Lattice"
                      IsChecked="True"
                      Checked="LayerCheckBox_Changed" Unchecked="LayerCheckBox_Changed"
                      Margin="0,4,0,4" />

            <CheckBox x:Name="LayerMiddleCheckBox" Content="Middle Rings"
                      IsChecked="True"
                      Checked="LayerCheckBox_Changed" Unchecked="LayerCheckBox_Changed"
                      Margin="0,4,0,4" />

            <CheckBox x:Name="LayerRunesCheckBox" Content="Rune Band"
                      IsChecked="True"
                      Checked="LayerCheckBox_Changed" Unchecked="LayerCheckBox_Changed"
                      Margin="0,4,0,4" />

            <CheckBox x:Name="LayerGlowCheckBox" Content="Outer Glow"
                      IsChecked="True"
                      Checked="LayerCheckBox_Changed" Unchecked="LayerCheckBox_Changed"
                      Margin="0,4,0,4" />

            <!-- Animation -->
            <TextBlock Text="Animation" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Rotation Speed" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="RotationSpeedSlider" Grid.Column="0"
                        Minimum="0" Maximum="2" Value="0.5"
                        ValueChanged="RotationSpeedSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=RotationSpeedSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <CheckBox x:Name="CounterRotateCheckBox" Content="Counter-Rotate Layers"
                      IsChecked="True"
                      Checked="CounterRotateCheckBox_Changed" Unchecked="CounterRotateCheckBox_Changed"
                      Margin="0,8,0,4" />

            <CheckBox x:Name="PulseCheckBox" Content="Pulse Effect"
                      IsChecked="True"
                      Checked="AnimationCheckBox_Changed" Unchecked="AnimationCheckBox_Changed"
                      Margin="0,4,0,4" />

            <TextBlock Text="Pulse Speed" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="PulseSpeedSlider" Grid.Column="0"
                        Minimum="0.5" Maximum="3" Value="1"
                        ValueChanged="PulseSpeedSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=PulseSpeedSlider, StringFormat={}{0:F1} Hz}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <CheckBox x:Name="MorphCheckBox" Content="Morph Patterns"
                      IsChecked="True"
                      Checked="AnimationCheckBox_Changed" Unchecked="AnimationCheckBox_Changed"
                      Margin="0,8,0,4" />

            <TextBlock Text="Rune Scroll Speed" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="RuneScrollSpeedSlider" Grid.Column="0"
                        Minimum="0" Maximum="1" Value="0.3"
                        ValueChanged="RuneScrollSpeedSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=RuneScrollSpeedSlider, StringFormat={}{0:F2}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Energy Particles (applies to all styles) -->
            <TextBlock Text="Energy Particles" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Particle Type" Style="{StaticResource LabelStyle}" />
            <ComboBox x:Name="ParticleTypeCombo" SelectionChanged="ParticleTypeCombo_Changed" Margin="0,0,0,8">
                <ComboBoxItem Content="None" IsSelected="True" />
                <ComboBoxItem Content="Fire" />
                <ComboBoxItem Content="Electricity" />
                <ComboBoxItem Content="Mixed" />
            </ComboBox>

            <TextBlock Text="Particle Intensity" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="ParticleIntensitySlider" Grid.Column="0"
                        Minimum="0" Maximum="1" Value="0"
                        ValueChanged="ParticleIntensitySlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=ParticleIntensitySlider, StringFormat={}{0:F2}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Particle Speed" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="ParticleSpeedSlider" Grid.Column="0"
                        Minimum="0.1" Maximum="3" Value="1"
                        ValueChanged="ParticleSpeedSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=ParticleSpeedSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Particle Entropy" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="ParticleEntropySlider" Grid.Column="0"
                        Minimum="0" Maximum="1" Value="0.5"
                        ValueChanged="ParticleEntropySlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=ParticleEntropySlider, StringFormat={}{0:F2}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Particle Size" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="ParticleSizeSlider" Grid.Column="0"
                        Minimum="0.1" Maximum="5" Value="1"
                        ValueChanged="ParticleSizeSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=ParticleSizeSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Fire Rise Height" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="FireRiseHeightSlider" Grid.Column="0"
                        Minimum="0.1" Maximum="2" Value="0.4"
                        ValueChanged="FireRiseHeightSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=FireRiseHeightSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Electricity Spread" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="ElectricitySpreadSlider" Grid.Column="0"
                        Minimum="0.1" Maximum="5" Value="1"
                        ValueChanged="ElectricitySpreadSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=ElectricitySpreadSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Wind Simulation -->
            <TextBlock Text="Wind" Style="{StaticResource SectionStyle}" />

            <CheckBox x:Name="WindEnabledCheckBox" Content="Wind Simulation"
                      IsChecked="True"
                      Checked="WindEnabledCheckBox_Changed" Unchecked="WindEnabledCheckBox_Changed"
                      Margin="0,4,0,4" />

            <TextBlock Text="Wind Strength" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="WindStrengthSlider" Grid.Column="0"
                        Minimum="0" Maximum="3" Value="0.5"
                        ValueChanged="WindStrengthSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=WindStrengthSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Wind Turbulence" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="WindTurbulenceSlider" Grid.Column="0"
                        Minimum="0" Maximum="2" Value="0.5"
                        ValueChanged="WindTurbulenceSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=WindTurbulenceSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Fire Particle Pool -->
            <TextBlock Text="Fire Particles" Style="{StaticResource SectionStyle}" />

            <CheckBox x:Name="FireParticleEnabledCheckBox" Content="Enable Fire Particles"
                      IsChecked="False"
                      Checked="FireParticleEnabledCheckBox_Changed" Unchecked="FireParticleEnabledCheckBox_Changed"
                      Margin="0,4,0,4" />

            <TextBlock Text="Spawn Location" Style="{StaticResource LabelStyle}" />
            <ComboBox x:Name="FireSpawnLocationCombo" SelectionChanged="FireSpawnLocationCombo_Changed" Margin="0,0,0,8">
                <ComboBoxItem Content="Inner Ring" IsSelected="True" />
                <ComboBoxItem Content="Rune Band" />
            </ComboBox>

            <TextBlock Text="Render Order" Style="{StaticResource LabelStyle}" />
            <ComboBox x:Name="FireRenderOrderCombo" SelectionChanged="FireRenderOrderCombo_Changed" Margin="0,0,0,8">
                <ComboBoxItem Content="Behind Sigil" IsSelected="True" />
                <ComboBoxItem Content="On Top of Sigil" />
            </ComboBox>

            <TextBlock Text="Particle Alpha" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="FireParticleAlphaSlider" Grid.Column="0"
                        Minimum="0" Maximum="1" Value="1"
                        ValueChanged="FireParticleAlphaSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=FireParticleAlphaSlider, StringFormat={}{0:F2}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Particle Count" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="FireParticleCountSlider" Grid.Column="0"
                        Minimum="100" Maximum="1000" Value="300"
                        IsSnapToTickEnabled="True" TickFrequency="50"
                        ValueChanged="FireParticleCountSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=FireParticleCountSlider, StringFormat={}{0:F0}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Spawn Rate" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="FireSpawnRateSlider" Grid.Column="0"
                        Minimum="10" Maximum="100" Value="30"
                        ValueChanged="FireSpawnRateSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=FireSpawnRateSlider, StringFormat={}{0:F0}/s}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Fire Particle Size" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="FireParticleSizeSlider" Grid.Column="0"
                        Minimum="2" Maximum="20" Value="8"
                        ValueChanged="FireParticleSizeSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=FireParticleSizeSlider, StringFormat={}{0:F0} px}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Fire Lifetime" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="FireLifetimeSlider" Grid.Column="0"
                        Minimum="0.5" Maximum="4" Value="2"
                        ValueChanged="FireLifetimeSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=FireLifetimeSlider, StringFormat={}{0:F1}s}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Rise Speed" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="FireRiseSpeedSlider" Grid.Column="0"
                        Minimum="30" Maximum="150" Value="60"
                        ValueChanged="FireRiseSpeedSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=FireRiseSpeedSlider, StringFormat={}{0:F0} px/s}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Fire Turbulence" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="FireTurbulenceSlider" Grid.Column="0"
                        Minimum="0" Maximum="1" Value="0.3"
                        ValueChanged="FireTurbulenceSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=FireTurbulenceSlider, StringFormat={}{0:F2}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <CheckBox x:Name="FireWindEnabledCheckBox" Content="Use Wind Settings"
                      IsChecked="True"
                      Checked="FireWindEnabledCheckBox_Changed" Unchecked="FireWindEnabledCheckBox_Changed"
                      Margin="0,8,0,4" />

            <!-- Triangle Mandala Settings (only visible when Triangle Mandala style selected) -->
            <StackPanel x:Name="TriangleMandalaPanel" Visibility="Collapsed">
                <TextBlock Text="Triangle Mandala" Style="{StaticResource SectionStyle}" />

                <TextBlock Text="Triangle Layers" Style="{StaticResource LabelStyle}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="TriangleLayersSlider" Grid.Column="0"
                            Minimum="1" Maximum="5" Value="3"
                            IsSnapToTickEnabled="True" TickFrequency="1"
                            ValueChanged="TriangleLayersSlider_Changed" />
                    <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=TriangleLayersSlider, StringFormat={}{0:F0}}"
                               Width="60" TextAlignment="Right" Margin="8,0,0,0" />
                </Grid>

                <TextBlock Text="Zoom Speed" Style="{StaticResource LabelStyle}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="ZoomSpeedSlider" Grid.Column="0"
                            Minimum="0" Maximum="2" Value="0.5"
                            ValueChanged="ZoomSpeedSlider_Changed" />
                    <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=ZoomSpeedSlider, StringFormat={}{0:F1}}"
                               Width="60" TextAlignment="Right" Margin="8,0,0,0" />
                </Grid>

                <TextBlock Text="Zoom Amount" Style="{StaticResource LabelStyle}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="ZoomAmountSlider" Grid.Column="0"
                            Minimum="0" Maximum="1" Value="0.3"
                            ValueChanged="ZoomAmountSlider_Changed" />
                    <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=ZoomAmountSlider, StringFormat={}{0:F2}}"
                               Width="60" TextAlignment="Right" Margin="8,0,0,0" />
                </Grid>

                <TextBlock Text="Inner Triangles" Style="{StaticResource LabelStyle}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="InnerTrianglesSlider" Grid.Column="0"
                            Minimum="2" Maximum="8" Value="4"
                            IsSnapToTickEnabled="True" TickFrequency="1"
                            ValueChanged="InnerTrianglesSlider_Changed" />
                    <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=InnerTrianglesSlider, StringFormat={}{0:F0}}"
                               Width="60" TextAlignment="Right" Margin="8,0,0,0" />
                </Grid>

                <TextBlock Text="Fractal Depth" Style="{StaticResource LabelStyle}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="FractalDepthSlider" Grid.Column="0"
                            Minimum="1" Maximum="5" Value="3"
                            ValueChanged="FractalDepthSlider_Changed" />
                    <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=FractalDepthSlider, StringFormat={}{0:F1}}"
                               Width="60" TextAlignment="Right" Margin="8,0,0,0" />
                </Grid>
            </StackPanel>

            <!-- Moon Settings (only visible when Moon style selected) -->
            <StackPanel x:Name="MoonPanel" Visibility="Collapsed">
                <TextBlock Text="Moon Style" Style="{StaticResource SectionStyle}" />

                <TextBlock Text="Moon Phase Rotation" Style="{StaticResource LabelStyle}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="MoonPhaseRotationSlider" Grid.Column="0"
                            Minimum="-1" Maximum="1" Value="0.1"
                            ValueChanged="MoonPhaseRotationSlider_Changed" />
                    <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=MoonPhaseRotationSlider, StringFormat={}{0:F2}}"
                               Width="60" TextAlignment="Right" Margin="8,0,0,0" />
                </Grid>

                <TextBlock Text="Zodiac Rotation" Style="{StaticResource LabelStyle}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="ZodiacRotationSlider" Grid.Column="0"
                            Minimum="-1" Maximum="1" Value="-0.15"
                            ValueChanged="ZodiacRotationSlider_Changed" />
                    <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=ZodiacRotationSlider, StringFormat={}{0:F2}}"
                               Width="60" TextAlignment="Right" Margin="8,0,0,0" />
                </Grid>

                <TextBlock Text="Tree of Life Size" Style="{StaticResource LabelStyle}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="TreeOfLifeScaleSlider" Grid.Column="0"
                            Minimum="0.2" Maximum="0.6" Value="0.35"
                            ValueChanged="TreeOfLifeScaleSlider_Changed" />
                    <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=TreeOfLifeScaleSlider, StringFormat={}{0:F2}}"
                               Width="60" TextAlignment="Right" Margin="8,0,0,0" />
                </Grid>

                <TextBlock Text="Cosmic Glow" Style="{StaticResource LabelStyle}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="CosmicGlowSlider" Grid.Column="0"
                            Minimum="0.5" Maximum="2" Value="1.0"
                            ValueChanged="CosmicGlowSlider_Changed" />
                    <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=CosmicGlowSlider, StringFormat={}{0:F1}}"
                               Width="60" TextAlignment="Right" Margin="8,0,0,0" />
                </Grid>
            </StackPanel>

        </StackPanel>
    </StackPanel>
</UserControl>
