<UserControl x:Class="MouseEffects.Effects.Hologram.UI.HologramSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Header Row: Enabled checkbox | Title | Fold/Unfold button -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox x:Name="EnabledCheckBox" Content="Enabled" Grid.Column="0"
                      VerticalAlignment="Center"
                      IsChecked="True" Checked="EnabledCheckBox_Changed" Unchecked="EnabledCheckBox_Changed"/>

            <TextBlock Text="Hologram" Grid.Column="1"
                       FontWeight="Bold" FontSize="14"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0"/>

            <Button x:Name="FoldButton" Grid.Column="2"
                    Content="â–¼" Width="24" Height="24"
                    Background="Transparent" BorderThickness="0"
                    Click="FoldButton_Click" ToolTip="Expand/Collapse settings"/>
        </Grid>

        <!-- Description (always visible) -->
        <TextBlock Text="Sci-fi holographic projection effect with scan lines and flickering around the mouse cursor"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0"/>

        <!-- Collapsible Content Panel -->
        <StackPanel x:Name="ContentPanel" Visibility="Collapsed" Margin="0,8,0,0">
            <!-- General Parameters -->
            <TextBlock Text="General Settings" FontWeight="Bold" Margin="0,0,0,8"/>

            <TextBlock Text="Effect Radius (px)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RadiusSlider" Minimum="100" Maximum="500" Value="250"
                    SmallChange="10" LargeChange="50" TickFrequency="10"
                    Style="{StaticResource SliderStyle}" ValueChanged="RadiusSlider_ValueChanged"/>
            <TextBlock x:Name="RadiusValue" Text="250" Opacity="0.7" FontSize="11"/>

            <!-- Color Settings -->
            <Separator Margin="0,12,0,8"/>
            <TextBlock Text="Color Settings" FontWeight="Bold" Margin="0,0,0,8"/>

            <TextBlock Text="Color Tint" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="ColorTintCombo" SelectionChanged="ColorTintCombo_SelectionChanged">
                <ComboBoxItem Content="Cyan" IsSelected="True"/>
                <ComboBoxItem Content="Blue"/>
                <ComboBoxItem Content="Green"/>
                <ComboBoxItem Content="Purple"/>
            </ComboBox>

            <TextBlock Text="Tint Strength" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="TintStrengthSlider" Minimum="0.0" Maximum="1.0" Value="0.6"
                    SmallChange="0.05" LargeChange="0.1" TickFrequency="0.05"
                    Style="{StaticResource SliderStyle}" ValueChanged="TintStrengthSlider_ValueChanged"/>
            <TextBlock x:Name="TintStrengthValue" Text="0.60" Opacity="0.7" FontSize="11"/>

            <!-- Scan Line Settings -->
            <Separator Margin="0,12,0,8"/>
            <TextBlock Text="Scan Lines" FontWeight="Bold" Margin="0,0,0,8"/>

            <TextBlock Text="Scan Line Density" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ScanLineDensitySlider" Minimum="50" Maximum="300" Value="150"
                    SmallChange="10" LargeChange="50" TickFrequency="10"
                    Style="{StaticResource SliderStyle}" ValueChanged="ScanLineDensitySlider_ValueChanged"/>
            <TextBlock x:Name="ScanLineDensityValue" Text="150" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Scan Line Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ScanLineSpeedSlider" Minimum="0.5" Maximum="5.0" Value="2.0"
                    SmallChange="0.1" LargeChange="0.5" TickFrequency="0.1"
                    Style="{StaticResource SliderStyle}" ValueChanged="ScanLineSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="ScanLineSpeedValue" Text="2.0" Opacity="0.7" FontSize="11"/>

            <!-- Visual Effects -->
            <Separator Margin="0,12,0,8"/>
            <TextBlock Text="Visual Effects" FontWeight="Bold" Margin="0,0,0,8"/>

            <TextBlock Text="Flicker Intensity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="FlickerIntensitySlider" Minimum="0.0" Maximum="0.5" Value="0.15"
                    SmallChange="0.05" LargeChange="0.1" TickFrequency="0.05"
                    Style="{StaticResource SliderStyle}" ValueChanged="FlickerIntensitySlider_ValueChanged"/>
            <TextBlock x:Name="FlickerIntensityValue" Text="0.15" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Edge Glow Strength" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="EdgeGlowSlider" Minimum="0.0" Maximum="2.0" Value="0.8"
                    SmallChange="0.1" LargeChange="0.5" TickFrequency="0.1"
                    Style="{StaticResource SliderStyle}" ValueChanged="EdgeGlowSlider_ValueChanged"/>
            <TextBlock x:Name="EdgeGlowValue" Text="0.8" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Noise Amount" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="NoiseSlider" Minimum="0.0" Maximum="1.0" Value="0.2"
                    SmallChange="0.05" LargeChange="0.1" TickFrequency="0.05"
                    Style="{StaticResource SliderStyle}" ValueChanged="NoiseSlider_ValueChanged"/>
            <TextBlock x:Name="NoiseValue" Text="0.20" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Chromatic Aberration" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ChromaticAberrationSlider" Minimum="0.0" Maximum="0.03" Value="0.008"
                    SmallChange="0.001" LargeChange="0.005" TickFrequency="0.001"
                    Style="{StaticResource SliderStyle}" ValueChanged="ChromaticAberrationSlider_ValueChanged"/>
            <TextBlock x:Name="ChromaticAberrationValue" Text="0.008" Opacity="0.7" FontSize="11"/>
        </StackPanel>
    </StackPanel>
</UserControl>
