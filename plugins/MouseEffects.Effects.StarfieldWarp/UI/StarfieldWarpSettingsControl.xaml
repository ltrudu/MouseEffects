<UserControl x:Class="MouseEffects.Effects.StarfieldWarp.UI.StarfieldWarpSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="300"
             Foreground="White"
             Loaded="OnLoaded">
    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,8,0,4" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style x:Key="SectionStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,12,0,8" />
            <Setter Property="Foreground" Value="#89B4FA" />
            <Setter Property="FontSize" Value="13" />
        </Style>
    </UserControl.Resources>

    <StackPanel>
            <!-- Star Field Settings -->
            <TextBlock Text="Star Field" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Star Count" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="StarCountSlider" Grid.Column="0"
                        Minimum="100" Maximum="1000" Value="500"
                        TickFrequency="50" IsSnapToTickEnabled="True"
                        ValueChanged="StarCountSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=StarCountSlider, StringFormat={}{0:F0}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Effect Radius" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="EffectRadiusSlider" Grid.Column="0"
                        Minimum="200" Maximum="1500" Value="800"
                        ValueChanged="EffectRadiusSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=EffectRadiusSlider, StringFormat={}{0:F0} px}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Depth Layers" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="DepthLayersSlider" Grid.Column="0"
                        Minimum="1" Maximum="5" Value="3"
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        ValueChanged="DepthLayersSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=DepthLayersSlider, StringFormat={}{0:F0}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Warp Settings -->
            <TextBlock Text="Warp Effect" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Warp Speed" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="WarpSpeedSlider" Grid.Column="0"
                        Minimum="0.1" Maximum="3" Value="1"
                        ValueChanged="WarpSpeedSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=WarpSpeedSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Streak Length" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="StreakLengthSlider" Grid.Column="0"
                        Minimum="0.1" Maximum="2" Value="0.5"
                        ValueChanged="StreakLengthSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=StreakLengthSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Appearance -->
            <TextBlock Text="Appearance" Style="{StaticResource SectionStyle}" />

            <TextBlock Text="Star Size" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="StarSizeSlider" Grid.Column="0"
                        Minimum="0.5" Maximum="5" Value="2"
                        ValueChanged="StarSizeSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=StarSizeSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <TextBlock Text="Star Brightness" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="StarBrightnessSlider" Grid.Column="0"
                        Minimum="0.1" Maximum="3" Value="1.2"
                        ValueChanged="StarBrightnessSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=StarBrightnessSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Color Settings -->
            <TextBlock Text="Colors" Style="{StaticResource SectionStyle}" />

            <CheckBox x:Name="ColorTintCheckBox" Content="Enable Color Tint"
                      IsChecked="True"
                      Checked="ColorTintCheckBox_Changed" Unchecked="ColorTintCheckBox_Changed"
                      Margin="0,4,0,8" />

            <!-- Tunnel Effect -->
            <TextBlock Text="Tunnel Effect" Style="{StaticResource SectionStyle}" />

            <CheckBox x:Name="TunnelEffectCheckBox" Content="Enable Tunnel Effect"
                      IsChecked="True"
                      Checked="TunnelEffectCheckBox_Changed" Unchecked="TunnelEffectCheckBox_Changed"
                      Margin="0,4,0,4" />

            <TextBlock Text="Tunnel Darkness" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="TunnelDarknessSlider" Grid.Column="0"
                        Minimum="0" Maximum="1" Value="0.3"
                        ValueChanged="TunnelDarknessSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=TunnelDarknessSlider, StringFormat={}{0:F2}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>

            <!-- Pulse Effect -->
            <TextBlock Text="Pulse Effect" Style="{StaticResource SectionStyle}" />

            <CheckBox x:Name="PulseEffectCheckBox" Content="Enable Pulse Effect"
                      IsChecked="True"
                      Checked="PulseEffectCheckBox_Changed" Unchecked="PulseEffectCheckBox_Changed"
                      Margin="0,4,0,4" />

            <TextBlock Text="Pulse Speed" Style="{StaticResource LabelStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="PulseSpeedSlider" Grid.Column="0"
                        Minimum="0.1" Maximum="3" Value="1"
                        ValueChanged="PulseSpeedSlider_Changed" />
                <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=PulseSpeedSlider, StringFormat={}{0:F1}}"
                           Width="60" TextAlignment="Right" Margin="8,0,0,0" />
            </Grid>
    </StackPanel>
</UserControl>
