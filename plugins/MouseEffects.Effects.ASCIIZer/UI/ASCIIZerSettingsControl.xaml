<UserControl x:Class="MouseEffects.Effects.ASCIIZer.UI.ASCIIZerSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:filters="clr-namespace:MouseEffects.Effects.ASCIIZer.UI.Filters"
             mc:Ignorable="d" d:DesignWidth="320">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="SectionStyle">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,12,0,8"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Header Row -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox x:Name="EnabledCheckBox" Content="Enabled" Grid.Column="0"
                      VerticalAlignment="Center"
                      IsChecked="True" Checked="EnabledCheckBox_Changed" Unchecked="EnabledCheckBox_Changed"/>

            <TextBlock Text="ASCIIZer" Grid.Column="1"
                       FontWeight="Bold" FontSize="14"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0"/>

            <Button x:Name="FoldButton" Grid.Column="2"
                    Content="&#x25BC;" Width="24" Height="24"
                    Background="Transparent" BorderThickness="0"
                    Click="FoldButton_Click" ToolTip="Expand/Collapse settings"/>
        </Grid>

        <!-- Description -->
        <TextBlock Text="Renders screen as ASCII art with multiple filter styles and customization."
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0"/>

        <!-- Collapsible Content -->
        <StackPanel x:Name="ContentPanel" Visibility="Collapsed" Margin="0,8,0,0">

            <!-- Filter Type Selection -->
            <TextBlock Text="Effect Filter" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="FilterTypeCombo" SelectionChanged="FilterTypeCombo_SelectionChanged" Margin="0,0,0,8">
                <ComboBoxItem Content="ASCII Art Classic" IsSelected="True"/>
                <ComboBoxItem Content="Matrix Rain" IsEnabled="False"/>
                <ComboBoxItem Content="Dot Matrix" IsEnabled="False"/>
                <ComboBoxItem Content="Typewriter" IsEnabled="False"/>
                <ComboBoxItem Content="Braille" IsEnabled="False"/>
                <ComboBoxItem Content="Edge ASCII" IsEnabled="False"/>
            </ComboBox>

            <Separator Margin="0,4,0,8"/>

            <!-- Filter-specific settings container -->
            <ContentControl x:Name="FilterSettingsHost"/>

        </StackPanel>
    </StackPanel>
</UserControl>
