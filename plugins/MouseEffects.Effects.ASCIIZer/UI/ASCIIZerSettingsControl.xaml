<UserControl x:Class="MouseEffects.Effects.ASCIIZer.UI.ASCIIZerSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:filters="clr-namespace:MouseEffects.Effects.ASCIIZer.UI.Filters"
             mc:Ignorable="d" d:DesignWidth="320">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="SectionStyle">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,12,0,8"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Description -->
        <TextBlock Text="Renders screen as ASCII art with multiple filter styles and customization."
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0"/>

        <StackPanel Margin="0,8,0,0">

            <!-- Filter Type Selection -->
            <TextBlock Text="Effect Filter" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="FilterTypeCombo" SelectionChanged="FilterTypeCombo_SelectionChanged" Margin="0,0,0,8">
                <ComboBoxItem Content="ASCII Art Classic" IsSelected="True"/>
                <ComboBoxItem Content="Matrix Rain"/>
                <ComboBoxItem Content="Dot Matrix"/>
                <ComboBoxItem Content="Typewriter"/>
                <ComboBoxItem Content="Braille"/>
                <ComboBoxItem Content="Edge ASCII"/>
            </ComboBox>

            <Separator Margin="0,4,0,8"/>

            <!-- Filter-specific settings container -->
            <ContentControl x:Name="FilterSettingsHost"/>

            <!-- Shared Post-Effects Settings (applies to all filters) -->
            <filters:PostEffectsSettings x:Name="PostEffectsPanel"/>

        </StackPanel>
    </StackPanel>
</UserControl>
