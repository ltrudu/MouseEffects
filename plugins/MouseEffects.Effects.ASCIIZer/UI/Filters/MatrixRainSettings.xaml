<UserControl x:Class="MouseEffects.Effects.ASCIIZer.UI.Filters.MatrixRainSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,6,0,2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ValueStyle">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <!-- Layout Mode -->
        <TextBlock Text="Layout Mode" Style="{StaticResource LabelStyle}"/>
        <ComboBox x:Name="LayoutModeCombo" SelectionChanged="LayoutModeCombo_Changed" Margin="0,0,0,4">
            <ComboBoxItem Content="Fullscreen" IsSelected="True"/>
            <ComboBoxItem Content="Circle (follows cursor)"/>
            <ComboBoxItem Content="Rectangle (follows cursor)"/>
        </ComboBox>

        <!-- Circle Settings -->
        <StackPanel x:Name="CircleSettingsPanel" Visibility="Collapsed">
            <TextBlock Text="Radius (pixels)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RadiusSlider" Minimum="50" Maximum="500" Value="200"
                    Style="{StaticResource SliderStyle}" ValueChanged="RadiusSlider_Changed"/>
            <TextBlock x:Name="RadiusValue" Text="200 px" Style="{StaticResource ValueStyle}"/>
        </StackPanel>

        <!-- Rectangle Settings -->
        <StackPanel x:Name="RectangleSettingsPanel" Visibility="Collapsed">
            <TextBlock Text="Width (pixels)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RectWidthSlider" Minimum="100" Maximum="800" Value="400"
                    Style="{StaticResource SliderStyle}" ValueChanged="RectWidthSlider_Changed"/>
            <TextBlock x:Name="RectWidthValue" Text="400 px" Style="{StaticResource ValueStyle}"/>

            <TextBlock Text="Height (pixels)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RectHeightSlider" Minimum="100" Maximum="600" Value="300"
                    Style="{StaticResource SliderStyle}" ValueChanged="RectHeightSlider_Changed"/>
            <TextBlock x:Name="RectHeightValue" Text="300 px" Style="{StaticResource ValueStyle}"/>
        </StackPanel>

        <Separator Margin="0,8,0,8"/>

        <!-- Rain Animation -->
        <TextBlock Text="Fall Speed" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="FallSpeedSlider" Minimum="0.5" Maximum="5" Value="2"
                Style="{StaticResource SliderStyle}" ValueChanged="FallSpeedSlider_Changed"/>
        <TextBlock x:Name="FallSpeedValue" Text="2.0x" Style="{StaticResource ValueStyle}"/>

        <TextBlock Text="Trail Length" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="TrailLengthSlider" Minimum="3" Maximum="25" Value="15"
                Style="{StaticResource SliderStyle}" ValueChanged="TrailLengthSlider_Changed"
                IsSnapToTickEnabled="True" TickFrequency="1"/>
        <TextBlock x:Name="TrailLengthValue" Text="15 chars" Style="{StaticResource ValueStyle}"/>

        <TextBlock Text="Character Cycle Speed" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="CharCycleSpeedSlider" Minimum="0.5" Maximum="3" Value="1"
                Style="{StaticResource SliderStyle}" ValueChanged="CharCycleSpeedSlider_Changed"/>
        <TextBlock x:Name="CharCycleSpeedValue" Text="1.0x" Style="{StaticResource ValueStyle}"/>

        <TextBlock Text="Column Density" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="ColumnDensitySlider" Minimum="0.3" Maximum="1" Value="0.7"
                Style="{StaticResource SliderStyle}" ValueChanged="ColumnDensitySlider_Changed"/>
        <TextBlock x:Name="ColumnDensityValue" Text="70%" Style="{StaticResource ValueStyle}"/>

        <Separator Margin="0,8,0,8"/>

        <!-- Appearance -->
        <TextBlock Text="Cell Width" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="CellWidthSlider" Minimum="6" Maximum="16" Value="10"
                Style="{StaticResource SliderStyle}" ValueChanged="CellWidthSlider_Changed"/>
        <TextBlock x:Name="CellWidthValue" Text="10 px" Style="{StaticResource ValueStyle}"/>

        <TextBlock Text="Cell Height" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="CellHeightSlider" Minimum="10" Maximum="24" Value="16"
                Style="{StaticResource SliderStyle}" ValueChanged="CellHeightSlider_Changed"/>
        <TextBlock x:Name="CellHeightValue" Text="16 px" Style="{StaticResource ValueStyle}"/>

        <Separator Margin="0,8,0,8"/>

        <!-- Colors -->
        <TextBlock Text="Primary Color" Style="{StaticResource LabelStyle}"/>
        <Grid Margin="0,0,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="PrimaryColorTextBox" Text="#00FF41" TextChanged="PrimaryColorTextBox_Changed"/>
            <Rectangle x:Name="PrimaryColorPreview" Grid.Column="1" Width="24" Height="24" Margin="4,0,0,0"
                       Fill="#00FF41" Stroke="White" StrokeThickness="1"/>
        </Grid>

        <TextBlock Text="Glow Color" Style="{StaticResource LabelStyle}"/>
        <Grid Margin="0,0,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="GlowColorTextBox" Text="#AAFFAA" TextChanged="GlowColorTextBox_Changed"/>
            <Rectangle x:Name="GlowColorPreview" Grid.Column="1" Width="24" Height="24" Margin="4,0,0,0"
                       Fill="#AAFFAA" Stroke="White" StrokeThickness="1"/>
        </Grid>

        <TextBlock Text="Glow Intensity" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="GlowIntensitySlider" Minimum="0" Maximum="1" Value="0.8"
                Style="{StaticResource SliderStyle}" ValueChanged="GlowIntensitySlider_Changed"/>
        <TextBlock x:Name="GlowIntensityValue" Text="80%" Style="{StaticResource ValueStyle}"/>

        <Separator Margin="0,8,0,8"/>

        <!-- Background -->
        <TextBlock Text="Background Fade" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="BackgroundFadeSlider" Minimum="0" Maximum="1" Value="0.3"
                Style="{StaticResource SliderStyle}" ValueChanged="BackgroundFadeSlider_Changed"/>
        <TextBlock x:Name="BackgroundFadeValue" Text="30%" Style="{StaticResource ValueStyle}"/>

        <TextBlock Text="Brightness" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="BrightnessSlider" Minimum="-0.3" Maximum="0.3" Value="0"
                Style="{StaticResource SliderStyle}" ValueChanged="BrightnessSlider_Changed"/>
        <TextBlock x:Name="BrightnessValue" Text="0.00" Style="{StaticResource ValueStyle}"/>

        <TextBlock Text="Contrast" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="ContrastSlider" Minimum="0.5" Maximum="2" Value="1"
                Style="{StaticResource SliderStyle}" ValueChanged="ContrastSlider_Changed"/>
        <TextBlock x:Name="ContrastValue" Text="1.00" Style="{StaticResource ValueStyle}"/>
    </StackPanel>
</UserControl>
