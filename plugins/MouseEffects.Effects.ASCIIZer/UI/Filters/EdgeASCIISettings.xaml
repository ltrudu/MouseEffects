<UserControl x:Class="MouseEffects.Effects.ASCIIZer.UI.Filters.EdgeASCIISettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,6,0,2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ValueStyle">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <!-- Layout Mode -->
        <TextBlock Text="Layout Mode" Style="{StaticResource LabelStyle}"/>
        <ComboBox x:Name="LayoutModeCombo" SelectionChanged="LayoutModeCombo_Changed" Margin="0,0,0,4">
            <ComboBoxItem Content="Fullscreen" IsSelected="True"/>
            <ComboBoxItem Content="Circle (follows cursor)"/>
            <ComboBoxItem Content="Rectangle (follows cursor)"/>
        </ComboBox>

        <!-- Circle Settings -->
        <StackPanel x:Name="CircleSettingsPanel" Visibility="Collapsed">
            <TextBlock Text="Radius (pixels)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RadiusSlider" Minimum="50" Maximum="500" Value="200"
                    Style="{StaticResource SliderStyle}" ValueChanged="RadiusSlider_Changed"/>
            <TextBlock x:Name="RadiusValue" Text="200 px" Style="{StaticResource ValueStyle}"/>
        </StackPanel>

        <!-- Rectangle Settings -->
        <StackPanel x:Name="RectangleSettingsPanel" Visibility="Collapsed">
            <TextBlock Text="Width (pixels)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RectWidthSlider" Minimum="100" Maximum="800" Value="400"
                    Style="{StaticResource SliderStyle}" ValueChanged="RectWidthSlider_Changed"/>
            <TextBlock x:Name="RectWidthValue" Text="400 px" Style="{StaticResource ValueStyle}"/>

            <TextBlock Text="Height (pixels)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RectHeightSlider" Minimum="100" Maximum="600" Value="300"
                    Style="{StaticResource SliderStyle}" ValueChanged="RectHeightSlider_Changed"/>
            <TextBlock x:Name="RectHeightValue" Text="300 px" Style="{StaticResource ValueStyle}"/>
        </StackPanel>

        <Separator Margin="0,8,0,8"/>

        <!-- Cell Size -->
        <TextBlock Text="Cell Width" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="CellWidthSlider" Minimum="4" Maximum="16" Value="8"
                Style="{StaticResource SliderStyle}" ValueChanged="CellWidthSlider_Changed"/>
        <TextBlock x:Name="CellWidthValue" Text="8 px" Style="{StaticResource ValueStyle}"/>

        <TextBlock Text="Cell Height" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="CellHeightSlider" Minimum="8" Maximum="24" Value="16"
                Style="{StaticResource SliderStyle}" ValueChanged="CellHeightSlider_Changed"/>
        <TextBlock x:Name="CellHeightValue" Text="16 px" Style="{StaticResource ValueStyle}"/>

        <Separator Margin="0,8,0,8"/>

        <!-- Edge Detection -->
        <TextBlock Text="Edge Threshold" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="EdgeThresholdSlider" Minimum="0.05" Maximum="0.5" Value="0.15"
                Style="{StaticResource SliderStyle}" ValueChanged="EdgeThresholdSlider_Changed"/>
        <TextBlock x:Name="EdgeThresholdValue" Text="15%" Style="{StaticResource ValueStyle}"/>

        <TextBlock Text="Line Thickness" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="LineThicknessSlider" Minimum="1" Maximum="3" Value="1"
                Style="{StaticResource SliderStyle}" ValueChanged="LineThicknessSlider_Changed"/>
        <TextBlock x:Name="LineThicknessValue" Text="1" Style="{StaticResource ValueStyle}"/>

        <CheckBox x:Name="ShowCornersCheckBox" Content="Show Corners (+)"
                  Checked="ShowCornersCheckBox_Changed" Unchecked="ShowCornersCheckBox_Changed"
                  Margin="0,6,0,4"/>

        <CheckBox x:Name="FillBackgroundCheckBox" Content="Show Background"
                  Checked="FillBackgroundCheckBox_Changed" Unchecked="FillBackgroundCheckBox_Changed"
                  Margin="0,6,0,4"/>

        <StackPanel x:Name="BackgroundOpacityPanel" Visibility="Collapsed">
            <TextBlock Text="Background Opacity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="BackgroundOpacitySlider" Minimum="0" Maximum="0.5" Value="0.3"
                    Style="{StaticResource SliderStyle}" ValueChanged="BackgroundOpacitySlider_Changed"/>
            <TextBlock x:Name="BackgroundOpacityValue" Text="30%" Style="{StaticResource ValueStyle}"/>
        </StackPanel>

        <TextBlock Text="Edge Brightness" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="EdgeBrightnessSlider" Minimum="0.5" Maximum="2.0" Value="1.0"
                Style="{StaticResource SliderStyle}" ValueChanged="EdgeBrightnessSlider_Changed"/>
        <TextBlock x:Name="EdgeBrightnessValue" Text="1.00" Style="{StaticResource ValueStyle}"/>

        <Separator Margin="0,8,0,8"/>

        <!-- Colors -->
        <TextBlock Text="Edge Color" Style="{StaticResource LabelStyle}"/>
        <Grid Margin="0,0,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="EdgeColorTextBox" Text="#00FF00" TextChanged="EdgeColorTextBox_Changed"/>
            <Rectangle x:Name="EdgeColorPreview" Grid.Column="1" Width="24" Height="24" Margin="4,0,0,0"
                       Fill="#00FF00" Stroke="White" StrokeThickness="1"/>
        </Grid>

        <TextBlock Text="Background Color" Style="{StaticResource LabelStyle}"/>
        <Grid Margin="0,0,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="BackgroundColorTextBox" Text="#000000" TextChanged="BackgroundColorTextBox_Changed"/>
            <Rectangle x:Name="BackgroundColorPreview" Grid.Column="1" Width="24" Height="24" Margin="4,0,0,0"
                       Fill="#000000" Stroke="White" StrokeThickness="1"/>
        </Grid>

        <Separator Margin="0,8,0,8"/>

        <!-- Brightness -->
        <TextBlock Text="Brightness" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="BrightnessSlider" Minimum="-0.5" Maximum="0.5" Value="0"
                Style="{StaticResource SliderStyle}" ValueChanged="BrightnessSlider_Changed"/>
        <TextBlock x:Name="BrightnessValue" Text="0.00" Style="{StaticResource ValueStyle}"/>

        <TextBlock Text="Contrast" Style="{StaticResource LabelStyle}"/>
        <Slider x:Name="ContrastSlider" Minimum="0.5" Maximum="2" Value="1"
                Style="{StaticResource SliderStyle}" ValueChanged="ContrastSlider_Changed"/>
        <TextBlock x:Name="ContrastValue" Text="1.00" Style="{StaticResource ValueStyle}"/>
    </StackPanel>
</UserControl>
