<UserControl x:Class="MouseEffects.Effects.Butterflies.UI.ButterfliesSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="CheckBox" x:Key="CheckBoxStyle">
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- Description -->
        <TextBlock Text="Beautiful butterflies that flutter and follow the mouse cursor"
                   Opacity="0.7" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0"/>

        <StackPanel Margin="0,8,0,0">

            <!-- Butterfly Count and Size Section -->
            <TextBlock Text="Butterfly Settings" FontWeight="Bold" FontSize="13" Margin="0,8,0,4"/>

            <TextBlock Text="Butterfly Count" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="ButterflyCountSlider" Minimum="1" Maximum="20" Value="8"
                    Style="{StaticResource SliderStyle}" ValueChanged="ButterflyCountSlider_ValueChanged"/>
            <TextBlock x:Name="ButterflyCountValue" Text="8" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Minimum Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MinSizeSlider" Minimum="5" Maximum="50" Value="15"
                    Style="{StaticResource SliderStyle}" ValueChanged="MinSizeSlider_ValueChanged"/>
            <TextBlock x:Name="MinSizeValue" Text="15" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Maximum Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxSizeSlider" Minimum="10" Maximum="80" Value="30"
                    Style="{StaticResource SliderStyle}" ValueChanged="MaxSizeSlider_ValueChanged"/>
            <TextBlock x:Name="MaxSizeValue" Text="30" Opacity="0.7" FontSize="11"/>

            <!-- Animation Section -->
            <TextBlock Text="Animation" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Wing Flap Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="WingFlapSpeedSlider" Minimum="1" Maximum="20" Value="8"
                    Style="{StaticResource SliderStyle}" ValueChanged="WingFlapSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="WingFlapSpeedValue" Text="8.0" Opacity="0.7" FontSize="11"/>

            <!-- Flight Behavior Section -->
            <TextBlock Text="Flight Behavior" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Follow Distance (pixels)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="FollowDistanceSlider" Minimum="20" Maximum="300" Value="100"
                    Style="{StaticResource SliderStyle}" ValueChanged="FollowDistanceSlider_ValueChanged"/>
            <TextBlock x:Name="FollowDistanceValue" Text="100" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Follow Strength" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="FollowStrengthSlider" Minimum="0.1" Maximum="1.0" Value="0.3"
                    Style="{StaticResource SliderStyle}" ValueChanged="FollowStrengthSlider_ValueChanged"/>
            <TextBlock x:Name="FollowStrengthValue" Text="0.30" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Wander Strength" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="WanderStrengthSlider" Minimum="0" Maximum="150" Value="50"
                    Style="{StaticResource SliderStyle}" ValueChanged="WanderStrengthSlider_ValueChanged"/>
            <TextBlock x:Name="WanderStrengthValue" Text="50" Opacity="0.7" FontSize="11"/>

            <!-- Visual Settings Section -->
            <TextBlock Text="Visual Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Glow Intensity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="GlowIntensitySlider" Minimum="0" Maximum="3" Value="1.0"
                    Style="{StaticResource SliderStyle}" ValueChanged="GlowIntensitySlider_ValueChanged"/>
            <TextBlock x:Name="GlowIntensityValue" Text="1.0" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Color Mode" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="ColorModeComboBox" SelectionChanged="ColorModeComboBox_SelectionChanged"
                      Margin="0,0,0,4">
                <ComboBoxItem Content="Rainbow" IsSelected="True"/>
                <ComboBoxItem Content="Pastel"/>
                <ComboBoxItem Content="Nature"/>
            </ComboBox>

            <TextBlock Text="Rainbow Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RainbowSpeedSlider" Minimum="0.1" Maximum="2.0" Value="0.3"
                    Style="{StaticResource SliderStyle}" ValueChanged="RainbowSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="RainbowSpeedValue" Text="0.3" Opacity="0.7" FontSize="11"/>
        </StackPanel>
    </StackPanel>
</UserControl>
