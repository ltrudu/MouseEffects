<UserControl x:Class="MouseEffects.Effects.Snowfall.UI.SnowfallSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Slider" x:Key="SliderStyle">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="CheckBox" x:Key="CheckBoxStyle">
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0">
            <!-- Spawn Settings Section -->
            <TextBlock Text="Spawn Settings" FontWeight="Bold" FontSize="13" Margin="0,8,0,4"/>

            <TextBlock Text="Snowflake Count (per second)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SnowflakeCountSlider" Minimum="10" Maximum="200" Value="50"
                    Style="{StaticResource SliderStyle}" ValueChanged="SnowflakeCountSlider_ValueChanged"/>
            <TextBlock x:Name="SnowflakeCountValue" Text="50" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Spawn Radius" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="SpawnRadiusSlider" Minimum="50" Maximum="400" Value="150"
                    Style="{StaticResource SliderStyle}" ValueChanged="SpawnRadiusSlider_ValueChanged"/>
            <TextBlock x:Name="SpawnRadiusValue" Text="150" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Snowflake Lifetime (seconds)" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="LifetimeSlider" Minimum="2" Maximum="20" Value="8"
                    Style="{StaticResource SliderStyle}" ValueChanged="LifetimeSlider_ValueChanged"/>
            <TextBlock x:Name="LifetimeValue" Text="8" Opacity="0.7" FontSize="11"/>

            <!-- Motion Settings Section -->
            <TextBlock Text="Motion Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Fall Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="FallSpeedSlider" Minimum="20" Maximum="200" Value="80"
                    Style="{StaticResource SliderStyle}" ValueChanged="FallSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="FallSpeedValue" Text="80" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Wind Strength" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="WindStrengthSlider" Minimum="0" Maximum="100" Value="30"
                    Style="{StaticResource SliderStyle}" ValueChanged="WindStrengthSlider_ValueChanged"/>
            <TextBlock x:Name="WindStrengthValue" Text="30" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Wind Frequency" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="WindFrequencySlider" Minimum="0.1" Maximum="3" Value="0.5"
                    Style="{StaticResource SliderStyle}" ValueChanged="WindFrequencySlider_ValueChanged"/>
            <TextBlock x:Name="WindFrequencyValue" Text="0.5" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Rotation Speed" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="RotationSpeedSlider" Minimum="0" Maximum="5" Value="1.0"
                    Style="{StaticResource SliderStyle}" ValueChanged="RotationSpeedSlider_ValueChanged"/>
            <TextBlock x:Name="RotationSpeedValue" Text="1.0" Opacity="0.7" FontSize="11"/>

            <!-- Appearance Settings Section -->
            <TextBlock Text="Appearance Settings" FontWeight="Bold" FontSize="13" Margin="0,16,0,4"/>

            <TextBlock Text="Min Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MinSizeSlider" Minimum="3" Maximum="30" Value="8"
                    Style="{StaticResource SliderStyle}" ValueChanged="MinSizeSlider_ValueChanged"/>
            <TextBlock x:Name="MinSizeValue" Text="8" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Max Size" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="MaxSizeSlider" Minimum="5" Maximum="50" Value="20"
                    Style="{StaticResource SliderStyle}" ValueChanged="MaxSizeSlider_ValueChanged"/>
            <TextBlock x:Name="MaxSizeValue" Text="20" Opacity="0.7" FontSize="11"/>

            <TextBlock Text="Glow/Sparkle Intensity" Style="{StaticResource LabelStyle}"/>
            <Slider x:Name="GlowIntensitySlider" Minimum="0.1" Maximum="3" Value="1.0"
                    Style="{StaticResource SliderStyle}" ValueChanged="GlowIntensitySlider_ValueChanged"/>
            <TextBlock x:Name="GlowIntensityValue" Text="1.0" Opacity="0.7" FontSize="11"/>
    </StackPanel>
</UserControl>
