<Window x:Class="MouseEffects.App.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="MouseEffects Settings"
        Height="650" Width="450"
        MinHeight="400" MinWidth="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
        <Style x:Key="EffectCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="MouseEffects" FontSize="24" FontWeight="Bold"
                       Foreground="{DynamicResource SystemControlForegroundAccentBrush}"/>
            <TextBlock Text="Configure your mouse effects" Opacity="0.7" Margin="0,5,0,15"/>
        </StackPanel>

        <!-- Effects List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel FlowDirection="LeftToRight" Margin="0,0,20,0">

                <!-- Theme Selection -->
                <Border Style="{StaticResource EffectCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Appearance" Style="{StaticResource HeaderStyle}" Margin="0"/>
                        <TextBlock Text="Choose your preferred theme"
                                   Opacity="0.7" FontSize="12" Margin="0,0,0,10"/>
                        <ComboBox x:Name="ThemeSelector" SelectionChanged="ThemeSelector_SelectionChanged">
                            <ComboBoxItem Content="System (follow Windows)" Tag="System"/>
                            <ComboBoxItem Content="Light" Tag="Light"/>
                            <ComboBoxItem Content="Dark" Tag="Dark"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- GPU Selection -->
                <Border Style="{StaticResource EffectCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Graphics Card" Style="{StaticResource HeaderStyle}" Margin="0"/>
                        <TextBlock Text="Select which GPU to use for rendering (requires restart)"
                                   Opacity="0.7" FontSize="12" Margin="0,0,0,10"/>
                        <ComboBox x:Name="GpuSelector" SelectionChanged="GpuSelector_SelectionChanged"/>
                        <TextBlock x:Name="CurrentGpuText" Opacity="0.5" FontSize="11" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Frame Rate -->
                <Border Style="{StaticResource EffectCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Frame Rate" Style="{StaticResource HeaderStyle}" Margin="0"/>
                        <TextBlock Text="Target rendering frame rate (higher = smoother but uses more CPU/GPU)"
                                   Opacity="0.7" FontSize="12" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="FrameRateSlider" Grid.Column="0"
                                    Minimum="30" Maximum="120" Value="60"
                                    TickFrequency="10" IsSnapToTickEnabled="True"
                                    ValueChanged="FrameRateSlider_ValueChanged"/>
                            <TextBlock x:Name="FrameRateValue" Grid.Column="1"
                                       Text="60 fps" HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <!-- FPS Counter -->
                        <StackPanel Margin="0,15,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox x:Name="ShowFpsCheckBox"
                                          Grid.Column="0"
                                          Content="Show FPS Counter"
                                          VerticalAlignment="Center"
                                          Checked="ShowFpsCheckBox_Changed"
                                          Unchecked="ShowFpsCheckBox_Changed"/>
                                <TextBlock x:Name="FpsCounterText"
                                           Grid.Column="1"
                                           Text="-- / -- fps"
                                           FontFamily="Consolas"
                                           FontSize="14"
                                           Foreground="#A6E3A1"
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"/>
                            </Grid>
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox x:Name="ShowFpsOverlayCheckBox"
                                          Grid.Column="0"
                                          Content="Show FPS on screen"
                                          VerticalAlignment="Center"
                                          Margin="0,0,0,0"
                                          Checked="ShowFpsOverlayCheckBox_Changed"
                                          Unchecked="ShowFpsOverlayCheckBox_Changed"/>
                                <TextBlock x:Name="CaptureFpsText"
                                           Grid.Column="1"
                                           Text="Cap: -- fps"
                                           FontFamily="Consolas"
                                           FontSize="12"
                                           Opacity="0.7"
                                           Foreground="#A6E3A1"
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- HDR Settings (only visible when HDR is supported) -->
                <Border x:Name="HdrSettingsCard" Style="{StaticResource EffectCardStyle}" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="HDR Mode" Style="{StaticResource HeaderStyle}" Margin="0"/>
                        <TextBlock Text="Enable HDR rendering for brighter effects on HDR displays (requires restart)"
                                   Opacity="0.7" FontSize="12" Margin="0,0,0,10"/>
                        <CheckBox x:Name="EnableHdrCheckBox"
                                  Content="Enable HDR Mode"
                                  ToolTip="Requires an HDR-capable display with Windows HDR enabled"
                                  Margin="0,0,0,10"
                                  Checked="EnableHdrCheckBox_Changed"
                                  Unchecked="EnableHdrCheckBox_Changed"/>
                        <TextBlock x:Name="HdrStatusText" Opacity="0.5" FontSize="11" Margin="0,0,0,10"/>
                        <StackPanel x:Name="HdrBrightnessPanel" Visibility="Collapsed">
                            <TextBlock Text="Peak Brightness Multiplier"
                                       Opacity="0.7" FontSize="12" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="HdrBrightnessSlider" Grid.Column="0"
                                        Minimum="1" Maximum="10" Value="4"
                                        TickFrequency="0.5" IsSnapToTickEnabled="True"
                                        ValueChanged="HdrBrightnessSlider_ValueChanged"/>
                                <TextBlock x:Name="HdrBrightnessValue" Grid.Column="1"
                                           Text="4.0x" HorizontalAlignment="Right"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Window Behavior -->
                <Border Style="{StaticResource EffectCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Window Behavior" Style="{StaticResource HeaderStyle}" Margin="0"/>
                        <TextBlock Text="Settings window display options"
                                   Opacity="0.7" FontSize="12" Margin="0,0,0,10"/>
                        <CheckBox x:Name="AlwaysOnTopCheckBox"
                                  Content="Always on top"
                                  ToolTip="Keep the settings window above other windows"
                                  Margin="0,0,0,5"
                                  Checked="AlwaysOnTopCheckBox_Changed"
                                  Unchecked="AlwaysOnTopCheckBox_Changed"/>
                    </StackPanel>
                </Border>

                <!-- Emergency Toggle -->
                <Border Style="{StaticResource EffectCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Emergency Toggle" Style="{StaticResource HeaderStyle}" Margin="0"/>
                        <TextBlock Text="Ways to toggle all effects on/off"
                                   Opacity="0.7" FontSize="12" Margin="0,0,0,10"/>
                        <CheckBox x:Name="ToggleHotkeyCheckBox"
                                  Content="Keyboard Shortcut (Alt+Shift+M)"
                                  ToolTip="Toggle all effects on/off using keyboard"
                                  Margin="0,0,0,5"
                                  Checked="ToggleHotkeyCheckBox_Changed"
                                  Unchecked="ToggleHotkeyCheckBox_Changed"/>
                        <CheckBox x:Name="RightClickToggleCheckBox"
                                  Content="Right Click Toggle"
                                  ToolTip="Toggle all effects on/off by right-clicking anywhere. Context menus will still work normally."
                                  Margin="0,0,0,5"
                                  Checked="RightClickToggleCheckBox_Changed"
                                  Unchecked="RightClickToggleCheckBox_Changed"/>
                        <CheckBox x:Name="MiddleClickToggleCheckBox"
                                  Content="Middle Click Toggle"
                                  ToolTip="Toggle all effects on/off by clicking the mouse wheel."
                                  Margin="0,0,0,0"
                                  Checked="MiddleClickToggleCheckBox_Changed"
                                  Unchecked="MiddleClickToggleCheckBox_Changed"/>
                    </StackPanel>
                </Border>

                <!-- Hotkeys -->
                <Border Style="{StaticResource EffectCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Hotkeys" Style="{StaticResource HeaderStyle}" Margin="0"/>
                        <TextBlock Text="Keyboard shortcuts for quick actions"
                                   Opacity="0.7" FontSize="12" Margin="0,0,0,10"/>
                        <CheckBox x:Name="SettingsHotkeyCheckBox"
                                  Content="Toggle Settings Window (Alt+Shift+L)"
                                  ToolTip="Show/hide the settings window"
                                  Margin="0,0,0,5"
                                  Checked="SettingsHotkeyCheckBox_Changed"
                                  Unchecked="SettingsHotkeyCheckBox_Changed"/>
                        <CheckBox x:Name="ScreenCaptureHotkeyCheckBox"
                                  Content="Screen Capture (Alt+Shift+S)"
                                  ToolTip="Captures the screen with overlay and copies to clipboard"
                                  Margin="0,0,0,5"
                                  Checked="ScreenCaptureHotkeyCheckBox_Changed"
                                  Unchecked="ScreenCaptureHotkeyCheckBox_Changed"/>
                        <CheckBox x:Name="ForceTopmostHotkeyCheckBox"
                                  Content="Force Topmost (Alt+Shift+T)"
                                  ToolTip="Force the overlay to be the topmost window (use if another window takes priority)"
                                  Margin="0,0,0,5"
                                  Checked="ForceTopmostHotkeyCheckBox_Changed"
                                  Unchecked="ForceTopmostHotkeyCheckBox_Changed"/>
                        <CheckBox x:Name="PreviousEffectHotkeyCheckBox"
                                  Content="Previous Effect (Alt+Shift+Up)"
                                  ToolTip="Cycle to the previous effect in the list"
                                  Margin="0,0,0,5"
                                  Checked="PreviousEffectHotkeyCheckBox_Changed"
                                  Unchecked="PreviousEffectHotkeyCheckBox_Changed"/>
                        <CheckBox x:Name="NextEffectHotkeyCheckBox"
                                  Content="Next Effect (Alt+Shift+Down)"
                                  ToolTip="Cycle to the next effect in the list"
                                  Checked="NextEffectHotkeyCheckBox_Changed"
                                  Unchecked="NextEffectHotkeyCheckBox_Changed"/>
                    </StackPanel>
                </Border>

                <!-- Effect Selection -->
                <Border Style="{StaticResource EffectCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Effect Selection" Style="{StaticResource HeaderStyle}" Margin="0"/>
                        <TextBlock Text="Choose an effect to display around your cursor"
                                   Opacity="0.7" FontSize="12" Margin="0,0,0,10"/>
                        <ContentControl x:Name="EffectSelectorHost"/>
                    </StackPanel>
                </Border>

                <!-- Effect Settings (dynamic content based on selection) -->
                <Border x:Name="EffectSettingsCard" Style="{StaticResource EffectCardStyle}" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock x:Name="EffectSettingsTitle" Text="Effect Settings"
                                   Style="{StaticResource HeaderStyle}" Margin="0"/>
                        <TextBlock x:Name="EffectSettingsHint"
                                   Text="Select an effect above to configure its settings"
                                   Opacity="0.5" FontStyle="Italic" Margin="0,10,0,0"
                                   Visibility="Collapsed"/>
                        <ContentControl x:Name="EffectSettingsHost" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Manage Settings Section -->
                <Border Style="{StaticResource EffectCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Manage Settings" Style="{StaticResource HeaderStyle}" Margin="0"/>
                        <TextBlock Text="Save, reload, export or import all settings including plugin configurations"
                                   Opacity="0.7" FontSize="12" Margin="0,0,0,10"/>

                        <!-- Save / Reload buttons -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="SaveSettingsButton" Grid.Column="0"
                                    Content="Save Settings"
                                    Height="32"
                                    Click="SaveSettingsButton_Click"/>

                            <Button x:Name="ReloadSettingsButton" Grid.Column="2"
                                    Content="Reload Settings"
                                    Height="32"
                                    Click="ReloadSettingsButton_Click"/>
                        </Grid>

                        <!-- Export / Import buttons -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="ExportSettingsButton" Grid.Column="0"
                                    Content="Export Settings"
                                    Height="32"
                                    Click="ExportSettingsButton_Click"/>

                            <Button x:Name="ImportSettingsButton" Grid.Column="2"
                                    Content="Import Settings"
                                    Height="32"
                                    Click="ImportSettingsButton_Click"/>
                        </Grid>

                        <TextBlock x:Name="BackupStatusText"
                                   Text="" Opacity="0.7" FontSize="11"
                                   Margin="0,8,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Updates Section -->
                <Border Style="{StaticResource EffectCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Updates" Style="{StaticResource HeaderStyle}" Margin="0"/>
                        <TextBlock Text="Configure automatic update behavior"
                                   Opacity="0.7" FontSize="12" Margin="0,0,0,10"/>

                        <!-- Current Version -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Current Version: " Opacity="0.7"/>
                            <TextBlock x:Name="VersionText" Text="0.0.0" FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Update Check Frequency -->
                        <TextBlock Text="Check for updates:" Margin="0,5,0,5"/>
                        <ComboBox x:Name="UpdateFrequencySelector"
                                  SelectionChanged="UpdateFrequencySelector_SelectionChanged">
                            <ComboBoxItem Content="On startup" Tag="OnStartup"/>
                            <ComboBoxItem Content="Daily" Tag="Daily"/>
                            <ComboBoxItem Content="Weekly" Tag="Weekly"/>
                            <ComboBoxItem Content="Never" Tag="Never"/>
                        </ComboBox>

                        <!-- Update Mode -->
                        <TextBlock Text="When update is available:" Margin="0,10,0,5"/>
                        <ComboBox x:Name="UpdateModeSelector"
                                  SelectionChanged="UpdateModeSelector_SelectionChanged">
                            <ComboBoxItem Content="Notify me" Tag="Notify"/>
                            <ComboBoxItem Content="Download silently" Tag="Silent"/>
                        </ComboBox>

                        <!-- Check Now Button -->
                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="UpdateStatusText" Grid.Column="0"
                                       Text="" Opacity="0.7" VerticalAlignment="Center"/>
                            <Button x:Name="CheckUpdateButton" Grid.Column="1"
                                    Content="Check Now" Width="100" Height="28"
                                    Click="CheckUpdateButton_Click"/>
                        </Grid>

                        <!-- Download/Apply Button (hidden by default) -->
                        <Button x:Name="ApplyUpdateButton"
                                Content="Download &amp; Install Update" Height="32"
                                Margin="0,10,0,0"
                                Style="{StaticResource AccentButtonStyle}"
                                Visibility="Collapsed"
                                Click="ApplyUpdateButton_Click"/>

                        <!-- Progress Bar (hidden by default) -->
                        <ui:ProgressBar x:Name="UpdateProgressBar"
                                        Height="6" Margin="0,10,0,0"
                                        Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="3" Margin="0,15,0,0">
            <Button Content="Close" Width="100" Height="30"
                    HorizontalAlignment="Center" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
